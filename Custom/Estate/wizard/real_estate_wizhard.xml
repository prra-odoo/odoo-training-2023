<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="launch_the_wizard" model="ir.actions.act_window">
        <field name="name">Launch the Wizard</field>
        <field name="res_model">real.estate.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="Estate.model_estate_property"/>
        <field name="binding_view_types">list</field>
    </record>

    
    <record id="estate_wizhard_view_form" model="ir.ui.view">
        <field name="name">estate_wizhard.view.form</field>
        <field name="model">real.estate.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="price" />
                        <!-- <field name="status" /> -->
                        <field name="partner_id" />
                    </group>
                </sheet>
                <footer>
                    <button string="Submit" class="btn btn-primary" type="object" name="calculate_property" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
