<?xml version="1.0"?>
<odoo>
  <record id="test_model_action" model="ir.actions.act_window">
    <field name="name"> Propertys</field>
    <field name="res_model">estate.property</field>
    <field name="context">{'search_default_state':True}</field>
    <field name="view_mode">tree,form,kanban</field>
  </record>
<!--             List(Tree)  View Estate Property    -->
   <record id="estate_propert_view_tree" model="ir.ui.view">
        <field name="name">estate_property_view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
          <header>
            <button type="action" name="%(Estate.launch_the_wizard)d"  string="Search for Flat Property"/>
              </header>
            <tree string="Channel" expand='1' decoration-success="state=='offer received'" decoration-muted="state=='sold'" decoration-danger="state=='canceled'">
                                
                <field name="name"/>
                <field name="seq_name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
<!--           Form View Estate_Property-->
  <record id="estate_property_view_form" model="ir.ui.view"> 
    <field name="name">estate_property_fromView </field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <form string="estate_form">
          <header>
            <!-- stat Buttons -->
            <button class="oe_highligh" name="sold_action_button" type="object"  string="Sold" />
            <button class="oe_highlight" name="cancel_action_button" type="object"  string="Cancel"/>
                  <!-- options="{'clickable':'1'}" -->
            <field name="state" widget='statusbar' />
          </header>
          <sheet>
            <field name="image" widget="image" class="oe_avatar"/>
            <!-- Add a Ribbon -->
            <widget name='web_ribbon' title='Sold' bg_color="bg-success" attrs='{"invisible": [("state", "not in", ["sold"])]}'/>
            <widget name='web_ribbon' title='Canceled' bg_color='bg-danger' attrs='{"invisible": [("state", "not in", ["canceled"])]}'/>
            <!-- Customer Name in Heading -->
              <h1 string="Customer Name">
                <field name="name" placeholder="Name"/>
             </h1>
              
              <p>
                <!--    Color changing tags -->
                <field name="tag_ids" widget="many2many_tags" soption="{'color_field': 'color'}"/>
              </p>
            <group> 
              <group>
                <field name="property_type_ID" string="Property Type"/>
                <field name="postcode"/>
                <field name="date_availability"/> 
              </group>

              
                <group>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="best_offer"/>
                </group>    
                
            </group>

         <notebook>
          <!-- Description Tab -->
                <page string="Description">
                  <group>
                     <field string="Bedrooms" name="bedrooms"/>
                     <field string="living Area(sqm)" name="living_area"/>
                     <field name="facades"/>
                     <field string="Description" name="description"/>
                     <field name="garden"/>
                     <!--    It is important to note that a field used in an attrs must be present in the view.  -->
                     <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                     <field name="garden_orientation" attrs="{'invisible':[('garden', '=', False)]}"/>
                     <field name="total_area"></field>
                  </group>
                </page>
          <!-- Offers Tab -->
                <page string="Offers">
                  <field name="offer_ids" attrs="{'readonly':[('state','in',['offer accepted','sold','canceled'])]}"/>
                </page>
          <!--   Other Info Tab -->
                <page string="Other Info">
                <group>
                  <field name="salesperson_id"/>
                  <field name="buyer_id"/>
                </group>
                </page>
        </notebook>
          </sheet>
        </form>
    </field>
  </record>
<!-- Search View -->
  <record id="search_estate_list" model="ir.ui.view">
    <field name="name">Estate_Property_Search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <search>
        <!-- <filter name="available" string="Available" domain="[('state', 'in', ['new','offer_received'])]" help="Show only Available" default="1"/> -->
        <field name="name"/>
        <field name="bedrooms"/>
        <field name="postcode"/>
        <field name="expected_price"/>
        <field name="garden_area"/>
        <field name="living_area" filter_domain="[('living_area','>=','self)]"/>
         <!-- <filter name="state" string="Available" domain="['|',('state', '=', 'new'), ('state','=','offer received')]"/> -->
         <filter name="state" string="Available" domain="[('state', 'in', ['new','offer_received'])]"/>
         <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
         <filter string="Bedrooms" name="Bedrooms" context="{'group_by':'bedrooms', 'residual_visible':True}"/>
         <group expand="1" string="Group By">
        </group>
        <filter string="Postcode" name="Postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
      </search>
    </field>
  </record>



  <record id="res_users_model_view_form" model="ir.ui.view">
    <field name="name">res.users.form.view</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="base.view_users_form"/>
    <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
              <page string = "Real Estate Properties">
                  <field name="property_ids"/>
              </page>
        </xpath>
    </field>
</record>


<record id="seq_task_order" model="ir.sequence">
  <field name="name">Estate sequence</field>
  <field name="code">estate.property</field>
  <field name="prefix">PE</field>
  <field name="padding">3</field>
  <!-- <field name="company_id" eval="False"/> -->
  </record>

  <record id="estate_view_kanban" model="ir.ui.view">
    <field name="name">estate.view.kanban</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <kanban default_group_by="property_type_ID" record_draggable="false">
        <field name="state"/>
        <templates>
          <group type="default">
            <t t-name="kanban-box">

              <div class="oe_kanban_global_click" >
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star text-warning" viewBox="0 0 16 16">
                  <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                </svg> 
                <div>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
                  </svg>
                    <span class="fs-1 mx-3"><field name="name"/></span>
                </div>
                  <field name="tag_ids" options="{'color_field': 'color'}"/>
                  <strong>Expected Price: </strong>
                  <strong class="text-primary">
                  <field name="expected_price"/>
                  </strong>
                  <div t-if="record.state.raw_value == 'offer received'">
                    <strong>Best Price: </strong>
                    <field name="best_offer"/>
                  </div>
                  <div t-if="record.state.raw_value=='offer accepted'">
                    <strong>Selling Price: </strong>
                    <span style="font-weight:bold;" class="text-primary">
                    <field name="selling_price"/>
                    </span>
                  </div>

              </div>
          </t>
        </group>
      </templates>
      </kanban>
    </field>
  </record>


</odoo>