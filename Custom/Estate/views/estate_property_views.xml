<?xml version="1.0"?>
<odoo>
  <record id="test_model_action" model="ir.actions.act_window">
    <field name="name"> Propertys</field>
    <field name="res_model">estate.property</field>
    <!-- <field name="view_mode">tree,form</field> -->
  </record>
<!--             List(Tree)  View Estate Property    -->
   <record id="estate_propert_view_tree" model="ir.ui.view">
        <field name="name">estate_property_view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel" expand='1'>
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>
<!--           Form View Estate_Property    -->
  <record id="estate_property_view_form" model="ir.ui.view"> 
    <field name="name">estate_property_fromView </field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <form string="estate_form">
          <sheet>
          <header>
                <field name="state" widget='statusbar' options="{'clickable':'1'}"/>
          </header>
              <h1>
                <field name="name"/>
             </h1>
              <p>
                <field name="tag_ids" widget="many2many_tags" />
              </p>
            <group> 
              <group>
                <field name="property_type_ID" string="Property Type"/>
                <field name="postcode"/>
                <field name="date_availability"/> 
              </group>

                <group>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="best_offer"/>
                </group>
            </group>

         <notebook>
          <!-- Description Tab -->
                <page string="Description">
                  <group>
                     <field string="Bedrooms" name="bedrooms"/>
                     <field string="living Area(sqm)" name="living_area"/>
                     <field name="facades"/>
                     <field string="Description" name="description"/>
                     <field name="garden"/>
                     <field name="garden_area"/>
                     <field name="garden_orientation"/>
                     <field name="total_area"></field>
                  </group>
                </page>
          <!-- Offers Tab -->
                <page string="Offers">
                  <field name="offer_ids"/>
                </page>
          <!--   Other Info Tab -->
                <page string="Other Info">
                <group>
                  <field name="salesperson"/>
                  <field name="buyer"/>
                </group>
                </page>
        </notebook>
          </sheet>
        </form>
    </field>
  </record>
<!-- Search View -->
  <record id="search_estate_list" model="ir.ui.view">
    <field name="name">Estate_Property_Search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
        <field name="bedrooms"/>
        <field name="postcode"/>
        <field name="expected_price"/>
        <field name="garden_area"/>
         <separator/>
         <filter string="State" name="State" domain="['|',('state', '=', 'new'), ('state','=','offer received')]"/>
         <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
         <filter string="Bedrooms" name="Bedrooms" context="{'group_by':'bedrooms', 'residual_visible':True}"/>
         <group expand="1" string="Group By">
        </group>
        <filter string="Postcode" name="Postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
      </search>
    </field>
  </record>
</odoo>