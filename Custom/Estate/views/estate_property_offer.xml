<?xml version="1.0" ?>
<odoo>
    <record id="stat_button_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <!-- <field name="view_mode">tree,form</field> -->
        <field name="domain">[('property_type_id','=',active_id)]</field>
        <field name="help" type="html">
            <!-- <p class="o_view_nocontent_smiling_face">
            Create a new Property Offer
            </p> -->
            <tree>
            <field name="property_type_id"/>
            </tree>
        </field>
    </record>

    <!-- Tree View in estate-Offer -->
    <record id="estate_property_offer_view" model="ir.ui.view"> 
    <field name="name">estate_property_Offer_View </field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
    <tree editable="bottom" decoration-danger="status=='refused'" decoration-success="status=='accepted'">
        <field name="price"/>
        <field name="partner_id"/>
        <field name="status" invisible="1"/>
        <field name="validity"/>
        <field name="date_deadline" optional="hide"/>
        <button name="accept_action_estate_offer" type="object" icon="fa-check" title="Check-Yes" attrs="{'invisible':[('status','in',['accepted','refused'])]}"/>
        <button name="refuse_action_estate_offer" type="object" icon="fa-close" title="close-No" attrs="{'invisible':[('status','in',['accepted','refused'])]}"/>
    </tree>
    </field>
    </record>
<!-- Form View in estate-Offer -->
    <record id="estate_offer_view_form" model="ir.ui.view">
        <field name="name">estate_property_offer_view_form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="estate-offer-form">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="status"/>
                        <field name="validity"/>
                        <field name="date_deadline" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>





















