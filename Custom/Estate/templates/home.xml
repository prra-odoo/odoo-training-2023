<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="index">
        <t t-call="website.layout">
            <t t-set="title">Academy</t>
            <div class="oe_structure">
                <div class="container">

                        <div class="row">
                             <t t-foreach = "property" t-as="p">
                                <div class="col-sm  mx-1 mt-2 " >

                                    <div class="card" style="width: 18rem;">
                                        <img t-attf-src="data:image/*;base64,{{p.image}}" class="card-img-top" style="width:200px" height="200px"/>
                                        <div class="card-body">
                                          <h5 class="card-title"><t t-esc="p.name"> </t></h5>
                                          <p class="card-text">  
                                      <t t-esc="p.expected_price"> </t>
                                        </p>
                                        <a t-attf-href="/property/{{ slug(p) }}" class="text-decoration-none">
                                            Go
                                        </a>
                                        </div>
                                    </div>
                                    
                                    
                                </div>
                            </t>

                        </div>
                </div>

                

            </div>
            <div class="d-flex justify-content-center my-3">
                <t t-call="website.pager"/>
            </div>
            
        </t>
    </template>

    <template id="property_details_view">
        <t t-call="website.layout">
            <t t-set="title">Estate-Info</t>
            <div class="oe_structure">
                <div class="container">

                    <hr/>

                    <div class="d-flex justify-content-around">
                        <!-- first div -->   
                            
                            <!-- Second div -->
                            
                                <div class="col border shadow mt-5 mb-3 text-center">
                                    <div class="p-2 "> Name : <t t-esc="plot.name"> </t> </div>
                                     <div class="p-2">Expected Price :       <t t-esc="plot.expected_price"> </t></div>
                                    <div class="p-2">Postcode :  <t t-esc="plot.postcode"> </t> </div>
                                </div>


                                <div class="text-center " style=":hover transform: scale(1.5);">
                                    <img t-attf-src="data:image/*;base64,{{plot.image}}"
                                        style="width:50%;"
                                        class="card-img-top"
                                    />
                                </div>

                                <div class="col border shadow mt-5 mb-3">
                                     <div class="p-2">Bedrooms : <t t-esc="plot.bedrooms"> </t></div>
                                     <div class=" p-2">Living Area : <t t-esc="plot.living_area"> </t> </div>
                                    <div class="p-2">Garden Area :  <t t-esc="plot.garden_area"> </t> </div>
                                    <!-- <t t-esc="plot.offer_ids.price"> </t>  -->
                                </div>

                        
                    </div>
                    <hr/>

                    </div>
                    <div class="text-center mt-5 h2">OFFERS</div>

                    <table class="table ">
                        <thead>
                          <tr>
                            
                            <th scope="col">Price</th>
                            <th scope="col">Buyer</th>
                            <th scope="col">Validity</th>
                            <th scope="col">Date Deadline</th>
                            <th scope="col">Status</th>
                          </tr>
                        </thead>
                        <tbody>
                            <t t-set="offers" t-value="plot.mapped('offer_ids')"/>
                            <tr t-foreach="offers" t-as="offer">
                                <td>
                                    <span t-field="offer.price"/>
                                </td>
                                <td>
                                    <span t-field="offer.partner_id"/>
                                </td>
                                <td>
                                    <span t-field="offer.validity"/>
                                </td>
                                <td>
                                    <span t-field="offer.date_deadline"/>
                                </td>
                                <td>
                                    <span t-field="offer.status"/>
                                </td> 
                            </tr>
                        
                        </tbody>
                      </table>
                        
                        
            </div>
        </t>
    </template>
</odoo>
