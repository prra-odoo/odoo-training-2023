<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_available":1}</field>
    </record>
    <record id ="estate_model_action_quality" model="ir.actions.act_window">
        <field name="name">Quality</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="estate_model_action_quantity" model="ir.actions.act_window">
        <field name="name">Quantity</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="estate_model_action_availability" model="ir.actions.act_window">
        <field name="name">Availability</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="estate_model_action_property_type" model="ir.actions.act_window">
        <field name="name">Property types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
        
    </record>
    <record id="estate_model_action_property_tag" model="ir.actions.act_window">
        <field name="name">Property tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>

    </record>
    <record id ="estate_model_action_property_offer" model="ir.actions.act_window">
        <field name="name">property offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <!-- ________________________Tree_View____________________ -->

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.treeview</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="tree view" decoration-success="state in ('offer_accepted','offer_recieved')" decoration-bf="state=='offer_accepted'" decoration-muted ="state=='sold'">
                <field name ="state" invisible="1"/>
                <field name="name"></field>
                <field name="property_type_id"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="postcode"></field>
                <field name="bedrooms"></field>
                <field name="living_area"></field>
                <field name="garden_area" optional="hide"></field>
                <field name="date_availability" optional="hide"></field>
                <field name="expected_price"></field>
            </tree>
        </field>
    </record>

    <!-- ________________________FORM VIEW____________________ -->


    <record id="estate_model_form" model="ir.ui.view">
        <field name="name">estate.model.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="estate_form">
                <header>
                    <button name ="sold_product" string="Sold" type="object" attrs="{'invisible':['|',('state','=','sold'),('state','=','cancelled')]}" class="oe_highlight"/>
                    <button name ="cancelled_product" string="cancelled" type="object" attrs="{'invisible':['|',('state','=','sold'),('state','=','cancelled')]}"/>
                    <button name="%(estate_model_action_property_type)d" type ="action" string="type" />

                    <field name="state" widget="statusbar"   />
                    <!-- options= "{'clickable': '1'}" -->
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Sold" bg_color="bg-success" attrs="{'invisible': [('state', '!=', 'sold')]}"/>
                    <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" attrs="{'invisible': [('state', '!=','cancelled')]}"/>
                    
                    <label for="name"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group style="margin-top:30px">
                            <field name="state" />
                        </group>
                        <group style="margin-top:30px">
                            <field name="property_type_id" widget='selection'/>
                            
                        </group>
                        <group style="margin-top:30px">
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group style="margin-top:30px">
                            <field name="postcode"/>
                        </group>
                      
                        <group style="margin-top:30px">
                            <field name="date_availability"/>
                        </group>
                        <group style="margin-top:30px">
                            <field name="expected_price"/>
                        </group>
                        <group style="margin-top:30px">
                            <field name="selling_price"/>
                        </group>
                        <group style="margin-top:30px">
                            <field name="best_offers"/>
                        </group>
                    </group>
                    <group style="margin-top:30px">
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Property  Descriptions">
                            <group>
                                <group style="margin-top:30px">
                                    <field name="bedrooms"/>
                                </group>
                                <group style="margin-top:30px">
                                    <field name="living_area"/>
                                </group>
                                <group style="margin-top:30px">
                                    <field name="facades"/>
                                </group>
                                <group style="margin-top:30px">
                                    <field name="garage"/>
                                </group> 
                                <group style="margin-top:30px">
                                    <field name="total_area"/>
                                </group>  
                            </group>
                        </page>
                        <page string="garden descriptions">
                            <group>
                                <group style="margin-top:30px">
                                    <field name="garden" />
                                </group>
                                <group style="margin-top:30px">
                                    <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                </group>
                                <group style="margin-top:30px">
                                    <field name="garden_orientation" attrs = "{'invisible':[('garden','=',False)]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="sale info">
                            <group>
                                <group style="margin-top:30px" >
                                    <field name="buyer_id"/>
                                </group>
                                <group style="margin-top:30px">
                                    <field name="salesperson_id" widget="many2one_avatar"/>
                                </group>
                                <group style="margin-top:30px">
                                    <field name="sold_date" />
                                </group>
                            </group>
                        </page>
                        <page string="Offers" >
                            <field name="offer_ids" attrs= "{'readonly':['|',('state','=','offer_accepted'),'|',('state','=','sold'),('state','=','cancelled')]}" >
                                <tree editable = "bottom" decoration-danger ="status=='refused'" decoration-success="status=='accepted'">
                                    
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <button name="accepted_offer" type = "object" string="accept" icon ="fa-check" attrs = "{'invisible':['|',('status','=','accepted'),('status','=','refused')]}" />
                                    <button name = "rejected_offer"  type ="object" string = "refuse" icon ="fa-times" attrs = "{'invisible':['|',('status','=','accepted'),('status','=','refused')]}"/>
                                    
                                    <field name="status" />
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <field name ="property_type_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <!-- ________________________Search VIEW____________________ -->

    <record id="estate_model_search" model="ir.ui.view">
        <field name="name">estate.model.search_view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="estate_search">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <!-- <field name="living_area"/> -->
                <field name="facades"/>
                <field name="property_type_id"/>
                
                <filter name="available" string = "Available" domain="['|', ('state', '=', 'new'),('state', '=', 'offer_recieved')]"/>
                <filter string="Last month sold" name="last month sale" domain="[('sold_date','&gt;=',(context_today() + relativedelta(months=-1)))]"/>

                <separator/>
                <field name="living_area" string="Living Area" filter_domain="[('living_area','>=',self)]"/>
                <filter name="expected_price" string = "high rate property" domain="[('expected_price', '>=', '300001')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
     </record>

    <!-- ________________________List view estate_property_tag____________________ -->
    <record id = "estate_property_tag_list_view" model="ir.ui.view">
        <field name ="name">estate.property.tag.list.view</field>
        <field name ="model">estate.property.tag</field>
        <field name ="arch" type="xml">
            <tree editable="bottom">
                <field name ="name"/>
            </tree>
        </field>
    </record>

    <!-- ________________________list view estate_property_offer____________________ -->

    <record id ="estate_property_offers_tree_view" model="ir.ui.view">
        <field name="name">estate.property.offer.form.view</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type ="xml">
           <tree decoration-danger ="status=='refused'" decoration-success="status=='accepted'">
                <field name="price"/>
                <field  name="status"/>
                <field name="partner_id"/>
                <field name="date_deadline"/>
                <field name="validity"/>
                <field name="property_type_id"/>
           </tree>
        </field>
    </record> 
    
    <!-- _______________________adding the page of property in the users form view -->
    <record id="res_users_view_form" model="ir.ui.view">
        <field name="name">res.users.view.form.inherit.gamification</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr = "//page[@name = 'preferences']" position = "after">
                <page name = "real estate page" string = "real estate">
                    <field name = "property_ids"/>
                </page>

            </xpath>
        </field>
    </record>  
</odoo>
