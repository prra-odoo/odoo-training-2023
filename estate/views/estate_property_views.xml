<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="estate_properties_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
         <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new Property!
          </p>
        </field>
    </record>

     <record id="estate_properties_views_list" model="ir.ui.view">
        <field name="name">Properties</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="last_seen"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
            </tree>
        </field>
    </record>
   <record id="estate_properties_views_form" model="ir.ui.view">
        <field name="name">Properties</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
          <form string="Test">
            <sheet>
              <group>
                  <group>
                      <field name="postcode"/>
                      <field name="date_availability"/>
                  </group>
                  <group>
                      <field name="expected_price"/>
                      <field name="selling_price"/>
                      
                  </group>
                  <notebook>
                      <page string="Description">
                      <group>
                          <field name="name"/>
                      <field name="postcode"/>
                      <field name="date_availability"/>
                      <field name="last_seen"/>
                      <field name="expected_price"/>
                      <field name="selling_price"/>
                      <field name="bedrooms"/>
                      <field name="living_area"/>
                      <field name="facades"/>
                      <field name="garage"/>
                      <field name="garden"/>
                    </group>
                      </page>
                  </notebook>
              </group>
          </sheet>
      </form>
      </field>
</record>
<record id="estate_properties_view_search" model="ir.ui.view">
        <field name="name">Properties</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Tests">
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="last_seen"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="active"/>
                <field name="state"/>
                <separator/>
                <filter string="Available" name="inactive" domain="[('active', '=', False)]" context="{'group_by':'postcode', 'residual_visible':True}"/>
            </search>
        </field>
    </record>
</odoo>
