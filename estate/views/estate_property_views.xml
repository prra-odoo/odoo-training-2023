<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List/Tree View -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">Estate Property Tree View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="tree_view">
                <field name="name" string="Title"/>
                <field name="description" optional="hide"/>
                <field name="postcode"/>
                <field name="property_type_id" optional="show"/>
                <field name="date_availability" string="Available From"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area(sqm)"/>
                <field name="facades" optional="hide"/>
                <field name="garage" optional="hide"/>
                <field name="garden" optional="hide"/>
                <field name="garden_area" optional="hide"/>
                <field name="garden_orientation" optional="hide"/>
            </tree>
        </field>
    </record>
    <!-- Form View -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">Estate Property Form View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="form_view">
                <sheet>
                    <div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="property_type_id"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area" string="Living Area(sqm)"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="active"/>
                                <field name="state"/>
                            </group>
                        </page>
                        <!-- <page string="Info">
                        <group>
                            <field name="description"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                            <field name="active"/>
                            <field name="state"/>
                        </group>
                    </page> -->
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Search View -->
    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">Estate Property Search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="search_view">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <filter string="State Search" name="state_search" domain="['|',('state', '=', 'new'),('state', '=', 'offer_received')]"/>
                <group string="Group by">
                    <filter string="Postcode" name="groupby_postcode" context="{'group_by':'postcode'}"/>
                    <filter string="Garden" name="groupby_garden" context="{'group_by':'garden'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Action Menu -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Property
            </p>
        </field>
    </record>
</odoo>