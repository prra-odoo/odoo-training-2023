<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List/Tree View -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">Estate Property Tree View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="tree_view" decoration-success="state=='offer_received' or state=='offer_accepted'" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'" decoration-danger="state=='canceled'">
                <field name="property_seq"/>
                <field name="name" string="Title"/>
                <field name="property_type_id"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field':'colors'}"/>
                <field name="description" optional="hide"/>
                <field name="postcode"/>
                <field name="date_availability" string="Available From"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades" optional="hide"/>
                <field name="garage" optional="hide"/>
                <field name="garden" optional="hide"/>
                <field name="garden_area" optional="hide"/>
                <field name="garden_orientation" optional="hide"/>
                <field name="state" optional="hide"/>
            </tree>
        </field>
    </record>
    <!-- Form View -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">Estate Property Form View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="form_view">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable':'1'}"/>
                    <button name="action_sold" type="object" states="new,offer_received" string="Sold"/>
                    <button name="action_sold" class="oe_highlight" type="object" states="offer_accepted" string="Sold"/>
                    <button name="action_cancel" type="object" states="new,offer_received,offer_accepted" string="Cancel"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Sold" bg_color="bg-success" states="sold"/>
                    <widget name="web_ribbon" title="Canceled" bg_color="bg-danger" states="canceled"/>
                    <div>
                        <label for="name" string="Property Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field':'colors'}"/>
                    </div>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create':True, 'no_open':True}"/>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="property_seq"/>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                            </group>
                            <group attrs="{'invisible':[('garden','=',False)]}">
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                            </group>
                            <label for="total_area" string="Total Area"/>
                            <field name="total_area"/>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" attrs="{'readonly':[('state','in',['offer_accepted','sold','canceled'])]}"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="user_id"/>
                                <field name="buyer_id"/>
                                <field name="active"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>
    <!-- Kanban View -->
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">Estate Property Kanban View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="false">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <field name="is_favorite" widget="boolean_favorite" nolabel="1" class="me-2"/>
                                <strong><field name="name"/></strong>
                            </div>
                            <div t-if="record.buyer_id.value">
                                <i class="fa fa-user me-2"/>
                                <strong><field name="buyer_id" widget="many2one_avatar_partner"/></strong>
                            </div>
                            <div>
                                <strong>Expected Price : <field name="expected_price"/></strong>
                            </div>
                            <div t-if="record.state.raw_value=='offer_received'">
                                <strong>Best Offer : <field name="best_price"/></strong>
                            </div>
                            <div t-if="record.state.raw_value=='sold'">
                                <strong>Selling Price : <field name="selling_price"/></strong>                          
                            </div>
                            <div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'colors'}"/>
                            </div>
                            <!-- <div class="o_kanban_record_bottom"> -->
                                <!-- <div class="oe_kanban_bottom_left">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div> -->
                                <div class="oe_kanban_bottom_right float-end">
                                    <field name="kanban_state" class="me-2" widget="state_selection"/>
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            <!-- </div> -->
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- Search View -->
    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">Estate Property Search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="search_view">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <field name="tag_ids"/>
                <field name="user_id"/>
                <field name="buyer_id"/>
                <filter string="Available" name="available" domain="[('state', 'in', ['new','offer_received'])]"/>
                <group string="Group by">
                    <filter string="Postcode" name="groupby_postcode" context="{'group_by':'postcode'}"/>
                    <filter string="Garden" name="groupby_garden" context="{'group_by':'garden'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Sequence Numner -->
    <record id="seq_property_ref" model="ir.sequence">
        <field name="name">Property Reference</field>
        <field name="code">estate.property</field>
        <field name="prefix">PID</field>
        <field name="padding">3</field>
    </record>
    <!-- Action Menu -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_available':True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new property
            </p>
        </field>
    </record>
    <!-- Inherited View -->
    <record id="res_users_view_form" model="ir.ui.view">
        <field name="name">Res Users View Form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="after">
             <!-- <xpath expr="//page[@name='access_rights']" position="replace"> -->
                <page name="real_estate_properties" string="Real Estate Properties">
                    <field name="property_ids"/>
                </page>
             <!-- <xpath expr="//page[@name='real_estate_properties']" position="move"/> -->
            </xpath>
        </field>
    </record>
</odoo>