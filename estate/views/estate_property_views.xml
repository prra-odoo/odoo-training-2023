<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_types_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_tags_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name" string="Title"/>
                <!-- <field name="buyer_id" string="Buyer" optional="hide"/> -->
                <!-- <field name="salesperson_id" string="Salesperson"/> -->
                <!-- <field name="active"/> -->
                <!-- <field name="postcode"/> -->
                <!-- <field name="bedrooms"/> -->
                <!-- <field name="living_area" string="Living Area (sqm)"/> -->
                <field name="expected_price"/>
                <field name="state" string="Status"/>
                <!-- <field name="selling_price" optional="hide"/> -->
                <!-- <field name="date_availability" string="Available From" optional="hide"/> -->
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <header>
                    <button name="action_sold" string="Sold"
                            type="object" class="oe_highlight"/>

                    <button name="action_cancel" string="Cancel"
                            type="object" class="oe_highlight"/>
                        
                    <field name="state" widget="statusbar" options="{'clickable':'1'}"/>
                </header>        
                <sheet>
                    <label for="name" string="Property Name"/>
                    <h1><field name="name" placeholder="My New House"/></h1>
                    <field name="tag_ids" string="Tags" widget="many2many_tags"/>
                    <group>
                        <group>
                            <field name="state" string="Status"/>
                            <field name="property_type_id" string="Property Type"/>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price" string="Best Offer"/>
                            <field name="selling_price"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group col='2'>
                                    <group>
                                        <field name="description"/>
                                        <field name="bedrooms"/>
                                        <field name="facades"/>
                                        <field name="living_area" string="Living Area (sqm)"/>
                                        <field name="total_area" string="Total Area (sqm)"/>
                                        <field name="active"/>
                                    </group>
                                    <group string="Garden">
                                        <field name="garage"/>
                                        <field name="garden"/>
                                        <field name="garden_area" string="Garden Area (sqm)" attrs="{'readonly':[('garden','=',False)]}"/>
                                        <field name="garden_orientation" attrs="{'readonly':[('garden','=',False)]}"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Offers">
                                <field name="offer_ids"/>
                            </page>
                            
                            <page string="Other Info">
                                <group>
                                    <field name="buyer_id" string="Buyer"/>
                                    <field name="salesperson_id" string="Salesperson"/>
                                </group>                        
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Channel">
                <field name="name" string="Title"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area(sqm)"/>
                <field name="facades"/>
                <!--
                <filter string="Available" name="state" domain="['|',('state', '=', 'new'),('state','=','offer recieved')]"/>
                -->
                <filter string="Archived" name="active" domain="[('active', '=',False)]"/>
                <separator/>
                <filter string="My Properties" name="salesperson_id" domain="[('salesperson_id', '=','OdooBot')]"/>
                <separator/>
                <filter string="Available" name="state" domain="[('state', 'in',['new','offer recieved'])]"/>
                <separator/>
                <filter string="Garden" name="garden" domain="[('garden', '=','1')]"/>
                <separator/>
                <filter string="Cozy" name="bedrooms" domain="[('bedrooms', 'in',['1','2'])]"/>
                <filter string="Luxury" name="bedrooms" domain="[('bedrooms', '>','2')]"/>
                <group string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                        <filter string="Property Type" name="property_type_id" context="{'group_by':'property_type_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_type_view_list" model="ir.ui.view">
        <field name="name">estate.property.type.view.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="sequence" widget="handle"/>
                <field name="name" string="Title"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">estate.property.type.view.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <h1><field name="name"/></h1>
                <tree>
                    <field name="property_ids"/>
                </tree>
            </form>
        </field>
    </record>

    <record id="estate_property_type_view_search" model="ir.ui.view">
        <field name="name">estate.property.type.view.search</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <search string="Channel">
                <field name="name" string="Title"/>
            </search>
        </field>
    </record>

    <record id="estate_property_tag_view_list" model="ir.ui.view">
        <field name="name">estate.property.tag.view.tree</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_tag_view_form" model="ir.ui.view">
        <field name="name">estate.property.tag.view.form</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <sheet>
                    <h1><field name="name"/></h1>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.view.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="bottom">
                <field name="price"/>
                <field name="partner_id" string="Partner"/>
                <field name="validity" string="Validity (Days)"/>                    
                <field name="date_deadline" string="Deadline"/>
                <button name="action_accept_offer" title="Accept" type="object" icon="fa-check"/>
                <button name="action_refuse_offer" title="Refuse" type="object" icon="fa-times"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id" string="Partner"/>
                        <field name="validity" string="Validity (Days)"/>                    
                        <field name="date_deadline" string="Deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>