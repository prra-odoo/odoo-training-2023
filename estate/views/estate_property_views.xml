<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Your First Property
            </p>
        </field>
    </record>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="property_tag_id" widget="many2many_tags"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" optional="show"/>
                <field name="expected_price" optional="hide"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <field name="state" widget="statusbar" options = "{'clickable' : '1'}"/>
                    <button name="action_sold" type="object" string="SOLD"/>
                    <button name="action_cancel" type="object" string="CANCEL"/>
                </header>
                <sheet>
                    <div>
                        <label for="name" string="Property Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <field name="property_tag_id" widget="many2many_tags"/>
                    </div>
                    <br></br>
                    <group>
                        <group>
                            <field name="property_type_id" string="Property Type"/>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <label for="description" string="Description"/>
                                <field name="description"/>
                                <group col="3">
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="active"/>
                                    <field name="total_area"/>
                                </group>
                                <group col="3">
                                    <field name="facades"/>
                                    <field name="garage"/>
                                </group>
                            </group>
                        </page>
                        <page string="Garden">
                            <group>
                                <field name="garden"/>
                                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                            </group>
                        </page>
                        <page string="Other Info.">
                            <group>
                                <field name="user_id"/>
                                <field name="partner_id"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offers_id"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="description"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="state" />
                <filter name="State : New, Recevied" domain="['|',('state','=','new'),('state','=','recevied')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>