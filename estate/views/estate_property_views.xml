<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available' : True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Your First Property
            </p>
        </field>
    </record>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel" decoration-success="state=='offer_received' or state=='offer_accepted'" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'">
                <field name="name"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="property_tag_id" widget="many2many_tags" options="{'color_field': 'color_tag'}"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" optional="show"/>
                <field name="expected_price" />
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <field name="state" widget="statusbar" options = "{'clickable' : '1'}"/>
                    <button string="Sold" name="action_sold" type="object" states="new,offer_received"/>
                    <button string="Sold" name="action_sold" type="object" class="oe_highlight" states="offer_accepted"/>
                    <button string="Cancel" name="action_cancel" type="object" states="new,offer_received,offer_accepted"/>
                </header>
                <sheet>
                <widget name="web_ribbon" title="Sold" bg_color="bg-success" attrs="{'invisible': [('state', '!=', 'sold')]}"/>
                <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                <widget name="web_ribbon" title="New" bg_color="bg-primary" attrs="{'invisible': [('state', '!=', 'new')]}"/>
                    <div>
                        <label for="name" string="Property Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <field name="property_tag_id" widget="many2many_tags" options="{'color_field': 'color_tag'}"/>
                    </div>
                    <br></br>
                    <group>
                        <group>
                            <field name="property_type_id" string="Property Type" options="{'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <label for="description" string="Description"/>
                                <field name="description"/>
                                <group col="3">
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="active"/>
                                    <field name="total_area"/>
                                </group>
                                <group col="3">
                                    <field name="facades"/>
                                    <field name="garage"/>
                                </group>
                            </group>
                        </page>
                        <page string="Garden">
                            <group>
                                <field name="garden"/>
                                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                            </group>
                        </page>
                        <page string="Other Info.">
                            <group>
                                <field name="user_id"/>
                                <field name="partner_id"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offers_id" mode ='kanban' attrs="{'readonly' : [('state', 'in',['offer_accepted','sold','cancelled'] )]}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" string="Property" />
                <field name="property_type_id" string="Property Type"/>
                <field name="postcode"/>
                <field name="date_availability" string="Avilable from"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="description"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain = "['|',('living_area','=',self),('living_area','>  ',self)]"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="state"/>
                <filter string="Available" name="available" domain="[('state', 'in', ['new','offer_received'])]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>