<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Tree View -->
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">Estate_Property_treeview</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state=='sold'" decoration-bf="state=='offer_accepted'" decoration-success="state=='offer_accepted' or state=='offer_received'">
                <field name="name"/>
                <field name="description" />
                <field name="postcode"/>
                <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price" />
                <field name="bedrooms"/>
                <field name="living_area" optional="show"/>
                <field name="facades" optional="hide"/>
                <field name="garage" optional="hide"/>
                <field name="garden" optional="hide"/>
                <field name="garden_area" optional="hide"/>
                <field name="garden_orientation" optional="hide"/>
                <field name="property_type_id" />
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>
    <!-- Form View  -->
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">Estate_Property_formview</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="sold_buisness_logic" class="oe_stat_button" type="object" string="Sold" attrs="{'invisible': [('state', 'in', ('sold','cancel'))]}" />
                    <button name="cancel_buisness_logic" type="object" class="oe_stat_button" string="Cancel" attrs="{'invisible': [('state', 'in',('sold','cancel'))]}"/>
                    <field name="state" widget="statusbar" class="o_field_statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Cancel" bg_color="bg-danger" attrs="{'invisible': [('state', '!=','cancel')]}"/>
                    <widget name="web_ribbon" title="Sold" bg_color="bg-success" attrs="{'invisible': [('state', '!=','sold')]}"/>
                    <div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="postcode" options='{"type": "number"}'/>
                            <field name="expected_price" options='{"type": "number"}'/>
                            <field name="property_type_id" options="{'no_create':True}"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                            <field name="best_offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area" options='{"type": "number"}' />
                                <field name="facades" />
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" options='{"type": "number"}' attrs="{'invisible': [('garden', '=', False)],'required':[('garden', '=', True)]}"/>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}" />
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" attrs="{'readonly': [('state', 'in', ('offer_accepted','sold','cancel'))]}">
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer_id" />
                                <field name="salesperson_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>
    <!-- Search -->
    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">Estate_Property_searchview</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="searches">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <!-- <field name="living_area"/> -->
                <field name="facades"/>
                <!-- <separator/> -->
                <field name="living_area" string="Greater Living Area" filter_domain="[('living_area', '>=', self)]"/>
                <filter string="Available" name="search_state" domain="[('state', 'in', ('new','offer_received'))]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="search_postcode" context="{'group_by':'postcode'}"/>
                </group>

            </search>
        </field>
    </record>

    <record id="estate_property_kanban_view" model="ir.ui.view">
        <field name="name">Estate_Property_kanban_view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" >
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="name"/>
                            <!-- <field name="property_type_id"/> -->
                            <div t-if="record.expected_price.raw_value > 0">
                                Expected Price : <field name="expected_price"/>
                            </div>
                            <div t-if="record.best_offer.raw_value > 0">
                                Best Offer : <field name="best_offer"/>
                            </div>
                            <div t-if="record.selling_price.raw_value > 0">
                                Selling Price : <field name="selling_price"/>
                            </div>
                            <field name="tags_ids" options="{'color_field': 'color'}" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
