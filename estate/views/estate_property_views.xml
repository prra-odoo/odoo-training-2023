<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!-- ___________________________ACTION______________________________ -->

    <record id="estate_model_ad_property1" model="ir.actions.act_window">
        <field name="name">Gandhinagar</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{"search_default_state":1}</field>
    </record>

    <record id="estate_model_ad_property2" model="ir.actions.act_window">
        <field name="name">Surat</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{"search_default_state":1}</field>
    </record>

<!-- ___________________________TREE VIEW___________________________ -->
    
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-success = "state in ('offer_received', 'offer_accepted')" decoration-bf = "state =='offer_accepted'" decoration-muted = "state =='sold'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="state"/>
                <field name="bedrooms" optional="show"/>
            </tree>
        </field>
    </record>

<!-- ___________________________KANBAN VIEW___________________________ -->

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable = "False">
                <templates>
                    <field name="state"/>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong class="o_kanban_record_title">
                                <field name="name"/>
                            </strong>
                            <div>
                                <label for="expected_price">Expected Price : </label> <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value != 'new'">
                                <label for="best_price">Best Price : </label> <field name="best_price"/>
                            </div>
                            <div t-if="record.selling_price.raw_value">
                                <label for="selling_price">Selling Price : </label> <field name="selling_price"/>
                            </div>
                            <div>
                                <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

<!-- __________________________FORM VIEW__________________________ -->

<record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">

            <form string="estate_form_view">
                <header>
                    <button name="action_sold" type="object" string="Sold" class='oe_highlight' states="offer_accepted"/>
                    <button name="action_canceled" type="object" string="Cancel" class='oe_highlight' states="offer_accepted"/>
                    <button type="action" name="%(estate.estate_model_settings_type)d" string="My Action"/>
                    <field name="state" widget="statusbar"/>
                </header>
                
                <sheet>
                    <widget name="web_ribbon" title="Sold" bg_color="bg-success" attrs="{'invisible': [('state', '!=', 'sold')]}"/>
                    <widget name="web_ribbon" title="Cancel" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'canceled')]}"/>
                    <label for="name" string="Name"></label>
                    <h1><field name="name"/></h1>
                    <field name="date_availability" nolabel="1"/>

                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="garage"/> 
                        </group>
                    </group>
                    
                    <group>    
                        <group string="pricing">    
                            <field name="selling_price"/>                       
                            <field name="expected_price"/>
                        </group>
                        <group string="property specifications">    
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Garden">
                            <group string="info">
                                <group>
                                    <field name="garden"/>
                                </group>
                                <group>
                                    <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                </group>
                                <group>
                                    <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="sales_id" widget="many2one_avatar"/>
                            </group>
                            <group>
                                <field name="buyers_id"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="total_area"/>
                            </group>
                            <group>
                                <field name="best_price"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" attrs="{'readonly': ['|', ('state', '=', 'offer_accepted'), '|',('state', '=', 'sold'), ('state', '=', 'canceled')]}">
                                <tree editable="1" decoration-danger="status =='refused'" decoration-success="status =='accepted'">
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <button name="action_accept" type="object" string="Accept" icon="fa-check" attrs="{'invisible': ['|',('status', '=', 'accepted'), ('status', '=', 'refused')]}"/>
                                    <button name="action_refuse" type="object" string="Refuse" icon="fa-times" attrs="{'invisible': ['|',('status', '=', 'accepted'), ('status', '=', 'refused')]}"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Property Image">
                            <div style="width: 500px; height: 350px">
                                <field name="image" widget="image"/>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- ________________________SEARCH VIEW___________________________ -->
    
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="search property">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <filter name="state" string="Available property" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter name="expected_price" string="Expensive property" domain="[('expected_price', '>=', '15000')]"/>
                <group expand="1" string="group by">
                    <filter name="postcode" string="Postal code" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
