<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available':True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a record
            </p>
        </field>
    </record>
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">Property</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <!-- 
                decoration-muted = use to row grey
                decoration-success = use to row red
                decoration-bf = use to row bold
             -->
            <tree string="Channel" decoration-muted="state == 'sold'" 
                                   decoration-success="state in ('accepted','received')" 
                                   decoration-bf="state == 'accepted'"
                                   decoration-info="state== 'new'"
                                   decoration-danger = "state=='canceled'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="date_availability" optional="hide"/>
                <field name="state" optional="hide"/>

                <field name="property_type_id" optional="show"/>
                <field name="property_tag_ids" optional="hide" widget="many2many_tags" options="{'color_field':'color'}"/>

            </tree>
        </field>
    </record>
    
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">Property</field>
        <field name="model">estate.property</field>
                <field name="arch" type="xml">
                <form string="Estate Property">
                    <header>
                        <!-- for highlighting the button : class="oe_highlight" -->
                        <button name="action_do_sold"  type="object" string="Sold" class="oe_highlight" attrs="{'invisible':[('state','in',('new','sold','received'))]}"/>
                        <button name="action_do_sold"  type="object" string="Sold" attrs="{'invisible':[('state','not in',('new','received'))]}"/>
                        <button name="action_do_cancel" type="object" string="Cancel" attrs="{'invisible':[('state','=','sold')]}"/>
                        <!--  statusbar : use to display selection or many2one field as status
                              clickable -1 : use to clickable statusbar 
                              statusbar_visible : use to set how much content show on status bar-->
                        <field name="state" class="oe_edit_only" widget="statusbar" options="{'clickable':'1'}" statusbar_visible="new,received,accepted,sold"/>
                    </header>
                    
                   <sheet>
                        <widget name="web_ribbon" title="Sold" bg_color="bg-success" attrs="{'invisible': [('state', 'not in', 'sold')]}"/>
                        <widget name="web_ribbon" title="Cancel" bg_color="bg-danger" attrs="{'invisible': [('state', 'not in', 'canceled')]}"/>    
                        <div class="oe_title">
                            
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="eg. zeel patel"/></h1>
                        </div>
                        <group>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="property_type_id" options="{'no_quick_create': True,'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                            <!-- color_field : use to set tag color -->
                            <field name="property_tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                        </group>
                    </group>
                    <br/>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden"/>
                                <!-- 
                                    invisible : use to hide some fields
                                 -->
                                <field name="garden_area" attrs="{'invisible':[('garden','=',False)]}"/>
                                <field name="garden_orientation" attrs="{'invisible':[('garden','=',False)]}"/>
                                <field name="total_area"/>
                                
                            </group>
                        </page>
                        
                        <!-- list view -->
                        <page string="Offers">
                            
                            <field name="offer_ids" attrs="{'readonly':['|','|',('state', '=' , 'sold'),('state', '=' , 'accepted'),('state', '=' , 'canceled')]}" />
                            
                        </page>

                        <!-- kanban view -->
