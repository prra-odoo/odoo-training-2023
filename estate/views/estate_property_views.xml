<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="estate_properties" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No properties to show!
            </p>
        </field>
    </record>

    <record id="estate_properties_view_list" model="ir.ui.view">
        <field name="name">Properties</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms" optional="hide"/>
                <field name="living_area"/>
                <field name="expected_price" optional="show"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="property_type_id"/>
            </tree>
        </field>
    </record>

    <record id="estate_properties_view_form" model="ir.ui.view">
        <field name="name">Properties</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Form">
                <sheet>
                    <group>
                        <h1><field name="name" nolabel="1" class="oe_inline" placeholder="Property Name"/></h1>
                    </group>
                    <group>   
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" placeholder="Write Something"/>                             
                                    <field name="last_seen"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="active"/>
                                    <field name="state"/>
                                    <field name="property_type_id"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_properties_view_search" model="ir.ui.view">
        <field name="name">Properties</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Tests">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <separator/>
                <filter string="Available" name="state" domain="['|',('state', '=', 'new'),('state', '=', 'offer received')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>