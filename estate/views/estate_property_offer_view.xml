<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
    <field name="name">estate.offer.tree</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
        <tree default_order="price asc" editable="bottom">    
            <field name="price"/>
            <field name="partner_id"/>
            <field name="validity"/>
            <field name="date_deadline"/>
            <button name="action_accept" type="object" icon="fa-check"/>
            <button name="action_refuse" type="object" icon="fa-times"/>
            <field name="status" widget="badge"/>
        </tree>
    </field>
    </record>

    <record id="estate_offer_view_form" model="ir.ui.view">
    <field name="name">estate.offer.form</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
        <form>
           <sheet>
               
            <group>
                <field name="price"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="partner_id"/>
                <field name="status"/> 
            </group>

        </sheet>
        </form>

    </field>
    </record>

    



</odoo>
