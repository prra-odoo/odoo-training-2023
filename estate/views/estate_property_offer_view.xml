<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode" >tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
    <field name="name">estate.offer.tree</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
        <tree default_order="price asc"
            decoration-success = "state == 'accepted'"
            decoration-danger = "state == 'refused'">    
            <field name="price"/>
            <field name="partner_id"/>
            <field name="validity"/>
            <field name="date_deadline"/>
            <button name="action_accept" type="object" title = "sold" icon="fa-check" attrs="{'invisible':['|',('state','=','accepted'),('state','=','refused')]}" />
            <button name="action_refuse" type="object" title = "cancel" icon="fa-times" attrs="{'invisible':['|',('state','=','refused'),('state','=','accepted')]}" />
            <field name="state" widget="badge" invisible = "1"/>   
        </tree>
    </field>
    </record>

    <record id="estate_offer_view_form" model="ir.ui.view">
    <field name="name">estate.offer.form</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
        <form>
           <sheet>
               
            <group>
                <field name="price"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="partner_id"/>
                <field name="state"/> 
            </group>

        </sheet>
        </form>

    </field>
    </record>

    



</odoo>
