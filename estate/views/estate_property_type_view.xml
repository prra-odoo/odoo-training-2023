<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List/Tree View -->
    <record id="estate_property_type_tree_view" model="ir.ui.view">
        <field name="name">Estate Property Type Tree View</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!-- Form View -->
    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="name">Estate Property Type Form View</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="form_view">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="%(estate_property_offer_action)d" type="action" icon="fa-money" string="Offers"> 
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    <field name="offer_count"/>
                                </span>
                                <span class="o_stat_text">
                                    Offers
                                </span>
                            </div>
                        </button>
                    </div>
                    <h1>
                        <field name="name" nolabel="1"/>
                    </h1>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name" string="Title"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                 </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Action View -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new property type
            </p>
        </field>
    </record>
</odoo>