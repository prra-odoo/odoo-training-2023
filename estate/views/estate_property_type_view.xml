<?xml version="1.0" encoding="utf-8"?>
<odoo>
            <!-- tree view -->
    <record id="property_type_list_view" model="ir.ui.view">
        <field name="name">Property Type List view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string= "Property Type">
                <field name="sequence" widget="handle"/>
                <field name="name" optional="show"/>
            </tree>
        </field>
    </record>   
    <!-- form view -->
    <record id="property_type_form_view" model="ir.ui.view">
        <field name="name">Property type form view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(estate_property_offer_model_action)d" type="action" class="oe_stat_button"  icon="fa-money">
                            <field string="Offers" name="offer_count" widget="statinfo"/>                        
                        </button>
                    </div>
                    <label for="name" string="Name" />
                        <group>
                            <h1><field name="name" style="width:800%"/></h1>
                        </group>
                        <notebook>
                            <page string="Property">
                                <field name="property_ids">
                                    <tree string= "Properties">
                                        <field name="name" optional="show"/>
                                        <field name="expected_price" optional="show"/> 
                                        <field name="state" optional="show"/>  
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
