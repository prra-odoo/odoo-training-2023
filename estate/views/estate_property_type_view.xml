<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a record
            </p>
        </field>
    </record>

    <record id="estate_property_type_view_tree" model="ir.ui.view">
        <field name="name">Property Type</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name='sequence' widget='handle'/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_type_view_search" model="ir.ui.view">
        <field name="name">estate property type search</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" />
            </search>
        </field>
    </record>
    
    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">Property Type</field>
        <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
            <form string="Estate Property">
               <sheet>
                    <div name="button_box">
                        <button name="%(estate.estate_property_offer_action)d" type="action"  icon="fa-money" >
                            <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>
                    <h1><field name="name" placeholder="eg. Commercial"/></h1>
                    <div style="margin-top:30px"/>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name" string="Title"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page> 
                    </notebook>    
                </sheet>
            </form>
        </field>
    </record>
</odoo>