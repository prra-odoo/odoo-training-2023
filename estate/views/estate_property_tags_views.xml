<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_tags_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tags</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There is no property tags, please add some !!
            </p> 
        </field>
    </record>
    <!-- List view -->
    <record id="estate_property_tags_tree_view" model="ir.ui.view">
        <field name="name">estate.property.tags.tree.view</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <tree string="Tag Tree View" editable="bottom">
                <field name="name" />
                <field name="tags_color" widget="color_picker"/>
            </tree>
        </field>
    </record>
</odoo>