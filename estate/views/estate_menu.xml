<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_stat_button" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id','=',active_id)]</field>
    </record>
    <record id="estate_first_level_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="context">{'group_by':'state'}</field>
        <field name="view_mode">tree,kanban,calendar,form</field>
        <field name="context">{"search_default_available":True,"search_default_expectedprice":1 }</field> 
    </record>
    <record id="estate_second_level_model_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>    
        <field name="view_mode">tree,form</field>
    </record>
    <record id="estate_second_level_model_action01" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tags</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="estate_menu_root" name="Real Estate">
        <menuitem id="estate_first_level_menu" name="Advertisement">
            <menuitem id="estate_model_menu_action_level_one"
                action="estate_first_level_model_action" />
        </menuitem>
        <menuitem id="estate_second_level_menu" name="Settings" groups="estate.estate_group_manager">
            <menuitem id="estate_model_menu_action_level_two"
                action="estate_second_level_model_action" >
            </menuitem>
            <menuitem id="estate_model_menu_action_level_two01"
                action="estate_second_level_model_action01" />
        </menuitem>
    </menuitem>
</odoo>
