    <!-- 3 for displaying on website -->

    <template id="index">
        <t t-call="website.layout">
            <t t-set="title">Real Estate</t>
                <div class="oe_structure">
                    <div class="container">
                        <div class ="row">
                            <t t-foreach="properties" t-as="property">
                                
                                <div class="card shadow-lg p-2 mb-5 bg-white rounded" style="width: 15rem; margin : 15px">
                                    <img t-att-src='image_data_uri(property.image)'/>
                                        <div class="card-body">
                                            <h5 class="card-title" t-field = "property.name"></h5>
                                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                            <a t-attf-href="/properties/{{ slug(property) }}" class="btn btn-primary">See Property</a>
                                        </div>
                                </div>    
                            </t>
                            <div t-if="pager" class="d-flex justify-content-center">
                                <t t-call="website.pager"/>
                            </div>
                        </div>
                    </div>
              </div>
            </t>
    </template> 


    <template id="second_page">
        <t t-call="website.layout">
            <t t-set="title">Real Estate</t>
            <div class="oe_structure">

                <div class = "card d-flex justify-content-center w- p-8" >
                    <h1 class = "text-center bg-primary-light"> <p t-field ="property.name"/> </h1>
                    <div class = "bg-secondary-light">
                        <div class="d-flex justify-content-around shadow-lg w-100 p-3">
                            <div>
                            <h1 class="text-dark"> Price : <t t-esc ="property.expected_price"/> </h1>
                            <h1 class="text-dark"> Living Area : <t t-esc ="property.living_area"/> </h1>
                            <t t-set = "tags" t-value = "property.mapped('tag_ids')" />
                                <t t-foreach = "tags" t-as = "tag" >
                                    <h1 class="text-dark"> Tags: <p t-esc ="tag.name" class="badge rounded-pill bg-info text-dark" /></h1>
                                </t>
                            </div>
                            <div class="card , shadow-sm p-2 mb-10 bg-white rounded" style="width: 25rem;">
                                <img t-att-src='image_data_uri(property.image)'/>
                            </div>
                        </div>
                    </div>

                <div>

                    <table class="table" style="margin-top : 5rem">
                        <thead class="thead-dark">
                            <tr>
                            <th scope="col">#</th>
                            <th scope="col">Price</th>
                            <th scope="col">Partner</th>
                            <th scope="col">Validity</th>
                            <th scope="col">Deadline</th>
                            <th scope="col">state</th>
                            </tr>
                        </thead>
                        <tbody>

                        <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                            <tr t-foreach="offers" t-as="offer">
                                <th scope="row"><span t-field="offer.id"/></th>
                                <td> <span t-field="offer.price"/> </td>
                                <td> <span t-field="offer.partner_id"/> </td>
                                <td> <span t-field="offer.validity"/> </td>
                                <td> <span t-field="offer.date_deadline"/> </td>
                                <td> <span t-field="offer.state"/> </td>
                            </tr>
                        </tbody>
                </table>

                </div>
                </div>       
            </div>  
        </t>
    </template> 





