<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <!-- treee view -->
         <record id="estate_property_type_view" model="ir.ui.view">
         <field name="name">Property Types</field>
         <field name="model">estate.property.type</field>
             <field name="arch" type="xml">
                 <tree string="Property Type TV">    
                    <field name="name" />
                    <field name="sequence" widget="handle" />
                 </tree>
             </field>
        </record>

        <!-- form view -->
         <record id="property_type_form__view" model="ir.ui.view">
         <field name="name">Property Type</field>
         <field name="model">estate.property.type</field>
             <field name="arch" type="xml">
                 <form string="Type Form">    
                    <sheet>

                        <div name="button_box" class="oe_button_box">
                            <button type="action" class="oe_stat_button" name="%(property_offer_action)d" 
                            string="Offers">
                                <field name="offer_count" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="name" />
                        </group>
                        <notebook>
                            <page string="Properties">                    
                                <field name="property_ids">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                 </form>
             </field>
        </record>



        <record id="property_type_action" model="ir.actions.act_window">
            <field name="name">Property types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new property type
                </p>
            </field>
        </record>

        <record id="property_tags_action" model="ir.actions.act_window">
            <field name="name">Property tags</field>
            <field name="res_model">estate.property.tags</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new property tag
                </p>
            </field>
        </record>

    </data>
</odoo>