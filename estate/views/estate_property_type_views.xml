<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- ________________________Form view estate_property_type____________________ -->
        <record id="estate_property_type_model_form" model="ir.ui.view">
            <field name="name">estate.property.typemodel.form_view</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>   
                        <div class="oe_button_box" name="button_box">
                            <button string="property Offers"
                                name="%(estate.estate_model_action_property_offer)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-money" >
                                <field name="offer_count" widget="statinfo" string="offers"/>
                            </button>      
                        </div>
                        <field name="name"/>
                        <notebook>
                            <page string ="properties">    
                                <field name="property_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="expected_price"/>
                                        <field name="state"/>
                                    </tree>    
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- ________________________List view estate_property_type____________________ -->
    
        <record id="estate_property_type_model_list" model="ir.ui.view">
            <field name="name">estate.property.typemodel.list_view</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>  
                    <field name ="offer_ids"/>  
                    <field name="offer_count"/>
                </tree>
            </field>
        </record>
</odoo>