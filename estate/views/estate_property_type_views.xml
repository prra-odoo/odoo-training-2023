<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create a new Property type!!!
        </p>
        </field>
    </record>
<!-- Tree/List view starts here -->
    <record id="estate_property_types_view_list" model="ir.ui.view">
        <field name="name">Property Types</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
        
            <tree string="Types">
                <field name="name"/>
                <field name="sequence" widget="handle"/>
            </tree>
        </field>
    </record>
<!-- Form view starts here -->
    <record id="estate_property_types_view_form" model="ir.ui.view">
        <field name="name">Property Types</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            
            <form string="Form">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action" name="%(estate_property_offer_action)d" icon="fa-money">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="offer_count"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Offers
                                    </span>
                                </div>
                            </button>
</div>
                    <group>
                        <h1><field name="name" nolabel="1" class="oe_inline" placeholder="Property Type"/></h1>
                    </group>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

     
</odoo>
