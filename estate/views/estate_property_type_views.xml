<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="estate_property_type_view_form" model="ir.ui.view">
            <field name="name">Name</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <form string="form view">
                    <sheet> 
                        <div class="oe_button_box" name="button_box">
                            <button
                            name="%(estate.action_property_offer)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-money">
                            <field name="offer_count" widget="statinfo" string="All offers"/>
                            </button>
                        </div>
                        <label for="name"></label>
                            <h1><field name="name"/></h1>   
                        <notebook>
                            <page string ="Properties types">
                                <field name ="propertyName_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="expected_price"/>
                                        <field name="selling_price"/>
                                        <field name="living_area"/>
                                    </tree>
                                </field> 
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id = "estate_property_type_tree_view" model="ir.ui.view">
            <field name="name">Name</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <tree string = "tree view">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
