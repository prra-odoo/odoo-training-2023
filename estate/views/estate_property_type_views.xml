<?xml version="1.0" encoding="utf-8"?>

<odoo>
<record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
</record>

<record id="estate_property_type_views_form" model="ir.ui.view">
    <field name="name">estate.property.type.views.form</field>
    <field name="model">estate.property.type</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" name="%(estate.estate_property_offer_action)d"
                            type="action" icon="fa-money">
                        <div class="o_stat_info">
                            <span class="o_stat_value">
                                <field name="offer_count"/>
                            </span>
                            <span class="o_stat_text">
                                Offers
                            </span>
                        </div>
                    </button>
                </div>


                <h1>
                    <field name ="name"/>
                </h1>                
                <notebook>
                    <page string="Properties">
                        <field name="property_ids">
                            <tree>
                                <field name="name"/>
                                <field name= "expected_price"/>
                                <field name="state" string="Status"/>  
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<record id="estate_property_type_views_tree" model="ir.ui.view">
    <field name="name">estate.property.type.views.tree</field>
    <field name="model">estate.property.type</field>
    <field name="arch" type="xml">
        <tree>
            <field name="sequence" widget="handle"/>
            <field name="name"/>
        </tree>
    </field>
 </record>
</odoo>