<?xml version="1.0" encoding="utf-8"?>

<odoo>
    

    <!-- list/tree view starts here -->
    <record id="estate_property_offer_views_list" model="ir.ui.view">
        <field name="name">Property Offers</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- form view starts here -->
    <record id="estate_property_offer_views_form" model="ir.ui.view">
        <field name="name">Property Offers</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                <group>
                    <group>
                        <field name="price"/>
                         <field name="partner_id"/>
                        <field name="status"/>
                    </group>
                </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>