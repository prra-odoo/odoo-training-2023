<odoo>
    <record id="estate_property_offer_view" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="bottom" decoration-success = "status == 'accepted'" decoration-danger = "status == 'refused'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity" string="Validity (days)"/>
                <field name="date_deadline" string="Deadline"/>
                <button name="action_accept" type="object" icon="fa-check" attrs="{'invisible' : ['|',('status','=','accepted'),('status','=','refused')]}"/>
                <button name="action_refuse" type="object" icon="fa-times" attrs="{'invisible' : ['|',('status','=','accepted'),('status','=','refused')]}"/>
                <field name="status" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity" />
                        <field name="date_deadline" />
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>