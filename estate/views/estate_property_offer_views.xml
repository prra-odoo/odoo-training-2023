<odoo>
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Propety Offers" expand="1">
                <field name="price"/>
                <field name="partner_id"/>
                <button name="action_accept" title="Accept" type="object" icon="fa-check"/>
                <button name="action_refuse" title="Refuse" type="object" icon="fa-close"/>
                <field name="status"/>
                <field name="validity"/>
                <field name="date_deadline"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offers">
                <!--<header>
                    <button name="action_accept" type="object" icon="fa-check"/>
                    <button name="action_refuse" type="object" icon="fa-close"/>
                </header> wil not work in tree form-->
                <sheet>
                    <group> 
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="status"/> 
                        <field name="validity"/>
                        <field name="date_deadline"/>  
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_offer_view_search" model="ir.ui.view"> 
        <field name="name">estate.property.offer.search</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <search string="Search..">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>   
            </search>
        </field>
    </record>
</odoo>