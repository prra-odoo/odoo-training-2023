<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_model_settings_offer" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_model_stat_button" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
    
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.view.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree decoration-danger="status =='refused'" decoration-success="status =='accepted'">
                <field name="property_type_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status" invisible="1"/>
            </tree>
        </field>
    </record>
</odoo>
