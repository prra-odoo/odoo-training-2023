<?xml version="1.0" encoding="utf-8"?>

<odoo>
    

    <!-- list/tree view starts here -->
    <record id="estate_property_offer_views_list" model="ir.ui.view">
        <field name="name">Property Offers</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree editable="top">
            <!-- here editable=top is used to directly add the new data and not open up the wizard ,if we use editable="bottom then new line willbe added at bottim of existing data and using top it is added at the top of existing data"-->
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="accept_offer"  type="object" icon="fa-check"/>
                <button name="refuse_offer"  type="object" icon="fa-times"/>
                <!-- here in buttons we can also add the string to specify the text we want to show -->
                <field name="status"/>

            </tree>
        </field>
    </record>

    <!-- form view starts here -->
    <record id="estate_property_offer_views_form" model="ir.ui.view">
        <field name="name">Property Offers</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                <group>
                    <group>
                        <field name="price"/>
                         <field name="partner_id"/>
                         <field name="validity"/>
                         <field name="date_deadline"/>
                         <field name="status"/>
                    </group>
                </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>