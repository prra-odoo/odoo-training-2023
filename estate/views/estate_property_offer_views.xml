<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">Property Offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Tree View" decoration-success="status=='accepted'" 
            decoration-danger="status=='refused'" editable="bottom">
                <field name="price"/>
                <field name="partner_id"/>
                <field name='validity'/>
                <button name="accept_offer" type="object" icon="fa-check" title="Accept Offer" attrs="{'invisible': [('status', 'in', ['accepted','refused'])]}"/>
                <button name="refuse_offer" type="object" icon="fa-times" title="Refuse Offer" attrs="{'invisible': [('status', 'in', ['accepted','refused'])]}"/>
                <field name="date_deadline"/>
                <field name="status" invisible="1"/>
            </tree>
        </field>
    </record> 

    <record id="estate_property_tag_view_form" model="ir.ui.view">
        <field name="name">Property Offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml"> 
            <form string="Form">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>