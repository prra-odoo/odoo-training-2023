<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('property_type_id','=',active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Property Offer
            </p>
        </field>
    </record>
    <record id="estate_property_offer_kanban" model="ir.ui.view">
        <field name="name">estate.property.offer.kanban</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
            <field name="color"/>
            <field name="partner_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="{{'oe_kanban_color_' + kanban_getcolor(record.color.raw_value) }} oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings mt4">
                                    <strong class="o_kanban_record_title">
                                        <span t-out="record.partner_id.value"/>
                                    </strong>
                                </div>
                                <strong>
                                    <field name="price" widget="monetary"/>
                                </strong>
                            </div>
                            <div>
                                <b>Validity: </b>
                                <field name="validity"/> days
                                <br/>
                                <b>Deadline: </b>
                                <field name="date_deadline"/>
                                <br/>
                                <div t-if="record.status.raw_value">
                                <b>Status: </b>
                                <field name="status"/>
                                <br/>
                                </div>
                                <button name="action_accept" title="Accept" type="object" icon="fa-check" attrs="{'invisible':[('status','in',['accepted','refused'])]}"/>
                                <button name="action_reject" title="Refuse" type="object" icon="fa-times" attrs="{'invisible':[('status','in',['accepted','refused'])]}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Tree View" editable="bottom" decoration-success="status=='accepted'" decoration-danger="status=='refused'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" title="Accept" type="object" icon="fa-check" attrs="{'invisible':[('status','in',['accepted','refused'])]}"/>
                <button name="action_reject" title="Refuse" type="object" icon="fa-times" attrs="{'invisible':[('status','in',['accepted','refused'])]}"/>
                <field name="status" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Form View">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="status"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>