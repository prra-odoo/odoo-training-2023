<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">Property Offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name='validity'/>
                <field name="status"/>
            </tree>
        </field>
    </record> 

    <record id="estate_property_tag_view_form" model="ir.ui.view">
        <field name="name">Property Offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Form">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <button name="action_accept" string="Confirm" states="draft" type="object" icon="fa-check"/>
                        <!-- <button name="action_refuse" string="Reject" states="draft" type="object" icon="fa-times"/> -->
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>