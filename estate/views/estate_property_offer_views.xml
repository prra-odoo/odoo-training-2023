<?xml version="1.0" encoding="utf-8"?>

<odoo>
<!-- note that when we try to add the stat button without action error is coming.By defaulty we had not add the action -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id','=',active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Property Offer
            </p>
        </field>
    </record>

    <!-- list/tree view starts here -->
    <record id="estate_property_offer_views_list" model="ir.ui.view">
        <field name="name">Property Offers</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Tree View" decoration-success="status=='accepted'" decoration-danger="status=='refused'">
            <!-- here editable=top is used to directly add the new data and not open up the wizard ,if we use editable="bottom then new line willbe added at bottim of existing data and using top it is added at the top of existing data"-->
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="accept_offer"  type="object" icon="fa-check" title="Accept" attrs="{'invisible': [('status', 'in', ['accepted', 'refused'])]}"/>
                <button name="refuse_offer"  type="object" icon="fa-times" title="Refuse" attrs="{'invisible': [('status', 'in', ['accepted', 'refused'])]}"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}" nolabel="1" placeholder="Tags" colspan="2"/>

                <!-- here in buttons we can also add the string to specify the text we want to show -->
                <field name="status"/>
                <!-- <field name="property_id"/> -->

            </tree>
        </field>
    </record>

    <!-- form view starts here -->
    <record id="estate_property_offer_views_form" model="ir.ui.view">
        <field name="name">Property Offers</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                <group>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                    </group>
                </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>