<?xml version="1.0"?>
<odoo>


    <!-- DEFINING the ACTION -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your first PropertY!
            </p>
        </field>
    </record>


    <!-- TREE(LIST) VIEW -->
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="bottom" decoration-danger="status == 'ref'"
                decoration-success="status == 'act'">
                <field name="price" />
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="accept_offer" string="Accept" type="object"
                    icon="fa-check-square-o"
                    attrs="{'invisible': [('status', 'in', ['act','ref'])]}" />
                <button name="reject_offer" string="Reject" type="object"
                    icon="fa-times-circle-o"
                    attrs="{'invisible': [('status', 'in', ['act','ref'])]}" />
                <field name="status" widget="badge" optional="hide" />
                <!-- <field name="property_type_id" /> -->
            </tree>
        </field>
    </record>


    <!-- FORM VIEW -->
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Form View String">
                <sheet>
                    <group>
                        <field name="price" />
                        <field name="partner_id" />
                        <field name="status" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>