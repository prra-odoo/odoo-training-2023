<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- List View -->
	<record id="estate_property_offers_view_tree" model="ir.ui.view">
		<field name="name">estate.property.offers.tree</field>
		<field name="model">estate.property.offers</field>
		<field name="arch" type="xml">
			<tree string="List_View" editable="bottom" decoration-success="status=='accepted'" decoration-danger="status=='refused'" >
				<field name="price"/>
				<field name="buyer_id"/>
				<field name="validity"/>
				<field name="date_deadline"/>
				<button name="action_accept_offer" type="object" title="Accept" icon="fa-check" attrs="{'invisible':[('status','in',['accepted','refused'])]}"/>
				<button name="action_refuse_offer" type="object" title="Refuse" icon="fa-remove" attrs="{'invisible':[('status','in',['accepted','refused'])]}"/>
				<field name="status" invisible="1"/>	
			</tree>
		</field>
	</record>
