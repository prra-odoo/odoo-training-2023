<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- List View -->
	<record id="estate_property_offers_view_tree" model="ir.ui.view">
		<field name="name">estate.property.offers.tree</field>
		<field name="model">estate.property.offers</field>
		<field name="arch" type="xml">
			<tree string="List_View" editable="bottom">
				<field name="price"/>
				<field name="buyer_id"/>
				<field name="validity"/>
				<field name="date_deadline"/>
				<button name="action_accept" type="object" title="Accept" icon="fa-check"/>
				<button name="action_refuse" type="object" title="Refuse" icon="fa-remove"/>
				<field name="status"/>	
			</tree>
		</field>
	</record>
