<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="estate_type_tree" model="ir.ui.view">
            <field name="name">estate.type.tree</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle" />
                    <field name="name" />
                </tree>
            </field>
        </record>
        <record id="estate_type_form" model="ir.ui.view">
            <field name="name">estate.type.form</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <form string="estate_type_form">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button
                                class="oe_stat_button"
                                type="action"
                                name="%(estate_stat_button)d"
                                icon="fa-money">
                                <field name="offer_count" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="name" />
                        </group>
                        <notebook>
                            <page string="Properties">
                                <field name="propertyname">
                                    <tree>
                                        <field name="name" />
                                        <field name="state" />
                                        <field name="expected_price" /> 
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
