<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--TREE VIEW-->
    <record id="estate_property_offer_tree_view" model="ir.ui.view">
        <field name="name">Estate Property Tree View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="tree_view" editable="bottom">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" type="object" title="accept" icon="fa-check"/>
                <button name="action_refuse" type="object" title="refuse"  icon="fa-times"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <!--FORM VIEW-->
    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">Estate Property Form View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="form_view">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>