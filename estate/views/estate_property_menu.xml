<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- estate property action-->
        <record id="estate_property_model_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">kanban,form,tree</field>
            <!-- default search -->
            <field name="context">{"search_default_available_property":1}</field> 
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Empty!
                </p>
            </field>
        </record>

        <!--  property types action -->
        <record id="property_type_model_action" model="ir.actions.act_window">
            <field name="name">Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="target">fullscreen</field> -->
        </record>

        <!--  property offer action -->
        <record id="estate_property_offer_model_action" model="ir.actions.act_window">
            <field name="name">Properties offer</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('property_type_id', '=', active_id)]</field>
        </record> 

        <!--  property tag action -->
        <record id="estate_property_tag_model_action" model="ir.actions.act_window">
            <field name="name">Property Tags</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data> 
    
    <menuitem id="estate_menu_root" web_icon="estate,static/description/icon.png" name="Real Estate">
        <menuitem id="estate_first_level_menu" name="Advertisement">
            <menuitem id="estate_model_menu_action" action="estate_property_model_action"/>
        </menuitem>
        <menuitem id="estate_second_level_menu" name="Settings" groups="estate.estate_group_manager">
            <menuitem id="estate_model_menu_action2" action="property_type_model_action"/>
            <menuitem id="estate_model_menu_action3" action="estate_property_tag_model_action"/>
        </menuitem>
    </menuitem>   
</odoo>
