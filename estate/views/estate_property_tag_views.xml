<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="real_estate_tag_tree_view" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <tree expand="1" string="Real Estate" editable="bottom">
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                </tree>
            </field>
        </record>
        <record id="real_estate_tag_form_view" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <form string="Real Estate">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="color" widget="color_picker"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>        