<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action for estate property-->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_search_state': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click here to create a new Advertisment.
            </p>
        </field>
    </record>
    <!-- Action for type -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Properties Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                        Click here to create a new Advertisment.
            </p>
        </field>
    </record>
    <!-- Action for tags -->
    <record id="estate_property_tags_action" model="ir.actions.act_window">
        <field name="name">Properties Tags</field>
        <field name="res_model">estate.property.tags</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    Click here to create a new tag.
            </p>
        </field>
    </record>

    <!-- Action for offer -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Properties Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    Click here to create a new tag.
            </p>
        </field>
    </record>


    <menuitem id="estate_menu_root" name="Real Estate" web_icon="estate,static/description/icon.png" />
    <menuitem id="estate_first_level_menu" name="Advertisment" parent="estate_menu_root" sequence="0"/>
    <menuitem id="estate_first_level_menu_1" name="Settings" parent="estate_menu_root" sequence="1"/>
    <menuitem id="estate_property_menu_action" action="estate_property_action" parent="estate_first_level_menu" sequence="0"/>
    <menuitem id="estate_property_type_menu_action" action="estate_property_type_action" parent="estate_first_level_menu_1" sequence="1"/>
    <menuitem id="estate_property_tags_menu_action" action="estate_property_tags_action" parent="estate_first_level_menu_1" sequence="2"/>
</odoo>
