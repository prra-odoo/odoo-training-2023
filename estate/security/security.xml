<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4,ref('estate_group_user'))]"/>
    </record>

    <record id="rule_id_user" model="ir.rule">
        <field name="name">Estate Access Rights for users</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="groups" eval="[(4,ref('estate.estate_group_user'))]"/>
        <field name="domain_force">['&amp;',('sales_id','in',(user.id,False)),('company_id','=',company_id)]</field>
    </record>

    <!-- <record id="rule_id_company_user" model="ir.rule">
        <field name="name">Estate Access Rights for Company User</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="groups" eval="[(4,ref('estate.estate_group_user'))]"/>
        <field name="domain_force">[]</field>
    </record> -->

    <record id="rule_id_company_manager" model="ir.rule">
        <field name="name">Estate Access rights for Company manager</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="groups" eval="[(4,ref('estate.estate_group_manager'))]"/>
    </record>
    
    <record id="rule_id_manager" model="ir.rule">
        <field name="name">Estate Access rights for manager</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="groups" eval="[(4,ref('estate.estate_group_manager'))]"/>
    </record>
</odoo>
