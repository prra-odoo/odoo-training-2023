<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id = 'estate_group_user' model = "res.groups">
        <field name = "name">Agent</field>
        <field name = "category_id" ref = "base.module_category_real_estate_brokerage"/>
    </record>
    <record id = "estate_group_manager" model = "res.groups">
        <field name = "name">Estate manager</field>
        <field name = "category_id" ref= "base.module_category_real_estate_brokerage"></field>
        <!-- <field name="implied_ids" eval="[(6, 0, [ref('estate.estate_group_manager'), ref('estate.estate_group_user')])]"/> -->
        <field name="implied_ids" eval="[(4, ref('estate.estate_group_user'))]"/>
    </record>
    <record id="rule_id" model="ir.rule">
        <field name="name">A description of the rule's role</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <!-- <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/> -->
        <field name="groups" eval="[(4, ref('estate.estate_group_user'))]" />
        <field name="domain_force">[
            '|', ('salesperson_id', '=', user.id),
                 ('salesperson_id', '=', False)
        ]</field>
    </record>
    <record id="rule_id_manager" model="ir.rule">
    <field name="name">A description of the rule's role</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <!-- <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/> -->
        <field name="groups" eval="[(4, ref('estate.estate_group_manager'))]" />
    </record>
    <record model="ir.rule" id="estate_property_company_rule_user">
        <field name="name">estate property company rule agent</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">[
            '|', ('company_id', '=', False),
                 ('company_id', 'in', company_ids)
        ]</field>
    </record>
    <!-- <record model="ir.rule" id="estate_property_company_rule_manager">
        <field name="name">Company Rule manager</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="groups" eval="[(4, ref('estate.estate_group_manager'))]" />
    </record> -->
</odoo>