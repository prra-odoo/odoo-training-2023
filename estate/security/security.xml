<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="estate_group_user" model="res.groups">
	        <field name="name">Agent</field>
	        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    	</record>
    	<record id="estate_group_manager" model="res.groups">
    		<field name="name">Manager</field>
    		<field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    		<field name="implied_ids" eval="[(4,ref('estate.estate_group_user'))]"/>
    	</record>
	</data>
	<data noupdate="1">
		<record id="rule_id_agents" model="ir.rule">
		    <field name="name">Agents to only being able to see or modify properties which have no salesperson,or for which they are the salesperson.</field>
		    <field name="model_id" ref="estate.model_estate_property"/>
		    <field name="groups" eval="[Command.link(ref('estate.estate_group_user'))]"/>
		    <field name="domain_force">[
		        '|', ('salesman_id', '=', user.id),
		             ('salesman_id', '=', False),
		             ('company_id','=',user.company_id)]</field>
		</record>
		<record id="rule_id_manager" model="ir.rule">
			<field name="name">Manager will have all rights to see and modify every agents property details.</field>
			<field name="model_id" ref="estate.model_estate_property"></field>
			<field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]"></field>
		</record>
		<record model="ir.rule" id="rule_id_company">
		    <field name="name">User will only be able to see his company properties</field>
		    <field name="model_id" ref="estate.model_estate_property"/>
		    <field name="domain_force">[
		        '|', ('company_id', '=', False),
		             ('company_id', 'in', company_ids)
		    ]</field>
		</record>
	</data>
</odoo>
