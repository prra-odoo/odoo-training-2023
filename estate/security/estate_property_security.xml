<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="real_estate_groups">
            <field name="name">Real Estate</field>
            <field name="description">Access levels for Real Estate module</field>
        </record>
        <record id="estate_group_user" model="res.groups">
            <field name="name">Agent</field>
            <field name="category_id" ref="real_estate_groups"/>
        </record>
        <record id="estate_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="real_estate_groups"/>
            <field name="implied_ids" eval="[(4, ref('estate.estate_group_user'))]"/>
        </record>
        <record id="estate_property_rule" model="ir.rule">
            <field name="name">real estate record rule</field>
            <field name="model_id" ref="estate.model_estate_property"/>
            <field name="groups" eval="[(4,ref('estate.estate_group_user'))]"/>
            <field name="domain_force">[('company_id','in',company_ids)]</field>   
        </record>
        <record id="estate_property_rule_manager" model="ir.rule">
            <field name="name">real estate record rule</field>
            <field name="model_id" ref="estate.model_estate_property"/>
            <field name="groups" eval="[(4,ref('estate.estate_group_manager'))]"/>
        </record>
    </data>
</odoo>
    