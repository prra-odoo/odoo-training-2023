<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_estate_property_users">
        <t t-foreach="docs" t-as="users">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div style="font-size:35px">
                            <strong>SalesMan:</strong><span t-field="users.name"/>
                        </div>
                        <t t-set="properties" t-value="users.mapped('property_ids')"/>
                        <t t-foreach="properties" t-as="property">
                            <div style="margin-top:25px"/>
                            <div style="font-size:30px; margin-top:10px;text-decoration: underline;">
                                 <span t-field="property.name"></span>
                            </div>
                            <div style="font-size: 20px; font-weight: 500; margin-top: 10px">
                                Expected Price :
                                    <span t-field="property.expected_price"></span>
                            </div>
                            <div style="font-size: 20px; font-weight: 500; margin-top: 10px">
                                Status :
                                    <span t-field="property.state"></span>
                            </div>
                            <div>
                                <t t-call="estate.sub_report_property_offers"/>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>