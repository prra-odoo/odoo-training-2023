<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_user_property_offers">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <p style="font-size:26px">
                            <span t-field="user.name"/>
                        </p>
                        <t t-if="user.property_ids">
                            <t t-foreach="user.property_ids" t-as="property">
                                <b style="font-size:22px">
                                    <span t-field="property.name"/>
                                </b>
                                <div>
                                    <strong>Expected Price: </strong>
                                    <span t-field="property.expected_price"/>
                                </div>
                                <div class="offerstatus">
                                    <strong>Status: </strong>
                                    <span t-field="property.state"/>
                                </div>
                                <t t-if="property.offer_ids">
                                    <t t-call="estate.offers_template"/>
                                </t>
                                <t t-else="">
                                    <div>
                                        <strong>There are no offers yet.</strong>
                                    </div>
                                </t>
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <b style="font-size:26px">
                            <span t-field="property.name"/>
                        </b>
                        <div>
                            <strong>Salesman: </strong>
                            <span t-field="property.salesperson_id"/>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div class="offerstatus">
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <t t-if="property.offer_ids">
                            <t t-call="estate.offers_template"/>
                        </t>
                        <t t-else="">
                            <div>
                                <strong>There are no offers yet.</strong>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="offers_template">
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity (days)</th>
                    <th>Deadline</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                        <span t-field="offer.partner_id"/>
                    </td>
                    <td>
                        <span t-field="offer.validity"/>
                    </td>
                    <td>
                        <span t-field="offer.date_deadline"/>
                    </td>
                    <td>
                        <span t-field="offer.status"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>
</odoo>