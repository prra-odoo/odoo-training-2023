<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_template_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <h1>
                            <strong><span t-field="property.name"/></strong>
                            </h1>
                        </div>
                        <div>
                            <h2> <strong>Salesman: </strong>
                            <span t-field="property.user_id"/>
                            </h2>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div>
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <t t-if='property.offer_ids'>
                            <t t-call="estate.property_offers"/>
                        </t>
                        <t t-else="">
                            <span><strong>There are no Offers!!</strong></span>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_template_users_property_offers">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1> 
                            <strong>Salesman: </strong>
                            <span t-field="user.name"/>
                        </h1>
                        <t t-if='user.property_ids'>
                            <t t-foreach='user.property_ids' t-as='property'>
                                <h1>
                                    <strong><span t-field="property.name"/></strong>
                                </h1>
                                <div>
                                    <strong>Expected Price: </strong>
                                    <span t-field="property.expected_price"/>
                                </div>
                                <div>
                                    <strong>Status: </strong>
                                    <span t-field="property.state"/>
                                </div>
                                <t t-if='property.offer_ids'>
                                    <t t-call="estate.property_offers"/>
                                </t>
                                <t t-else="">
                                    <span><strong>There are no Offers!!</strong></span>
                                </t>
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="property_offers">
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity(Days)</th>
                    <th>Deadline</th>
                    <th>State</th>
                </tr>
            </thead>    
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                        <span t-field="offer.buyer_id"/>
                    </td>
                    <td>
                        <span t-field="offer.validity"/>
                    </td>
                    <td>
                        <span t-field="offer.date_deadline"/>
                    </td>
                    <td>
                        <span t-field="offer.status"/>
                    </td> 
                </tr>
            </tbody>
        </table>
    </template>
</odoo>