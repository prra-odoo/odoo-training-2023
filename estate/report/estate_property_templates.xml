<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Template for estate -->
    <template id="estate_property_offer_report">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <h2>
                                <strong><span t-field="property.name"/></strong>
                            </h2>
                        </div>

                        <div>
                            <h2>
                                <strong>Salesman: </strong>
                                <span t-field="property.seller_id"/>
                            </h2>
                        </div>

                        <div>
                            <h2>
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price"/>
                            </h2>
                        </div>

                        <div id="status_div">
                            <h2>
                                <strong>Status: </strong>
                                <span t-field="property.state"/>
                            </h2>
                        </div>
                        <div t-if="property.offer_ids">
                            <t t-call="estate.property_offers"/>
                        </div>
                        <div t-else="">
                            <strong> No Offers have been made yet :-( </strong>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    
    <!-- Template for users -->
    <template id="res_users_offer_report">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <lable for="user.name"><h1><strong>Salesman :</strong><span t-field="user.name"/></h1></lable>
                        </div>

                        <div t-foreach='user.property_ids' t-as='property'>
                            <div t-if="property.offer_ids">
                                <div>
                                    <h1><span t-field="property.name"/></h1>     
                                </div>

                                <div>
                                    <h2>
                                        <strong>Expected Price: </strong>
                                        <span t-field="property.expected_price"/>
                                    </h2>
                                </div>
        
                                <div>
                                    <h2>
                                        <strong>Status: </strong>
                                        <span t-field="property.state"/>
                                    </h2>
                                </div>

                                <div>
                                    <t t-call="estate.property_offers"/>
                                </div><br/>
                            </div>
                            <div t-else="">
                                <strong> No Offers have been made yet :-( </strong>
                            </div><br/>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Table Template -->
    <template id="property_offers">
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity(days)</th>
                    <th>Deadline</th>
                    <th>State</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                        <span t-field="offer.partner_id"/>
                    </td>
                    <td>
                        <span t-field="offer.validity"/>
                    </td>
                    <td>
                        <span t-field="offer.date_deadline"/>
                    </td>
                    <td>
                        <span t-field="offer.status"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>

</odoo>
