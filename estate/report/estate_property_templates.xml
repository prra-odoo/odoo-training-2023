<odoo>
    <template id="table">
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity(days)</th>
                    <th>Deadline</th>
                    <th>State</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                    <tr t-foreach="offers" t-as="offer">
                        <td>
                            <span t-field="offer.price"/>
                        </td>
                        <td>
                            <span t-field="offer.partner_id"/>
                        </td>
                        <td>
                            <span t-field="offer.validity"/>
                        </td>
                        <td>
                            <span t-field="offer.date_deadline"/>
                        </td>
                        <td>
                            <span t-field="offer.status"/>
                        </td>
                    </tr>            
            </tbody>
        </table>
    </template>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <t t-if="property.offer_ids">
                            <t t-call="estate.table"/>
                        </t>
                        <t t-else="">
                            <p> No offers yet! </p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_property_users">
        <t t-foreach="docs" t-as="users">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <strong>Salesman: </strong>
                            <span t-field="users.name"/>
                        </h1> 
                        <t t-set="properties" t-value="users.mapped('property_ids')"/>
                        <t t-foreach="properties" t-as="property">
                            <h2>
                                <span t-field="property.name"/>
                            </h2>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price"/>
                            </div>
                            <t t-if="property.offer_ids">
                                <t t-call="estate.table"/>
                            </t>
                            <t t-else="">
                                <p> No offers yet! </p>
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="index">
        <t t-call="website.layout">
            <title>Academy</title>
            <div class="oe_structure">
                <div class="container">
                    <div class="row">
                    <t t-foreach="properties" t-as="property">
                        <div class="card" style="width: 18rem;">
                            <t t-set="img" t-value="property.image" />
                             <img class="card-img-top" t-att-src="image_data_uri(property.image)" alt="Card image cap" />
                            <div class="card-body">
                                <h5 class="card-title"><t t-esc="property.name" /></h5>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                    </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>