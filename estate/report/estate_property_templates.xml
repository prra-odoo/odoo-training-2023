<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- <h1>
                            <span t-field="property.salesperson_id"/>
                        </h1> -->
                    
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>salesman:</strong>
                            <span t-field="property.salesperson_id"/>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div name="xyz">
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <t t-if="property.state !='new'">
                            <t t-call="estate.report_property_offers_table"/>    
                        </t>
                        <t t-else="">
                            <p>there is no offer</p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="report_property_offers_table">
        <table class="table">
                                <thead>
                                    <tr>
                                        <th>Price</th>
                                        <th>Partner</th>
                                        <th>Validity(days)</th>
                                        <th>Deadline</th>
                                        <th>State</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                                    <tr t-foreach="offers" t-as="offer">
                                        <td>
                                            <span t-field="offer.price"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.partner_id"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.validity"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.date_deadline"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.status"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
    </template>
    <template id="report_res_users_property">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            salesman:
                            <strong><span t-field="user.name"/></strong>
                        </h1>
                        <t t-foreach="user.property_ids" t-as="prop"> -->
                             <h2>
                                <span t-field="prop.name"/>
                            </h2>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="prop.expected_price"/>
                            </div>
                            <div>
                                <strong>Status: </strong>
                                <span t-field="prop.state"/>
                            </div>
                            <t t-if="prop.state !='new'">
                                <t t-set="property" t-value="prop"/>
                                <t t-call="estate.report_property_offers_table"/>    
                            </t>
                            <t t-else="">
                                <p>there is no offer</p>
                            </t>
                            <!-- <t t-set="docs" t-value="user.property_ids"/>
                            <t t-foreach="docs" t-as="do">
                                <p t-out="do"></p>
                            </t> -->
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    
</odoo>