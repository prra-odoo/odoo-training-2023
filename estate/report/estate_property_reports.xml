<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="estate_property_reports" model="ir.actions.report">
        <field name="name">Estate</field>
        <field name="model">estate.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.property_offers</field>
        <field name="report_file">estate.property_offers</field>
        <field name="print_report_name">'offer - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_estate_property"/>
        <field name="binding_type">report</field>
    </record>

    <record id="estate_res_users_reports" model="ir.actions.report">
        <field name="name">Estate Property</field>
        <field name="model">res.users</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.estate_property_offers_reports</field>
        <field name="report_file">estate.estate_property_offers_reports</field>
        <field name="print_report_name">'offer - %s' % (object.name)</field>
        <field name="binding_model_id" ref="base.model_res_users"/>
        <field name="binding_type">report</field>
    </record>

    <template id="estate_property_offer">
        <table class="table" t-if="property.offer_ids">
            <thead class="thread-lite">
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity (Days)</th>
                    <th>Deadline</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                        <span t-field="offer.partner_id"/>
                    </td>
                    <td>
                        <span t-field="offer.validity"/>
                    </td>
                    <td>
                        <span t-field="offer.date_deadline"/>
                    </td>
                    <td>
                        <span t-field="offer.status"/>
                    </td>
                </tr>
            </tbody>
        </table>
        <p t-else="">No offers have been made yet!></p>
    </template>

    <template id="property_offers">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="mt-5">
                        <t t-foreach="docs" t-as="property">
                            <div id="estate_property_image">
                                <style>
                                    #estate_property_image {
                                        position: absolute;
                                        right:  100px;
                                        top:    50px;
                                        width:  100px;
                                        height: 100px;
                                      }
                                      
                                </style>
                                <img t-attf-src="data:image/jpeg;base64,#{property.image}" alt="Not Found" height="200" width="200"/>
                            </div>
                            <h1>
                                <span t-field="property.name"/>
                            </h1>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price"/>
                            </div>
                            <div>
                                <strong>Status: </strong>
                                <span t-field="property.state"/>
                            </div>
                            <div id="salesman">
                                <strong>Salesman: </strong>
                                <span t-field="property.salesperson_id"/>
                            </div>
                            <t t-call="estate.estate_property_offer" />
                        </t>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="estate_property_offers_reports">
        <t t-foreach="docs" t-as="users">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <strong>Salesman Name: </strong>
                            <span t-field="users.name"/>
                        </h1>
                        <t t-set="offers" t-value="users.mapped('property_ids')"/>
                        <tr t-foreach="offers" t-as="new">
                            <div class="mt-5">
                                <div id="estate_property_image_user">
                                    <img t-attf-src="data:image/jpeg;base64,#{new.image}" alt="Not Found" height="200" width="200"/>
                                </div>
                                <h1>
                                    <span t-field="new.name"/>
                                </h1>
                                <div>
                                    <strong>Expected Price: </strong>
                                    <span t-field="new.expected_price"/>
                                </div>
                                <div>
                                    <strong>Status: </strong>
                                    <span t-field="new.state"/>
                                </div>
                                <div>
                                    <strong>Salesman: </strong>
                                    <span t-field="new.salesperson_id"/>
                                </div>
                            </div>
                            <t t-call="estate.estate_property_offer">
                                <t t-set="property" t-value="new"/>
                            </t>
                        </tr>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>