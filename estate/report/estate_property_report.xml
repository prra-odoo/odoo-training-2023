<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="paperformat_estate_property" model="report.paperformat">
        <field name="name">Custom Paperformat for the Estate Property</field>
        <field name="default" eval="False"/>
        <field name="disable_shrinking" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">8</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="dpi">96</field>
    </record>

    <record id="report_estate_property" model="ir.actions.report">
        <field name="name">Final Report</field>
        <field name="model">estate.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">estate.estate_property_report_template_badge</field>
        <field name="report_file">estate.estate_property_report_template_badge</field>
        <field name="print_report_name">'Property Sale - %s' % (object.name or 'Attendee').replace('/','')</field>
        <field name="paperformat_id" ref="estate.paperformat_estate_property"/>
        <field name="binding_model_id" ref="model_estate_property"/>
        <field name="binding_type">report</field>
    </record>
</odoo>