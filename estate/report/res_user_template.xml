<odoo>
    <template id="report_salesman_properties">
        <t t-foreach="docs" t-as="users">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div><h1>
                            <strong>Salesman:</strong><span t-field="users.name"/></h1>
                        </div>
                        <t t-set="properties" t-value="users.mapped('property_ids')"/>
                        <t t-foreach="properties" t-as="property">
                            
                            <div><h2>
                                 <span t-field="property.name"></span></h2>
                            </div>
                            <div>
                                <strong>Expected Price :</strong>
                                <span t-field="property.expected_price"></span>
                            </div>
                            <div >
                                <strong>Status :</strong>
                                <span t-field="property.state"></span>
                            </div>
                            <div>
                                <t t-call="estate.report_property_offers_subtemplate"/>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>    
</odoo>


