<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id = "offers_table">
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity</th>
                    <th>Deadline</th>
                    <th>state</th>
                </tr>
                
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                        <span t-field="offer.partner_id"/>
                    </td>
                    <td>
                        <span t-field="offer.validity"/>
                    </td>
                    <td>
                        <span t-field="offer.date_deadline"/>
                    </td>
                    <td>
                        <span t-field="offer.status"/>
                    </td>
                </tr>
            </tbody>
        </table>

    </template>
    <template id="report_property_offers">
    
        <!-- <t t-name = "estate.property_offers"> -->
            <t t-foreach="docs" t-as="property">
                    <t t-call="web.html_container">
                        <t t-call="web.external_layout">
                            <div class="page">
                                <h2>
                                    <span t-field="property.name"/>
                                </h2>
                                <div>
                                    <strong>Expected Price: </strong>
                                    <span t-field="property.expected_price"/>
                                </div>
                                <div>
                                    <strong>salesman</strong>
                                    <span t-field = "property.salesperson_id"/>
                                </div>
                                <div>
                                    <strong>Status</strong>
                                    <span t-field = "property.state"/>
                                </div>
                                <t t-if = "property.offer_ids">
                                
                                        <t t-call = "estate.offers_table"/>
                            
                                </t>
                                <t t-else ="">
                                    <div>
                                        <strong>No offers had been made yet</strong>
                                    </div>
                                </t>
                                
                            </div>
                        </t>
                    </t>
            </t>
        <!-- </t> -->
    </template>

  <template id = "report_property_salesman">
    <t t-foreach="docs" t-as="salesman">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <h2>Salesman:</h2>
                <strong><h3 t-field = "salesman.name"></h3></strong>
                <t t-set="properties" t-value="salesman.mapped('property_ids')"/>
                <t t-foreach = "properties" t-as ="property">
                   <div class = "property_name">
                        <strong>Property name:</strong>
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                   </div>
                   <div class = "property_expected_price">
                        <strong>Expected price:</strong>
                        <h2>
                            <span t-field="property.expected_price"/>
                        </h2>
                   </div>
                   <div class = "Status">
                        <strong>Status:</strong>
                        <h2>
                            <span t-field="property.state"/>
                        </h2>
                    </div>
                    <t t-if = "property.offer_ids">
                        <t t-call = "estate.offers_table"/>
                    </t>
                    <t t-else = "">
                        <h1> Currently no offers recievedfor these property </h1>
                    </t>
                </t>
            </t>
        </t>
    </t>    
  </template>


  
</odoo>
