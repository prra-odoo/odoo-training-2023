<odoo>
    <record id ="estate_property_put_offers_form_view" model="ir.ui.view">
        <field name="name">estate.property.offer.tree.view</field>
        <field name="model">estate.property.put.offer</field>
        <field name="arch" type ="xml">
           <form>
            <sheet>
                <group>
                    <group>
                        <field name="price"/>
                    </group>
                    <group>
                        <field  name="status"/>
                    </group>
                    <group>
                        <field name="partner_id"/>
                    </group>
                    <group>
                        <field name="validity"/>
                    </group> 
                    <group>
                        <field name="property_type_id"/>
                    </group>   
                </group>
            </sheet> 
            <footer>
                <button name = "action_put_offer" type = "object" string = "put offer" class= "oe_highlight"/>
                <button string="Cancel" class="oe_highlight"
                special="cancel" data-hotkey="z"/>
            </footer>
           </form>
        </field>
    </record> 
</odoo>