<odoo>
    <record id="offer_wizard_action" model="ir.actions.act_window">
        <field name="name">Create Offer</field>
        <field name="res_model">estate.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="offer_wizard_view_form" model="ir.ui.view">
        <field name="name">Offer Wizard Form view</field>
        <field name="model">estate.offer.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group >
                    <field name="price" string="Price"/>
                    <field name="buyer_id" string="Buyer"/>
                    <field name="property_type_id" />
                </group>
                    <footer>
                        <button string="Make an Offer" name="action_create_offer" type="object" class="oe_highlight" data-hotkey="q"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
            </form>
        </field>
    </record>
</odoo>