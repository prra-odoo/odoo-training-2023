<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="add_offer_wizard_action" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="res_model">add.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="add_offer_wizard_form_view" model="ir.ui.view">
        <field name="name">Add Offer Wizard Form View</field>
        <field name="model">add.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="add offer">
                <group>
                <field name="price"/>
                <!-- <field name="offer_status"/> -->
                <field name="buyer_id"/>
                <footer>
                    <button string="Make an offer" name="add_offer_function" type="object" class="btn-primary"  />
                    <button string="Cancel" class="btn-secondary" special="cancel"/> 
                </footer>
                </group>
            </form>
        </field>
    </record>
</odoo>