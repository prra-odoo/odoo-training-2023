<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_offer_wizard_form" model="ir.ui.view">
        <field name="name">estate.offer.wizard.form</field>
        <field name="model">estate.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Form View">
                <sheet>
                    <group>
                        <field name="offer_value"/>
                        <field name="partner_id"/>
                    </group>
                </sheet>
                <footer>
                    <button type="object" name="action_create_offers" string="Create Offers" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="estate_offer_bind" model="ir.actions.act_window">
        <field name="name">Create Offers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="estate.model_estate_property"/>
        <field name="binding_view_types">list</field>
    </record>

    <record id="estate_offer_wizard_action" model="ir.actions.act_window">
        <field name="name">Estate Offer Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="estate_offer_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>