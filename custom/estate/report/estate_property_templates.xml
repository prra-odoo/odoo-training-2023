<odoo>

    <template id="estate_property_template_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <span t-field="property.name" />
                        </h1>
                        <div>
                            <b>
                                <strong>Expected Price: </strong>
                            </b>
                            <span t-field="property.expected_price" />
                        </div>
                        <div>
                            <b>
                                <strong>Salesperson: </strong>
                            </b>
                            <span t-field="property.seller_id" />
                        </div>
                        <div name="estate_account_sold">
                            <b>
                                <strong>Status: </strong>
                            </b>
                            <span t-field="property.state" />
                        </div>
                        <t t-if="property.offer_ids">
                            <t t-call="estate.estate_property_offers_section" />
                        </t>
                        <t t-else="">
                            <strong>There are no offers yet</strong>

                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="estate_property_offers_section">
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity</th>
                    <th>Deadline</th>
                    <th>Status</th>

                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')" />
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price" />
                    </td>
                    <td>
                        <span t-field="offer.partner_id" />
                    </td>
                    <td>
                        <span t-field="offer.validity" />
                    </td>
                    <td>
                        <span t-field="offer.date_deadline" />
                    </td>
                    <td>
                        <span t-field="offer.status" />
                    </td>
                </tr>
            </tbody>
        </table>

    </template>
    <template id="estate_property_template_sellers">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <span t-field="user.name" />
                        </h1>
                        <h2>
                            <span t-field="user.company_id" />
                        </h2>
                        <h2>
                            <span t-field="user.email" />
                        </h2>
                        <t t-if='user.property_ids'>
                            <t t-foreach='user.property_ids' t-as='property'>
                                <h1>
                                    <strong>
                                        <span t-field="property.name" />
                                    </strong>
                                </h1>
                                <div>
                                    <strong>Expected Price: </strong>
                                    <span t-field="property.expected_price" />
                                </div>
                                <div>
                                    <strong>Status: </strong>
                                    <span t-field="property.state" />
                                </div>
                                <t t-if='property.offer_ids'>
                                    <t t-call="estate.estate_property_offers_section" />
                                </t>
                                <t t-else="">
                                    <span>
                                        <strong>There are no Offers!!</strong>
                                    </span>
                                </t>
                            </t>
                        </t>
                    </div>

                </t>
            </t>
        </t>

    </template>
    

</odoo>