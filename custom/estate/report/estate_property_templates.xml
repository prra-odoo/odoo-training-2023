<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="tables">
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity (days)</th>
                    <th>Deadline</th>
                    <th>State</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                        <span t-field="offer.partner_id"/>
                    </td>
                    <td>
                        <span t-field="offer.validity"/>
                    </td>
                    <td>
                        <span t-field="offer.date_deadline"/>
                    </td>
                    <td>
                        <span t-field="offer.status"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>

    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <strong><span t-field="property.name"/></strong>
                        </h2>
                        <div>
                            <strong>Salesman: </strong>
                            <span t-field="property.seller_id"/><br/>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/><br/>
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <div class="offers_table" t-if='property.mapped("offer_ids")'>
                            <t t-call="estate.tables"/>
                        </div>
                        <div t-else=""><strong>how there are no offers yet :(</strong></div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_users_property" >
        <t t-foreach="docs" t-as="users">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">  
                        <h1>
                            <strong>Salesman: </strong>
                            <span t-field="users.name"/>
                        </h1>
                        <t t-if="users.property_ids">
                            <t t-foreach="users.property_ids" t-as="property">
                                <h2>
                                    <span t-field="property.name"/>
                                </h2>
                                <div>
                                    <strong>Expected Price: </strong>
                                    <span t-field="property.expected_price"/><br/>
                                    <strong>Status: </strong>
                                    <span t-field="property.state"/><br/>
                                </div>
                                <div t-if='property.mapped("offer_ids")'>
                                    <t t-call="estate.tables"/>
                                </div>
                                <div t-else=""><strong>how there are no offers yet :(</strong></div>
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>