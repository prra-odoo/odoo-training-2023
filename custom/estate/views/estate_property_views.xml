<?xml version="1.0"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_state': True}</field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel" decoration-success="state in ('offered received','offer accepted')"
                                   decoration-bf="state=='offer accepted'"
                                   decoration-muted="state == 'sold'">
                <field name='state' invisible="True"/>
                <field name="property_type_id" />
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="bedrooms" optional= "hide"/>
                <field name="living_area" string="Living Area(sqm)"/>
                <field name="expected_price" optional = "show"/>
                <field name="selling_price"/>
                <field name="dateavailability" optional="hide"/>
                <field name="best_price"/>
                <field name="offer_ids" string="Partner"/>
            </tree> 
        </field>
    </record>
    
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.from.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="estate property">
                <header>
                    <button name = "action_sold" type="object" string="Sold" states="new" class="oe_highlight" attrs="{'invisible':[('state','in',('sold','canceled'))]}"/>
                    <button name = "action_canceled" type="object" string="Cancel"  class="oe_highlight"  attrs="{'invisible':[('state','in',('sold','canceled'))]}"/>
                    <field name="state" widget="statusbar" options = '{"clickable":"1"}'/>
                </header>
                <sheet> 
                
                <widget name="web_ribbon" title="Sold" bg_color="bg-danger" attrs="{'invisible': [('state', 'in', ('offered received','new','canceled','offer accepted'))]}"/>
                <widget name="web_ribbon" title="Accepted" bg_color="bg-success" attrs="{'invisible': [('state', 'in', ('offered received','new','canceled','sold'))]}"/>
                    <div class="oe_title">
                        <h1 class="title_header">
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <field name="property_tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/> 
                        <group>
                            <field name="state"/>
                            <field name="property_type_id" options="{'no_create':True, 'create_edit':false}"/>
                            <field name="name"/>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="dateavailability"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <group>
                                    <field name = "description"/>
                                    <field name = "bedrooms"/>
                                    <field name = "living_area"/>
                                    <field name = "facades"/>
                                    <field name = "garage"/>
                                    <field name = "garden"/>
                                    <field name = "garden_area" attrs="{'invisible': [('garden','=',False)] }"/>
                                    <field name = "garden_direction" attrs="{'invisible':[('garden','=',False)]}"/>
                                    <!-- <field name = "state"/> -->
                                    <field name = "totalarea"/>
                                </group>
                                </group>
                            </page>                      
                            <page string="Offers">
                                <field name="offer_ids"  attrs="{'readonly':[('state','in',['offer accepted','sold','canceled'])]}">
                                    <tree editable = 'bottom' create = 'True' decoration-success="status=='accepted'" decoration-danger="status=='refused'">
                                        <field name="price"/>
                                        <field name="partner_id" string="Partner"/>
                                        <field name="date_deadline" string="Date Deadline"/>
                                        <field name="validity" string="Validity"/>
                                        <button name="action_accepted" string="Confirm" status='accepted' type="object" icon="fa-check" attrs="{'invisible':[('status','in',['accepted','refused'])]}"/>
                                        <button name="action_refused" string="Cancel" status='refused' type="object" icon="fa-times" attrs="{'invisible':[('status','in',['accepted','refused'])]}"/>
                                        <field name="status" string="Status" invisible="True"/>
                                    </tree>
                                </field>
                            </page>
                
                            <page string="Other Info">
                                <group>
                                    <group>
                                        <field name = "salesperson"/>
                                        <field name = "buyer"/>
                                    </group>
                                </group>
                            </page>
                         </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>
     
     <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
        <search string = "estate property">
            <field name = "postcode"/>
            <field name = "expected_price"/>
            <field name = "bedrooms"/>
            <field name = "living_area" string ="Living Area(sqm)" filter_domain="[('living_area','>=',self)]"/>
            <field name = "facades"/>
            <field name = "property_tag_ids"/>
            <filter string = "Available" name = "state" domain="[('state','in',['offered received','new'])]"/>
            <group expand = '1' string ="Group By">
                <filter string = "Postcode" name="postcode" context = "{'group_by':'postcode','residual_visible':True}"/> 
            </group>
        </search>
        </field>
    </record>   
</odoo>