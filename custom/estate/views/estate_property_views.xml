<?xml version="1.0"?>
<odoo>
    <record id="real_estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.real.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_available': True}</field>
        
    </record> 
    <record id="real_estate_property_form" model="ir.ui.view">
        <field name="name">real_estate_property_form</field>
        <field name="model">estate.real.property</field>
        <field name="arch" type="xml">
            <form string="New">
                <header>
                        <field name="state" widget="statusbar" options="{'clickable':'1'}"/>
                        <button type="object" name="action_sold" string="Sold" class='oe_highlight' states="accepted"/>
                        <button type="object" name="action_cancelled" string="Cancel" class='oe_highlight' states="accepted"/>
                    </header>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="message_ids" />
                        <field name="activity_ids" />
                   </div>
                <sheet>
            
                    <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <widget name="web_ribbon" title="Sold" bg_color="bg-info" attrs="{'invisible': [('state', '!=', 'sold')]}"/>
 
                    
                    
                    <h1><field name="name" nolabel="1"/></h1>
                
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/> 
                            <field name="property_type_id" widget="list.many2one" options="{'no_create':True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="description_buyer"/>
                            <field name="best_price"/>
                        </group>
                   
                        <notebook>
                            <page string="Description">
                                <group>
                                    <group>
                                        <field name="description"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="garden" invisible="0"/>
                                        <field name="garden_area"  attrs="{'invisible':[('garden','=',False)]}"/>
                                        <field name="total_area" />
                                        <field name="garden_orientation" attrs="{'invisible':[('garden','=',False)]}"/>
                                        <field name="active"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids" string="offers" attrs="{'readonly': [('state', 'in', ['accepted','sold','cancelled'])]}" />
                            </page>
                            <page string="Other Info">
                                <group>
                                    <group>
                                        <field name="buyer_id"/>
                                        <field name="seller_id"/>
                                    </group>
                                </group>
                           
                            </page>
                           
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="real_estate_property_search" model="ir.ui.view">
        <field name="name">real_estate_property_search</field>
        <field name="model">estate.real.property</field>
        <field name="arch" type="xml">
            <search string="Title for:">
                
                <field name="postcode" string="Postcode for:" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" filter_domain="['|',('living_area', '>', self), ('living_area', '=', self)]"/>
                <field name="facades"/>
                <field name="tag_ids"/>
                <field name="property_type_id"/>
                <separator/>
                <filter string="Available" name="available" domain="[('state', 'in', ['new','recieved'])]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group> 
            </search>
        </field>
    </record>
