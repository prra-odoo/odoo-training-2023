    <record id="real_estate_property_view_tree" model="ir.ui.view">
        <field name="name">Property</field>
        <field name="model">estate.real.property</field>
        <field name="arch" type="xml">
            <tree string="Channel" decoration-success="state=='recieved' or state=='accepted'" decoration-muted="state=='sold'" decoration-bf="state=='accepted'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area" />
                <field name="date_availability" optional="hide"/>
                <field name="state"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </tree>
        </field>
    </record>

    <record id="real_estate_property_view_kanban" model="ir.ui.view">
        <field name="name">real.estate.property.view.kanban</field>
        <field name="model">estate.real.property</field>
        <field name="arch" type="xml">
        <kanban default_group_by="property_type_id" group_create="false" group_delete="false" records_draggable="false">
            <field name="state"/>
            <field name="tag_ids"/>
            <field name="buyer_id"/>
            <field name="color"/>
            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="{{'oe_kanban_color_' + kanban_getcolor(record.color.raw_value) }} oe_kanban_global_click">                        >
                        <strong><field name="name"/></strong>
                        <div class="text-muted">
                            <div t-if="record.buyer_id.value">
                                <span class="fa fa-user me-2" aria-label="Buyer" title="Buyer"></span><t t-esc="record.buyer_id.value"/>
                            </div>
                            Expected Price : <field name="expected_price"/>
                            <div t-if="record.state.raw_value == 'offer_accepted' or record.state.raw_value=='sold'">
                                Selling Price : <field name="selling_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_received'">
                                Best Offer : <field name="best_price"/>
                            </div>
                        </div>
                        <div t-if="record.tag_ids" class="oe_kanban_bottom_left float-start">
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>
                        <div class="oe_kanban_bottom_right float-end">
                            <field name="seller_id" widget="many2one_avatar_user"/>
                        </div>                        
                    </div>
                </t>
            </templates>
        </kanban>
        
        </field>
    </record>


     
</odoo>