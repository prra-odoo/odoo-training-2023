    <record id="real_estate_property_view_tree" model="ir.ui.view">
        <field name="name">Property</field>
        <field name="model">estate.real.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>
    

     

    <record id="real_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">real_estate_property_offer_tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="bottom">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
                <button name="action_accept" type="object" string="accept" icon="fa-check"/>
                <button name="action_refused" type="object" string="refuse" icon="fa-times"/>
                
            </tree>
        </field>
    </record>
    
    <record id="real_estate_property_offer_form" model="ir.ui.view">
        <field name="name">real_estate_property_offer_form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
        <form>
            <sheet>
                <notebook>
                    <page string="offers">
                        <group>
                            <group>
                                <field name="price"/>
                                <field name="status"/>
                                <button name="action_accept" type="object" string="accept" icon="fa-check"/>
                                <button name="action_refused" type="object" string="refuse" icon="fa-times"/>
                                <field name="partner_id"/>
                                <field name="validity"/>
                                <field name="date_deadline"/>
                        
                            </group>
                        
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form> 
        </field>
    </record> 
</odoo>