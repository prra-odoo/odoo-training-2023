<?xml version="1.0"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="property_type_id" />
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="bedrooms" optional= "hide"/>
                <field name="living_area" string="Living Area(sqm)"/>
                <field name="expected_price" optional = "show"/>
                <field name="selling_price"/>
                <field name="dateavailability"/>
                <field name="best_price"/>
                <field name="offer_ids" string="Partner"/>
                <field name="status" string="Status"/>
            </tree> 
        </field>
    </record>
    
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.from.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="estate property">
                <header>
                    <field name="states" widget="statusbar" options = '{"clickable":"1"}'/>
                    <button name = "action_sold" type="object" string="Sold" class="oe_highlight"/>
                    <button name = "action_canceled" type="object" string="Cancel" class="oe_highlight"/>
                </header>
                <sheet> 
                    <div class="oe_title">
                        <h1 class="title_header">
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <field name="property_tag_ids" widget="many2many_tags"/> 
                        <group>
                            <field name="states"/>
                            <field name="property_type_id"/>
                            <field name="name"/>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="dateavailability"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <group>
                                    <field name = "description"/>
                                    <field name = "bedrooms"/>
                                    <field name = "living_area"/>
                                    <field name = "facades"/>
                                    <field name = "garage"/>
                                    <field name = "garden"/>
                                    <field name = "garden_area"/>
                                    <field name = "garden_direction"/>
                                    <!-- <field name = "states"/> -->
                                    <field name = "totalarea"/>
                                </group>
                                </group>
                            </page>                      
                            <page string="Offers">
                                <field name="offer_ids">
                                    <tree editable = 'bottom' create = 'True'>
                                        <field name="price"/>
                                        <field name="partner_id" string="Partner"/>
                                        <field name="date_deadline" string="Date Deadline"/>
                                        <field name="validity" string="Validity"/>
                                        <button name="action_accepted" string="Confirm" status='accepted' type="object" icon="fa-check"/>
                                        <button name="action_refused" string="Cancel" status='refused' type="object" icon="fa-times"/>
                                        <field name="status" string="Status"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <group>
                                        <field name = "salesperson"/>
                                        <field name = "buyer"/>
                                    </group>
                                </group>
                            </page>
                         </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
     
     <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
        <search string = "estate property">
            <field name = "postcode"/>
            <field name = "expected_price"/>
            <field name = "bedrooms"/>
            <field name = "living_area" string ="Living Area(sqm)"/>
            <field name = "facades"/>
            <field name = "property_tag_ids"/>
            <filter string = "Available" name = "states" domain="['|',('states','=','new'),('states','=','offered received')]"/>
            <group expand = '1' string ="Group By">
                <filter string = "Postcode" name="postcode" context = "{'group_by':'postcode','residual_visible':True}"/> 
            </group>
        </search>
        </field>
    </record>   
</odoo>