<?xml version="1.0"?>
<odoo>
    <record id="estate_property_types_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.types</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id = "estate_property_types_tree_view" model="ir.ui.view">
        <field name="name">estate.property.types.tree.view</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="offer_count"/>
                <field name="offer_ids"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_types_form_view" model="ir.ui.view">
        <field name="name">estate.property.types.form.view</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <form string="estate property types">
                <sheet>
                <div class="oe_button_box" name="button_box">
                           <button type="action" class="oe_stat_button" icon="fa-money" name="%(estate_property_offer_action)d">
                                <field name="offer_count"  widget="statinfo" string="Offers"/>
                           </button>
                        </div>
                    <div class="oe_title">
                        <h1 class = "oe_title">
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string = "Properties">
                        <field name="property_ids">
                            <tree create="False" delete="False">
                                <field name="name"/>
                                <field name="expected_price"/>   
                                <field name="status"/>
                            </tree>
                        </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>