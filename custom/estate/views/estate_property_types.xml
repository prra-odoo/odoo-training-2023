<?xml version="1.0"?>
<odoo>
    <record id="real_estate_property_action_types" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
        
    </record> 
    <record id="real_estate_property_types_tree" model="ir.ui.view">
        <field name="name">real_estate_property_types_tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Types">
                <field name="sequence" widget="handle"/>
                <field name="name"></field>

            </tree>
        </field>
    </record>
    <record id="real_estate_property_types_view_form" model="ir.ui.view">
        <field name="name">real.estate.property.types.view.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Types">
                <sheet>
            
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" name="%(real_estate_property_offer_action)d" icon="fa-money">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="offer_count"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Offers
                                    </span>
                                </div>
                        </button>
                    </div>
                        
                    <div class="oe_title">
                        <h1><field nolabel="1" name="name"/></h1>
                    </div>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree string="Typess" editable="bottom">
                                    <field name="name" string="Title"/>
                                    <field name="expected_price" string="Expected Price"/>
                                    <field name="state" string="Status"/>
                                
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
</odoo>