        <field name="name">Property Types</field>
        <field name="res_model">estate.property.types</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="estate_property_types_form" model="ir.ui.view">
        <field name="name">estate.types.form</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
                <form>
                <sheet>
                <label for="name" string="Property Type"/>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                    </div>
                     </sheet>
                </form>
        </field>
    </record>
</odoo>