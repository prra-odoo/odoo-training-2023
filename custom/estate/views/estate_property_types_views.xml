<?xml version="1.0"?>
<odoo>
    <record id="estate_property_types_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.types</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="estate_property_types_form" model="ir.ui.view">
        <field name="name">estate.types.form</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
                <form>
                <sheet>
                 <div class="oe_button_box" name="button_box">
                           <button type="action" class="oe_stat_button" icon="fa-money" name="%(estate_property_offer_action)d">
                                <field name="offer_count"  widget="statinfo" string="Offers"/>
                           </button>
                        </div>
                <label for="name" string="Property Type"/>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                    </div>
                    
                    <!-- <field name=""/> -->
                    <notebook>
                    <page string="Properties">
                        <field name="property_ids">
                            <tree string="Property">
                            <field name="name" string="Title"/>
                            <field name="expected_price"/>
                            <field name="state"/>
                            </tree>
                        </field>
                        </page>
                    </notebook>
                     </sheet>
                </form>
        </field>
    </record>
    <record id="estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate.types.tree</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>