<?xml version='1.0'?>
<odoo>

    <record id='estate_property_offer_tree' model='ir.ui.view'>
        <field name='name'>estate.property.offer.tree</field>
        <field name='model'>estate.property.offer</field>
        <field name='arch' type='xml'>
            <tree editable="bottom">
                <field name='price'/>
                <field name='partner_id'/>
                <field name='validity'/>
                <field name='date_deadline' widget='date'/>
                <button name="action_accept" type="object" title="Accept" icon="fa-check"/>
                <button name="action_refuse" type="object" title="Refuse" icon="fa-remove"/>
                <field name='status'/>
            </tree>
        </field>
    </record>

     <record id='estate_property_offer_form' model='ir.ui.view'>
        <field name='name'>estate.property.offer.form</field>
        <field name='model'>estate.property.offer</field>
        <field name='arch' type='xml'>
            <form string='Estate Property Offer Form'>
                <sheet>
                    <group>
                        <group>
                            <field name='price'/>
                            <field name='partner_id'/>
                            <field name='validity'/>
                            <field name='date_deadline' widget='date'/>
                            <field name='status'/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>