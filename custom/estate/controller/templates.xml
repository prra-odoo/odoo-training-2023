        <?xml-stylesheet type="text/css" href="style.css"?>
<odoo>

    <template id="index">
        <title>Real Estate</title>
    <t t-call="website.layout">


        <t t-foreach="es_data" t-as="property">
            <t t-if="property.state!='sold'">
        <div style="display:inline-block; margin:1%;">
            <a t-attf-href="/estate/{{slug(property)}}" style="text-decoration:none">
                <div class="card" style="width:500px;height:500px;border:1px solid #35979c; background-color:#35979c;">
                    <img class="card-img-top" t-attf-src="data:image/*;base64,{{property.p_image}}" style="width:100%;height:100%;"/>
                    <div class="card-body">
                        <h5 class="card-title"><t t-esc="property.name"/></h5>
                        <p class="card-text"><t t-esc="property.description"/></p>

                        <h6>₹<t t-esc="property.expected_price"/></h6>
                        <t t-set="tag" t-value="property.mapped('tag_ids')"/>
                                <t t-foreach="tag" t-as="t">
                                <span t-esc="t.name" class="badge rounded-pill bg-info text-dark"/>
                                </t>
                    </div>
                </div>
            </a>
        </div>
        </t>
        </t>
        <div t-if="pager" class="d-flex justify-content-center">
                        <t t-call="website.pager"/>
                    </div>
    </t>
    </template>
    <template id="page">
    <t t-call="website.layout">
    <a t-attf-href="/estate" style="text-decoration:none">
    <button type="button" class="btn btn-info">Back to Properties</button></a>
    <div style=" margin:50px; border:1px solid black; padding:1%; height:90%;" >
                    <img class="float-end card-img-top" t-attf-src="data:image/*;base64,{{data.p_image}}" style="width:30%;height:400px"/>
                        <h1 class="card-title"><span t-field="data.name"/></h1>
                        <t t-foreach="data.tag_ids" t-as="t">
                                <p t-esc="t.name" class="badge rounded-pill bg-info text-dark"/>
                                </t>
                        <!-- <p class="card-text"><t t-esc="data.description"/></p> -->
                        <p class="card-text text-muted"><t t-esc="data.property_type_id.name"/></p>
                        <p class="card-text">Expected Price: ₹<t t-esc="data.expected_price"/></p>
                        <p class="card-text">Available From: <t t-esc="data.date_availability"/></p>
                        <p class="card-text">Bedrooms: <t t-esc="data.bedrooms"/></p>
                        <p class="card-text">Living Area: <t t-esc="data.living_area"/></p>
                        <t t-if="data.garden">
                        <p class="card-text">Garden Area: <t t-esc="data.garden_area"/></p>
                        <p class="card-text">Garden Oreintaion: <t t-esc="data.garden_orientation"/></p>
                        </t>
                        <p class="card-text">Total Area: <t t-esc="data.total_area"/></p>
                                             
                        <t t-if="data.offer_ids">
                        <table class="table table-dark">
                       <thead>
                                <tr>
                                    <th>Price</th>
                                    <th>Partner</th>
                                    <th>Validity(days)</th>
                                    <th>Deadline</th>
                                    <th>State</th>

                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="offers" t-value="data.mapped('offer_ids')"/>
                                <tr t-foreach="offers" t-as="offer">
                                    <td>
                                        <span t-field="offer.price"/>
                                    </td>
                                    <td>
                                        <span t-field="offer.partner_id"/>
                                    </td>
                                    <td>
                                        <span t-field="offer.validity"/>
                                    </td>
                                    <td>
                                        <span t-field="offer.date_deadline"/>
                                    </td>
                                    <td>
                                        <span t-field="offer.status"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        </t>
    </div>

    </t>

    </template>
</odoo>