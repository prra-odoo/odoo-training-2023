<odoo>
    

    <template id="index">
        <t t-call="website.layout">
            <t t-set="title">Properties</t>
            <div class="oe_structure">
                <div id="wrap" class="o_wevent_index">
                    <div class="container text-center">
                        <div class="row row-cols-3">
                            <t t-foreach="teachers" t-as="teacher">
                            <div class="col">
                                    <a t-attf-href="/properties/{{ slug(teacher) }}">
                                    <div class="card shadow-lg p-3 mb-5" style="width: 18rem;background-color:#ebf2ff">
                                        <t t-if="teacher.image">
                                            <img t-att-src="image_data_uri(teacher.image)" alt="image" class="oe_avatar"/>
                                        </t>
                                    
                                        <div class="card-body">
                                            <h5 class="card-title"><t t-esc="teacher.name"/></h5>
                                            <h6 class="card-subtitle mb-2 text-muted"><t t-esc="teacher.property_type_id.name"/></h6>
                                            <p class="card-text">
                                                <t t-esc="teacher.state"></t>

                                            </p>
                                            <div class="card-footer">
                                                <!-- <span class="badge mr4  o_tag_color_8">
                                                    <t t-esc="teacher.buyer_id.name"/>
                                                </span> -->
                                            <p>
                                            <t t-set="tag" t-value="teacher.mapped('tag_ids')"/>
                                            <t t-foreach="tag" t-as="t">
                                                <span t-field="t.name"  class="badge rounded-pill bg-info text-dark"/>
                                            </t>
                                            </p>
                                            </div>
                                  
                                        </div>
                                    
                                    </div>
                                    </a>
                                    
                                    
                                    
                                
                            </div>
                            </t>
                        </div>
                        <div class="d-flex justify-content-center my-3">
                            <t t-call="website.pager"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

