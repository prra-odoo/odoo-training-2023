<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_wizard_offer_view_form" model="ir.ui.view">
        <field name="name">estate.wizard.offer.form</field>
        <field name="model">estate.wizard.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="property_ids" invisible="1"/>
                        <field name='count' attrs="{'invisible': [('count', '=', 1)]}"/>
                    </group>
                    <group>
                        <field name='price'/>
                        <field name='partner_id'/>
                    </group>
                    <separator name="separator"/>
                    <footer>
                        <button name="action_create_offer" type="object" string="Make an Offer" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_wizard_offer_action" model="ir.actions.act_window">
        <field name="name">Add Offers</field>
        <field name="res_model">estate.wizard.offer</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="estate.model_estate_property"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>