<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="real_estate_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">real.estate.property.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Property Using CREATE Button!!
            </p>
        </field>
    </record>


    <record id="property_tag_tree_view" model="ir.ui.view">
        <field name="name">Property Tag </field>
        <field name="model">real.estate.property.tag</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="Property_tag_form" model="ir.ui.view">
        <field name="name">Property tag form</field>
        <field name="model">real.estate.property.tag</field>
        <field name="arch" type="xml">
            <form string="real_estate_form">
                
                <sheet>
                    <h1>Property Tags</h1>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>   
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>