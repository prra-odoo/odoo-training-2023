<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FOR TREE VIEW -->
    <record id="real_estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">real_estate_property_Offer_tree_view</field>
        <field name="model">real.estate.property.offer</field>
        <field name="arch" type="xml">
            <tree decoration-success="status=='accepted'" decoration-danger="status=='refused'" string="Channel" editable="bottom">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status" optional="1"/>
                <field name="validity" string="Validity(days)"/>
                <field name="date_deadline" />
                <field name="property_type_id" />
                <button name="action_confirm" title='Accepted' type="object" icon="fa-check"  attrs="{'invisible': [('status', 'in', ['accepted' , 'refused'])]}"/>
                <button name="action_cancel" title='Refuse' type="object" icon="fa-times" attrs="{'invisible' : [('status', 'in', ['accepted' , 'refused'])]}"/>
            </tree>
        </field>
    </record>
    <record id="real_estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">real_estate_property_Offer_form_view</field>
        <field name="model">real.estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price" />
                        <field name="partner_id" />
                        <field name="status" />
                        <field name="date_deadline" />
                        <field name="validity" />
                        <field name="property_type_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>