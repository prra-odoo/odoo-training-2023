<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="menu_shop" model="website.menu">
            <field name="name">Properties</field>
            <field name="parent_id" ref="website.main_menu" />
            <field name="url">estate/home</field>
        </record>
    </data>
    <template id="property">
        <t t-call="website.layout">
            <t t-set="title">Properties</t>
            <div class="oe_structure" />
            <div class="oe_structure">
                <div class="container">
                    <h3 t-field="properties.name" class="text-center mt-3 rounded-bottom" />
                    <p class="text-end">Last modified: <i t-field="properties.write_date"
                            t-options='{"widget":"relative"}' /></p>
                    <div>Property Name:<span t-field="properties.name"  /><span
                            t-field="properties.description"></span>
                            <div> Property Type: <span
                                t-field="properties.property_type_id"></span>
                        </div>
                        Postcode: <span t-field="properties.postcode"></span> Date Availability: <span
                            t-field="properties.date_availability"></span> Expected Price: <span
                            t-field="properties.expected_price"></span> Bedrooms: <span
                            t-field="properties.bedrooms"></span> Living Area: <span
                            t-field="properties.living_area"></span> Sales Person: <span
                            t-field="properties.salesperson_id"></span>

                    </div>
                    <t t-if="properties.offer_ids">
                        <h3 class="text-center mt-3 text-decoration-underline">Offers</h3>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Price</th>
                                    <th>Partner</th>
                                    <th>Validity (days)</th>
                                    <th>Deadline</th>
                                    <th>State</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="offers" t-value="properties.mapped('offer_ids')" />
                                <tr t-foreach="offers" t-as="offer">
                                    <td>
                                        <span t-field="offer.price" />
                                    </td>
                                    <td>
                                        <span t-field="offer.partner_id" />
                                    </td>
                                    <td>
                                        <span t-field="offer.validity" />
                                    </td>
                                    <td>
                                        <span t-field="offer.date_deadline" />
                                    </td>
                                    <td>
                                        <span t-field="offer.status" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                    <t t-else="">
                        <div class="mt-3 text-center">No offers have been made yet :(</div>
                    </t>
                    <div class="mb-5"></div>
                </div>
            </div>
            <div class="oe_structure" />
        </t>
    </template>
    <template id="index">
        <t t-call="website.layout">
            <t t-set="title">Properties</t> date: <input type="date" id="birthday" name="birthday"></input>
            <h1
                class="text-center mt-3"
                style="color: black;
            text-shadow: 2px 2px 4px #4CBB17;">Properties</h1>
            <div
                class="oe_structure">
                <div class="container">

                    <div style="width=device-width, initial-scale=1">
                        <div class="row">
                            <div class="row gy-3 my-3">
                                <t t-foreach="properties" t-as="property">
                                    <div class="col-sm-6 col-md-3 col-lg-3">

                                        <div class="card" style="border-radius: 25px;">
                                            <!-- <img class="card-img-top" src="..." alt="Card
                                                image
                                            cap"
                                                /> -->
                                            <img class="card-img-top "
                                                t-attf-src="data:image/png;base64,#{property.image_customer}"
                                                style="align:left;width:300px;height:285px;border-radius:8px;"
                                                alert="not found" />


                                            <div class="card-body">
                                                <h5 class="card-title">
                                                    <p class="text-center"
                                                        style="  font-weight: 700;
                                                        font-size: 1.5em;font-style: oblique;">
                                                        <t t-esc="property.name" />
                                                    </p>
                                                </h5>

                                                <center> Status: <t t-esc="property.state" />
                                                    <t
                                                        t-foreach="property.tag_ids" t-as="tag">
                                                        <t t-esc="tag.name"
                                                            style=" border-radius: 25px;" />
                                                    </t>
                                                </center>

                                                <center>

                                                    <t t-foreach="property.salesperson_id"
                                                        t-as="property"> SalePerson: <t
                                                            t-esc="property.name" />

                                                    </t>
                                                </center>


                                                <p class="card-text">
                                                    <center>
                                                        <a href="#" class="btn btn-primary"
                                                            t-attf-href="/estate/{{slug(property)}}"
                                                            style="border-radius:2em;
                                                        background-color: teal;
                                                        color: #ffffff;
                                                        padding: .5em 1.5em;">More
            Details</a>
                                                    </center>
                                                </p>
                                            </div>
                                            <div class="card-footer">
                                                <small
                                                    class="text-muted">
                                                    <h3 t-field="property.name"
                                                        class="text-center mt-3" />
                                                    <p class="text-end">Last modified: <i
                                                            t-field="property.write_date"
                                                            t-options='{"widget":"relative"}' /></p>
                                                </small>
                                            </div>

                                        </div>

                                    </div>
                                </t>
                            </div>

                        </div>
                    </div>


                </div>
            </div>
            <div
                class="pagination">

                <t t-call="website.pager" />
            </div>
        </t>
    </template>

</odoo>
