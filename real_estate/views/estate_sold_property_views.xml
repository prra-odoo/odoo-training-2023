<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="estate_property_sold_model_action" model="ir.actions.act_window">
        <field name="name">Real Estate Sold Property</field>
        <field name="res_model">estate.sold.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No property type found, Please add your property type over here</p>
            <p>Use the top left
                <strong>CREATE</strong> button to add new property type!!!
            </p>
        </field>
    </record>
    <!--** List view **-->
    <record id="estate_sold_property_model_tree_view" model="ir.ui.view">
        <field name="name">Real Estate Sold Property List View</field>
        <field name="model">estate.sold.property</field>
        <field name="arch" type="xml">
            <tree string="List View">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="salesperson_id"/>
                <field name="buyer_id"/>
                <field name="selling_price"/>
                <field name="total_area"/>
                <field name="postcode"/>
            </tree>
        </field>
    </record>
</odoo>