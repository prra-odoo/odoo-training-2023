<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_users_view_form" model="ir.ui.view">
        <field name="name">res.users.form.inherit.estate</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">       
            <xpath expr="//page[@name='access_rights']" position="before">
                <xpath expr="//page[@name='preferences']" position="move"/>
                <page name="estate_properties" string="Real Estate Properties">
                    <field name="property_ids"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
