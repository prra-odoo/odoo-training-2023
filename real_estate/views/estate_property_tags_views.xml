<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="real_estate_tags_list_view" model="ir.ui.view">
        <field name="name">Real Estate Tag List View</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree string="Property Type" editable="bottom">
                <field name="name" />
                <field name="Color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="real_estate_tags_form_view" model="ir.ui.view">
        <field name="name">Real Estate Tag Form View</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="Color" widget="color_picker" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
