<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="estate_tag_action" model="ir.actions.act_window">
        <field name="name">Estate Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No Property Tags Found!</p>
        </field>
    </record>

    <record id="estate_tag_tree_view" model="ir.ui.view">
        <field name="name">estate_tag_tree_mode</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>
</odoo>