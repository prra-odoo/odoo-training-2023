<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="property_type_tree_view" model="ir.ui.view">
        <field name="name">Property Type</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Property type">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <!-- <field name="active"/> -->
            </tree>
        </field>
    </record>

    <record id="property_type_form_view" model="ir.ui.view">
        <field name="name">New property type</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="property type">
                <sheet>
                    <div class="oe_button_box" name="button_box"> 
                        <button type="action" name="%(estate_property_offer_action)d" string="Offers"  class="oe_stat_button" icon="fa-money">
                            <field name="offer_count" string="offer" widget="statinfo"/> 
                        </button> 
                    </div>
                    <h1>
                        <field name="name" placeholder="Enter property type"/>
                    </h1>
                    <notebook>
                        <page name="Properties" string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>  
</odoo>