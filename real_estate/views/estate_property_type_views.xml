<?xml version="1.0" encoding="utf-8"?>
<odoo>
    

    <record id="property_type_tree_view" model="ir.ui.view">
        <field name="name">Property Type</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Property type">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="real_estate_view_form4" model="ir.ui.view">
        <field name="name">Property type form</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <form string="real_estate_form">
                
                <sheet>
                    <div  class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" name="%(real_estate_offer_action)d" string="offers" icon="fa-money">
                            <field string="Offer Count" name="offer_count" widget="statinfo"/>
                        </button>  
                    </div>   
                    <h1><field name="name" placeholder="Enter Property Type"/></h1>
                        <group>
                            <field name="description"/>                            
                        </group>  
                        <notebook>
                            <page name="Properties" string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>                                 
                                </tree>
                            </field>
                        </page>
                        </notebook>                   
                </sheet>
            </form>
        </field>
    </record>
</odoo>