<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="real_estate_type_list_view" model="ir.ui.view">
        <field name="name">Real Estate Type List View</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Property Type">
                <field name="sequence" widget="handle" />
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="real_estate_type_form_view" model="ir.ui.view">
        <field name="name">Real Estate Type Form View</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(real_estate.property_offers_action)d" type="action" class="oe_stat_button" icon="fa-money">
                            <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>
                    <h1><field name="name"/></h1>
                    <notebook>
                        <page string="Properties">
                            <field name="property_type_name_list" readonly="1">
                                <tree>
                                    <field name="name" />
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
