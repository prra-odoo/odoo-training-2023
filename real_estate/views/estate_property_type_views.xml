<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="estate_property_type_model_action" model="ir.actions.act_window">
        <field name="name">Real Estate Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No property type found, Please add your property type over here</p>
            <p>Use the top left
                <strong>CREATE</strong> button to add new property type!!!
            </p>
        </field>
    </record>
    <!--** List view **-->
    <record id="estate_property_type_model_tree_view" model="ir.ui.view">
        <field name="name">Real Estate Property Types List View</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="List View">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!--** Form view **-->
    <record id="estate_property_type_model_form_view" model="ir.ui.view">
        <field name="name">Real Estate Property Types Form View</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Types Form">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(estate_property_offer_model_action)d" type="action" class="oe_stat_button" icon="fa-money">
                            <field name="offer_count" widget="statinfo" string="Offers" />
                        </button>
                    </div>
                    <br/>
                    <label for="name" string="Name"/>
                    <h1>
                        <field name="name" placeholder="e.g. House, Apartment..."/>
                    </h1>
                    <br/>
                    <notebook>
                        <page name="properties" string="Properties">
                            <form>
                                <field name="property_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="expected_price"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </form>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--** Search view **-->
    <record id="estate_property_type_model_tree_view" model="ir.ui.view">
        <field name="name">Real Estate Property Types List View</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <search string="Property Type Search">
                <field name="name"/>
            </search>
        </field>
    </record>
</odoo>