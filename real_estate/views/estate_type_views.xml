<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- creating actions for estate type model -->
    <record id="estate_type_action" model="ir.actions.act_window">
        <field name="name">Estate Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No Property Types Found!</p>
        </field>
    </record>


    <!-- Creating Views for estate types model data-->
    <!-- creating tree view for the estate type -->
    <record id="estate_types_tree_view" model="ir.ui.view">
        <field name="name">estate_type_tree_mode</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree  default_order="id desc">
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- creating form view for the estate property types -->
    <record id="estate_types_form_view" model="ir.ui.view">
        <field name="name">estate_type_form_view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="%(estate_property_offer_action)d" type="action" icon="fa-money" string="Offers">
                            <field name="offer_count" />
                        </button>
                    </div>
                    <h1><field name="name" /></h1>

                    <!-- adding tabs in the notebook-->
                    <notebook>
                        <page string="Properties">
                            <!-- adding inline tree view-->
                            <field name="property_ids" >
                                <tree>
                                    <field name="name"/>
                                    <field name="expected_price" />
                                    <field name="state" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>