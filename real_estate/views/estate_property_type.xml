<?xml version="1.0" encoding="utf-8"?>
<odoo>
   
   <!-- Tree View-->
    <record id="Estate_property_type_tree_view" model="ir.ui.view">
        <field name="name">Estate Property Type</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name" string="Type"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
     <record id="Estate_property_type_form_view" model="ir.ui.view">
        <field name="name">Estate.Property Type</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Types">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action" name="%(estate_property_offer_action)d" string="Offers" class="oe_stat_button" icon="fa-money">
                            <field name="offer_count" widget="statinfo"/>
                        </button>
                    </div>
                    <h1><field name="name"/></h1>
                    <notebook>
                        <page string="properties">
                            <field name="property_ids">
                                <tree string="Property">
                                    <field name="name" />
                                    <field name="expected_price" />
                                    <field name="state" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>