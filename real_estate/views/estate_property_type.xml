<?xml version="1.0"?>
<odoo>
    <record id="real_estate_type_form" model="ir.ui.view">
            <field name="name">real.estare.view.form</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
            <form string="type">
                    <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(estate_property_offer)d" type="action" class="oe_stat_button"  icon="fa-money">
                            <field string="Offers" name="offer_count" widget="statinfo"/>                        
                        </button>
                     </div>
                        <h1>
                           <field name="name"/>
                        </h1>
                         <!-- <group>
                         <field name="sales_id"/>
                         <field name="buyer_id"/>
                        </group>  -->
                        <notebook>
                        <page string="Properties">                        
                          <field name="property_ids">
                        <tree>
                          <field name="name"/>
                          <field name="expeccted_price"/>
                          <field name="state"/>
                        </tree>
                        </field>
                        </page>
                        </notebook>                        
                    </sheet>
              </form>
            </field>
    </record>
    <record id="estate_type_view_tree" model="ir.ui.view">
        <field name="name">estate.type.view.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree>
            <field name="sequence" widget="handle"/>
            <field name="name"/>
            <field name="sales_id"/>
            <field name="buyer_id"/> 
            </tree>
        </field>
     </record>
</odoo>                