<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="website_menu" model="website.menu">
    <field name="name">Properties</field>
    <field name="parent_id" ref="website.main_menu"/>
    <field name="url">/real_estate/properties</field>
  </record>

  <template id="property_list">
    <t t-call="website.layout">
      <t t-set="title">Properties</t>
      <div class="oe_structure">
        <div class="container">
          <!-- <div class="col d-flex justify-content-center align-items-center h-100"> -->
            <div class="row row-cols-4">
              <t t-foreach="properties" t-as="property">
                <a t-attf-href="/real_estate/{{ slug(property) }}" class="text-decoration-none">
                <div class="container py-5 h-100">
                  <div class="col-8 m-2">
                    <div class="card " style="width: 17rem; box-shadow: 0 5px 10px rgba(0,0,0,.2);">
                      <div class="flex-shrink-0">
                        <img t-attf-src="data:image/*;base64,{{property.image}}" class="img img-responsive" style="width: 270px;
                      
                      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);" />
                      </div>
                      <div class="card-body">
                        <h3 t-field="property.name" class="card-title fs-3 align-top" />
                        <div class="card-text">
                          <h6 t-field="property.date_availability" t-options='{"format": "long"}' />
                          <span>Expected Price : </span>
                          <span t-field="property.expected_price"/>
                        </div>
                        <div class="card-text">
                          <span>Selling Price : </span>
                          <span t-field="property.selling_price"/>
                        </div>
                        <div class="card-text">
                          <span t-field="property.tag_ids" class="badge rounded-pill bg-info text-dark"/>
                        </div>
                      </div>
                    </div>
                  </div>

                </div>
                </a>
              </t>
            </div>
          <!-- </div> -->
        </div>
      </div>
      <div class="col d-flex justify-content-center">
        <div t-if="pager" class="o_portal_paper d-flex justify-context-center">
          <t t-call="website.pager"/>
        </div>
      </div>
    </t>
  </template>

  <template id="property_list_view">
    <t t-call="website.layout">
      <t t-set="title">Properties</t>
      <div class="oe_structure"/>
      <div class="oe_structure">
        <div class="container">
          <h3>
            <t t-esc="estate.name"/>
          </h3>
          <p>Expected Price: <t t-esc="estate.expected_price"/>
          </p>
          <p>Selling Price: <t t-esc="estate.selling_price"/>
          </p>
        </div>
      </div>
      <div class="oe_structure"/>
    </t>
  </template>
</odoo>
