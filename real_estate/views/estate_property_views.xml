<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="estate_property_model_action" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,tree,form,calendar,graph,activity</field>
        <!-- <field name="context">{"search_default_available":True}</field> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No property found, Please add your property over here</p>
            <p>Use the top left
                <strong>CREATE</strong> button to add new property!!!
            </p>
        </field>
    </record>
    <!--** List view **-->
    <record id="estate_property_model_kanban_view" model="ir.ui.view">
        <field name="name">Real Estate Kanban View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="0">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <h3 style="font-size: 18.5px; font-weight: 500;" t-attf-style="{{ record.state.raw_value == 'new' or record.state.raw_value == 'offer_received' ? 'color: #00A300;' : 'color: initial;' }}">
                                <field name="name" />
                            </h3>
                            <div style="margin-top: 10px;">
								Expected Price :
                                <field name="expected_price" />
                            </div>
                            <div t-if="record.state.raw_value == 'offer_received'" style="margin-top: 5px;">
								Best Price :
                                <field name="best_price" />
                            </div>
                            <div t-if="record.state.raw_value == 'offer_accepted' or record.state.raw_value == 'sold'" style="margin-top: 5px;">
								Selling Price :
                                <field name="selling_price" />
                            </div>
                            <div style="margin-top: 5px;">
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!--** Activity view **-->
    <record id="estate_property_model_activity_view" model="ir.ui.view">
        <field name="name">Real Estate Activity View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <activity string="Estate Meetings">
                <templates>
                    <div t-name="activity-box">
                        <div>
                            <strong style="font-size: 18.5px; font-weight: 500; color: #000;">
                                <field name="name" display="full"/>
                            </strong>
                            <field name="salesperson_id" display="full" />
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>
    <!--** Calendar view **-->
    <record id="estate_property_model_calendar_view" model="ir.ui.view">
        <field name="name">Real Estate Calendar View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <calendar string="Calendar View" date_start="date_availability" color="property_type_id" mode="month">
                <field name="name"/>
            </calendar>
        </field>
    </record>
    <!--** Graph view **-->
    <record id="estate_property_model_graph_view" model="ir.ui.view">
        <field name="name">Real Estate Graph View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <graph string="Estate Property Graph View">
                <field name="name"/>
                <field name="expected_price" type="measure"/>
            </graph>
        </field>
    </record>
    <!--** List view **-->
    <record id="estate_property_model_tree_view" model="ir.ui.view">
        <field name="name">Real Estate List View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="List View" decoration-success = "state in ('offer_received', 'offer_accepted')" decoration-bf = "state == 'offer_accepted'" decoration-muted = "state == 'sold'" decoration-danger = "state == 'cancelled'">
                <field name="name"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <!-- optional="show" -->
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="garden_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>
    <!--** Form view **-->
    <record id="estate_property_model_form_view" model="ir.ui.view">
        <field name="name">Real Estate Form View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': False}" />
                    <button name="action_sold_btn" type="object" string="SOLD" attrs="{'invisible': [('state', 'in', ('sold', 'cancelled'))]}"/>
                    <button name="action_cancel_btn" type="object" string="CANCEL" attrs="{'invisible': [('state', 'in', ('sold', 'cancelled'))]}"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Available" bg_color="bg-info" 
                    attrs="{'invisible': [('state', 'not in', [('new'), ('offer_received')])]}" />
                    <widget name="web_ribbon" title="Offer Accepted" bg_color="bg-warning" attrs="{'invisible': [('state', '!=', 'offer_accepted')]}" />
                    <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'cancelled')]}" />
                    <widget name="web_ribbon" title="Sold" bg_color="bg-success" attrs="{'invisible': [('state', '!=', 'sold')]}" />
                    <br/>
                    <label for="name" string="Name"/>
                    <h1>
                        <field name="name" string="Name" placeholder="e.g. Cozy Apartment in Ahmedabad"/>
                    </h1>
                    <label for="tag_ids" string="Tags"/>
                    <field name="tag_ids" widget="many2many_tags" string="Tags" options="{'no_quick_create':True,'no_create_edit':True, 'color_field': 'color'}"/>
                    <hr/>
                    <br/>
                    <group>
                        <group>
                            <field name="property_type_id" string="Property Type" options="{'no_quick_create':True}"/>
                            <field name="state" string="State"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <br/>
                    <notebook>
                        <!-- Description -->
                        <page name="description" string="Description">
                            <br/>
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <!-- Offers -->
                        <page name="offers" string="Offers">
                            <field name="offer_ids" attrs="{'readonly': [('state', 'in', ('sold', 'cancelled', 'offer_accepted'))]}"/>
                        </page>
                        <!-- Other Info -->
                        <page name="other_info" string="Other Info">
                            <br/>
                            <group>
                                <field name="salesperson_id" />
                                <!-- widget="many2many_avatar_user" -->
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>
    <!--** Search view **-->
    <record id="estate_property_model_search" model="ir.ui.view">
        <field name="name">Estate Property Search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property Search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="garden_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <separator/>
                <filter string="Available" name="available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter string="Postcode" name="postcode" context="{'group_by': 'postcode'}"/>
                <field name="living_area" string="Living Area" filter_domain="[('living_area', '>=', self)]"/>
            </search>
        </field>
    </record>
</odoo>