<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
   <!-- Tree View-->
    <record id="Estate_property_tree_view" model="ir.ui.view">
        <field name="name">Estate.Property</field>
        <field name="model">real.estate.properties</field>
        <field name="arch" type="xml">
            <tree decoration-success="state in ('offer_recieved','offer_accepted')"
                    decoration-muted="state == 'sold'" decoration-bf="state == 'offer_accepted'" decoration-warning="state == 'new'" decoration-danger="state == 'cancled'">
                <field name="name" string="Title"/>
                <field name="Postcode"/>
                <field name="bedroom"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="living_area" string="Living Area (sqm)" />
                <field name="expected_price"/>
                <field name="selling_price" />
                <field name="date_availablity" string="Available From" optional="hidde n"/>
                <field name="state" />
            </tree>
        </field>
    </record>
    
<!--Form View -->
    <record id="Estate_property_form_view" model="ir.ui.view">
        <field name="name">Estate.Property</field>
        <field name="model">real.estate.properties</field>
        <field name="arch" type="xml">
            <form string="Property List">
                <header>
                    <button name="action_sold" type="object" string="Sold" states="new,offer_recieved,offer_accepted"/>
                    <button name="action_cancel" type="object" string="Cancel" states="new,offer_recieved,offer_accepted"/>
                    <field  name="state" widget="statusbar" options="{'clickable' : 1}"  /> 
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Sold" bg_color="bg-success" attrs="{'invisible' : [('state','!=','sold')]}" />
                    <widget name="web_ribbon" title="Cancled" bg_color="bg-danger" attrs="{'invisible' : [('state','!=','cancled')]}" />
                    <widget name="web_ribbon" title="Available" bg_color="bg-warning" attrs="{'invisible' : [('state','in',('offer_accepted','sold','cancled'))]}" />
                    <widget name="web_ribbon" title="Offer Recieved" bg_color="bg-info" attrs="{'invisible' : [('state','!=','offer_accepted')]}" />
                    <h1><field name="name"/></h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <group>
                        <group>     
                            <field name="Postcode"/>
                            <field name="date_availablity" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price" />
                        </group>
                        <group>
                            <field name="property_type_id" options="{'no_create': True, 'no_open': True}"/>
                            <!-- <field name="state" /> -->
                        </group>
                        <group>
                            <field name="best_price" />
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedroom" string="Bedroom"/>
                                    <field name="living_area" string="Living Area (sqm)"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="gardan" string="Garden" />
                                    <field name="gardan_area" string="Garden Area (sqm)" attrs="{'invisible': [('gardan', '=', False)]}"/>
                                    <field name="garden_orientation" attrs="{'invisible': [('gardan', '=', False)]}"/>
                                    <field name="total_area" />
                                </group>
                            </page>
                            <page string="offer">
                                <field name="offer_ids" attrs="{'readonly' : [('state','in',('sold','offer_accepted','cancled'))]}"/>
                            </page>
                            <page string="other info">
                                <group>
                                    <field name="buyer"/>
                                    <field name="salesperson"/>
                                </group>
                            </page>
                            <!-- <page>
                                <group>
                                        <field name="user_id"/>
                                </group>
                            </page> -->
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
               </div>
            </form>
        </field>
    </record>

<!-- Search view -->
    <record id="Estate_property_search_view" model="ir.ui.view"> 
        <field name="name">Estate.Property</field>
        <field name="model">real.estate.properties</field>
        <field name="arch" type="xml">
            <search string="Search property">
                <field name="name"/>
                <field name="Postcode"/>
                <field name="bedroom"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/> 
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availablity" />    
                <filter string="Available" name="state" domain="['|',('state', '=' , 'new'),('state','=','offer_recieved')]"/>  
                <group string="Group By">
                    <filter string="Postcode" name="Postcode" context="{'group_by':'Postcode'}"/>
                </group>
            </search>
        </field>
    </record>

<!-- Kanban View -->
    <record id="Estate_property_Kanban_view" model="ir.ui.view"> 
        <field name="name">Estate.Property</field>
        <field name="model">real.estate.properties</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="False">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong class="o_kanban_record_title">
                                <h3><field name="name" /></h3>
                            </strong>
                            <label for="expected_price">Excepted Price : </label><field name="expected_price"/>
                            <div t-if="record.state.raw_value == 'offer_accepted'">
                                <label for="selling_price">Selling Price : </label><field name="selling_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_recieved'">
                                <label for="best_price">Best Price : </label><field name="best_price"/>
                            </div>
                            <field name="tag_ids" options="{'color_field': 'color'}"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>