<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="real_estate_view_kanban" model="ir.ui.view">
        <field name="name">Property</field>
        <field name="model">real.estate.properties</field>
        <field name="arch" type="xml">
            <kanban default_group_by="type_id" records_draggable="False">
                    <field name="id"/>
                    <field name="state"/>
                    <field name="property_image"/>
                    <templates>
                        <t t-name="kanban-box">
                           
                            <div class="oe_kanban_global_click" >

                                <img t-att-src="kanban_image('real.estate.properties', 'property_image', record.id.raw_value)" alt="Approvals Types Image"
                                class="oe_kanban_avatar float-start me-3" width="87" height="88"/>
                                
                                <strong class="o_kanban_record_title">
                                    <h3><field name="name" /></h3>
                                </strong>
                                <div >
                                    <p>Expected Price:<field name="expected_price"/></p>
                                </div>
                                <div t-if="record.state.raw_value=='offer recevied'"> 
                                    Best Offer:<field name="best_offer"/>
                                </div>
                                <div t-if="record.state.raw_value == 'offer accepted'">
                                    Selling Price:<field name="selling_price"/>
                                </div>                         
                                Tags:<field name="tag_ids" options="{'color_field':'color'}"/>
                            </div>
                        </t>
                    </templates>
            </kanban>

        </field>
    </record>        


    <record id="real_estate_view_tree" model="ir.ui.view">
        <field name="name">Proper</field>
        <field name="model">real.estate.properties</field>
        <field name="arch" type="xml">
            <tree string="real_estate" decoration-success="state in ('offer recevied','offer accepted')" decoration-bf="state=='offer accepted'" decoration-muted="state == 'sold'">
                    <header>
                        <button type="object" name="offer" string="Add Offers" />
                    </header>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="description"/>
                    <field name="postcode" />
                    <field name="date_availability" optional="hidden"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="bedrooms"/>
            </tree>
        </field>
    </record>

    
    <record id="real_estate_view_form" model="ir.ui.view">
        <field name="name">Property_form</field>
        <field name="model">real.estate.properties</field>
        <field name="arch" type="xml">
            <form string="real_estate_form">
                <header> 
                <button type="object" name="action_sold" states="new,offer recevied,offer accepted" string="Sold" class="oe_highlight"/>
                <button type="object" name="action_canceled" states="new,offer recevied,offer accepted" string="Canceled"/>
                    <field name="state" widget="statusbar" options="{'clickable' : 1}"/>
                </header>
               
                <sheet>
                    <widget name="web_ribbon" title="Sold" bg_color="bg-success" attrs="{'invisible' : [('state','!=','sold')]}" />
                    <widget name="web_ribbon" title="Cancled" bg_color="bg-danger" attrs="{'invisible' : [('state','!=','canceled')]}" />
                    <widget name="web_ribbon" title="Available" bg_color="bg-warning" attrs="{'invisible' : [('state','in',('offer accepted','sold','canceled'))]}" />
                    <widget name="web_ribbon" title="Offer Recieved" bg_color="bg-info" attrs="{'invisible' : [('state','!=','offer accepted')]}" />
    
                    <field name="property_image" widget="image" class="oe_avatar"/>
                    <h1><field name="name" placeholder="Enter Property Name"/></h1>
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                        </group> 
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="type_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="best_offer"/>
                        </group>
                        <group>
                            <field name="state"/>
                        </group>
                    
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                </group>
                                <group>
                                    <field name="bedrooms"/>
                                </group>
                                <group>
                                    <field name="living_area"/>
                                </group>
                                <group>
                                    <field name="facades"/>
                                </group>
                                <group>
                                    <field name="garage"/>
                                </group>
                                <group>
                                    <field name="garden"/>
                                </group>  
                                <group>
                                    <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                </group> 
                                <group>
                                    <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                </group>
                                <group>
                                    <field name="total_area"/>
                                </group>
                                
                            </page>
                            <page string="Other Details">
                                <group>
                                    <field name="user_id"/>
                                </group>
                                <group>
                                    <field name="buyer_id"/>
                                </group>
                                <group>
                                    <field name="company_id"/>
                                </group>
                            </page>   
                       
                            <page string="Offers">
                                
                                    <field name="offer_ids" attrs="{'readonly': [('state', 'in', ('offer accepted','sold','canceled'))]}"/>
                                
                            </page>   
                            </notebook>

                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
               </div>
            </form>
        </field>
    </record>

    <record id="real_estate_view_search" model="ir.ui.view">
        <field name="name">Property_search</field>
        <field name="model">real.estate.properties</field>
        <field name="arch" type="xml">
            <search string="real_estate_search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="state"/>
                <field name="facades"/>
                <separator/>
                    <filter string="Available" name="available" domain="[('state', 'in', ('new','offer received'))]"/>
                <separator/>   
                <group string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo> 