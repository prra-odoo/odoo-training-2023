<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="advertisement_Create_task_model_action" model="ir.actions.act_window">
            <field name="name">Advertisement</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">kanban,pivot,graph,tree,form</field>
            <field name="context">{'search_default_group_state_id': 1}</field>
            <field name="context">
                {
                "search_default_name_of_the_filter":1,
                'search_default_selling_price':1
                }
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">

                </p>
            </field>
        </record>

        <record id="fields_view_tree" model="ir.ui.view">
            <field name="name">Real Estate Form View</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree decoration-success="state == 'offer_accepted'"
                    decoration-danger="state=='new'">
                    <field name="name" />
                    <field name="description" optional='hide' />
                    <field name="image_customer" optional='hide' />
                    <field name="postcode" optional='hide' />
                    <field name="date_availability" />
                    <field name="expected_price" />
                    <field name="selling_price" />
                    <field name="bedrooms" optional='hide' />
                    <field name="living_area" />
                    <field name="active" optional='hide' />
                    <field name="garden_area" optional='hide' />
                    <field name="facades" optional='hide' />
                    <field name="garage" optional='hide' />
                    <field name="garden" optional='hide' />
                    <field name="garden_orientation" optional='hide' />
                    <field name="state" optional='hide' />
                    <field name="property_type_id" optional='hide' />
                    <field name="buyer_id" optional='hide' />
                    <field name="salesperson_id" optional='hide' />
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                    <field name="total_area" optional='hide' />
                   
                </tree>
            </field>
        </record>

        <!-- Form View  -->
        <record id="real_estate_view_form" model="ir.ui.view">
            <field name="name">Real Estate Form View</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible':[('active', '=', True)]}" />
                        <!-- states="new" -->
                        <button name="action_sold" type="object" string="Sold"></button>
                        <button name="action_cancel" type="object" string="Cancel"></button>
                        <button type="action" name="%(create_estate_property_tag_model)d"
                            string="Property Tag" />
                        <button type="action" name="%(Create_estate_property_type_model_action)d"
                            string="Property Type" />
                        <field name="state" widget="statusbar" options="{'clickable':'1'}" />
                    </header>
                    <sheet>
                        <field name="image_customer" widget="image" class="oe_avatar"
                            options="{&quot;preview_image&quot;: &quot;image_128&quot;, &quot;size&quot;: [120, 120]}" />

                        <group>
                            <group>
                                <label for="name" string="Customer Name" />
                                <field name="name" style="font-size:39px" nolabel="1" />
                                <label for="postcode" string="PostCode" />
                                <field name="postcode" nolabel="1" />
                                <label for="tag_ids" string="Tag" />
                                <field name="tag_ids" nolabel="1" widget="many2many_tags"
                                    options="{'color_field': 'color'}" />
                                <field name="active" invisible="1" />
                                <field name="state" />
                            </group>
                            <group>
                                <label for="date_availability" string="Date" />
                                <field name="date_availability" nolabel="1" />
                                <label for="total_area" string="Total Area" />
                                <field name="total_area" nolabel="1" />
                                <label for="best_price" string="Best Price" />
                                <field name="best_price" nolabel="1" />
                                <label for="expected_price" string="Expected Price" />
                                <field name="expected_price" nolabel="1" />
                                <label for="selling_price" string="Selling Price" />
                                <field name="selling_price" nolabel="1" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"
                                    placeholder="More Description Regarding Land"></field>
                            </page>
                            <page string="Land Deatils">
                                <group>
                                    <group>
                                        <label for="bedrooms" string="Bedroom"
                                            style="margin-left:50px" />
                                        <field name="bedrooms" nolabel="1" />
                                        <label for="facades" string="Facade" />
                                        <field name="facades" nolabel="1" />
                                        <label for="garden" string="Garden" />
                                        <field name="garden" nolabel="1" />

                                    </group>
                                    <group>
                                        <label for="living_area" string="Living Area"
                                            style="margin-left:50px" />
                                        <field name="living_area" nolabel="1" />
                                        <label for="garden_area" string="Garden Area"
                                            style="margin-left:50px" />
                                        <field name="garden_area" nolabel="1"
                                            attrs="{'invisible': [('garden', '=', False)]}" />
                                        <label for="garage" string="Garage" />
                                        <field name="garage" nolabel="1" />
                                        <label for="garden_orientation"
                                            string="Garden Orientation" />
                                        <field name="garden_orientation" nolabel="1"
                                            attrs="{'invisible': [('garden', '=', False)]}" />
                                    </group>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <group>
                                        <field name="salesperson_id" widget="many2one_avatar_user" />
                                    </group>
                                    <group>
                                        <field name="buyer_id" />
                                    </group>
                                </group>
                            </page>
                            <page string="Offer">
                                <field name="offer_ids" nolabel="1"
                                    options="{'clickable':'1'}"
                                    attrs="{'readonly':[('state','=','offer_received')],'readonly':[('state','=','sold')],'readonly':[('state','=','cancel')]}">
                                    <tree expand="1" editable="top"
                                        decoration-success="status == 'accepted'"
                                        decoration-danger="status=='refused'">
                                        <field name="partner_id" widget="many2one_avatar"></field>
                                        <field name="price"></field>
                                        <field name="validity"></field>
                                        <field name="date_deadline"></field>
                                        <button name="action_accept" type="object" string="Accept"
                                            icon="fa-check"></button>
                                        <button name="action_refuse" type="object" string="Refuse"
                                            icon="fa-times"></button>
                                        <field name="status"
                                            decoration-success="status == 'accepted'"
                                            decoration-danger="status=='refused'"></field>
                                        <field name="property_type_id" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Fees">
                                <field name="currency_id"  />
                                <field name="fee" widget='monetary' />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="estate_property_kanban_view" model="ir.ui.view">
            <field name="name">estate.property.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <kanban deafult_group_by="state">
                    <field name="state" />
                    <field name="id" />
                    <field name="image_customer" />
                    <field name="name" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <!-- <img alt="Avatar"
                                    t-att-src="kanban_image('student.student',
                                    'image_customer',record.id.raw_value)" /> -->
                                    <field name="image_customer" widget="image"
                                        class="oe_right oe_avatar" />
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <h2>
                                            <field name="name" />
                                        </h2>
                                    </strong>
                                    <div class="col-5">
                                        <strong>
                                            <div> Expected Price: <field name="expected_price" />
                                            </div>
                                            <div t-if="record.state.raw_value == 'offer_received'">
                                                Best Offer: <field name="best_price" />
                                            </div>
                                            <div t-if="record.selling_price.raw_value"> Selling
                                                Price: <field
                                                    name="selling_price" />
                                            </div>
                                            <field name="tag_ids" widget="many2many_tags"
                                                options="{'color_field': 'color'}" />
                                        </strong>
                                    </div>
                                </div>

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- search engine for , search,filer and  group  -->
        <record id="real_estate__search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="demo">
                    <field name="name" string="Name" />
                    <field name="living_area" string="Living Area"
                        filter_domain="[('living_area','>=', self)]" />

                    <filter name="name_of_the_filter" string="Available"
                        domain="[('state', '=', 'new')]" />
                    <separator />
                    <filter string="selling price" name="selling_price"
                        domain="[('selling_price', '>', '5000')]" />
                    <filter name="date_availability" string="Date"
                        domain="[('date_availability','=',datetime.datetime.now())]" />
                    <filter name="group_state_id" string="My Task" context="{'group_by':'state'}" />
                    <group expand="0" string="Group By">
                        <filter string="postcode" name="postcode"
                            context="{'group_by':'postcode', 'residual_visible':True}" />
                    </group>
                    <!-- <searchpanel>
                        <field name="state" icon="fa-users"
                    enable_counters="1" string="Name" />
                    </searchpanel> -->
                </search>
            </field>
        </record>
    </data>
</odoo> 