<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<!--tree view_mode -->

     <record id="real_estate_view_tree" model="ir.ui.view">
        <field name="name">real.estate.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate_Property" decoration-success="status == 'offer received' or status == 'offer Accepted'" decoration-bf="status == 'offer Accepted'" decoration-muted="status == 'Sold'">
                <!-- <field name="property_type_id"/> -->
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="date_availability" optional="hide"/>
                <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="status" widget="badge" decoration-danger="status == 'cancelled'" />
                <!-- <field name="property_tag_ids" widget="badge"/> -->
            </tree>
        </field>
    </record>
<!-- form view -->

    <record id="real_estate_view_form" model="ir.ui.view">
        <field name="name">real.estate.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate_Property">
                <header> 
                    <button name='action_canceled' type='object' string='cancel' attrs="{'invisible': [('status', 'in', ['cancelled','Sold'])]}"/>
                    <button name='action_sold' type='object' string='sold' attrs="{'invisible': [('status', 'in', ['cancelled','Sold'])]}"/>                                           
                    <field name="status" widget="statusbar"></field>
                    <!-- statusbar_colors='{"sold":"green","offer cancelled":"red"}' options="{'clickable':'1'}"-->
                </header>    
                <sheet>
                <group>
                    <group>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </group>
                    <group>
                         <widget name="web_ribbon" title="Sold" bg_color="bg-success" attrs="{'invisible': [('status', '!=', 'Sold' )]}"/>
                        <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" attrs="{'invisible': [('status', '!=', 'cancelled' )]}"/>
                    </group>
                </group>
                    <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <group>
                                <group>
                                    <field name="property_type_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>            
                                </group>
                                <!-- <group>
                                    <field name='status'/>
                                </group> -->
                                <group>
                                    <field name="postcode"/>
                                </group>
                                <group>
                                    <field name="expected_price"/>
                                </group>

                                <group>
                                    <field name="date_availability"/>
                                </group>
                                <group>
                                    <field name="selling_price"/>
                                </group>
                                <group>
                                    <field name="best_offer"/>
                                </group>
                                    <notebook>
                                        <page string="Description">
                                            <group>
                                                <field name="description"/>
                                            </group>
                                            <group>
                                                <field name="bedrooms"/>
                                            </group> 
                                            <group>
                                                <field name="living_area"/>
                                            </group>  
                                            <group>
                                                <field name="facades"/>
                                            </group>  
                                            <group>
                                                <field name="garage"/>
                                            </group> 
                                            <group>
                                                <field name="garden"/>
                                            </group>  
                                            <group>
                                                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                            </group>  
                                            <group>
                                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                            </group>   
                                            <group>
                                                <field name="total_area"/>
                                            </group>                             
                                        </page>

                                        <page string="offers">
                                            <field name="offer_ids" attrs="{'readonly': [('status','in', ['cancelled','Sold','offer Accepted'])]}"/>
                                            
                                        </page>

                                        <page string="other information">
                                            <group>
                                                <field name="salesperson"/>
                                            </group>
                                            <group>
                                                <field name="buyer"/>
                                            </group>
                                        </page>
                                    </notebook>
                                
                            </group>
                </sheet>
                
            </form>
        </field>
    </record>


<!-- Search view -->
        <record id="real_estate_search_view" model="ir.ui.view">
            <field name="name">real.estate.search.view</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Estate Property">
                    <field name="name"/>
                    <field name="bedrooms"/>
                    <field name="description"/>
                    <field name="date_availability"/>
                    <field name="living_area" filter_domain="[('living_area','>=',self)]"/>
                    <separator/>
                    <filter string="Available" name="available" domain="[('status','in',['New','offer received'])]"/>
                    <filter string="Archived" name="active" domain="[('active', '=', False)]"/>
                    
                    <filter string="status" name="status" domain="[('expected_price','>',1000000),'|',('status','=','offer received'),('status','=','New')]"/>
                    <group expand="1" string="Group By">
                        <filter string="Property name" name="name" context="{'group_by':'name'}"/>
                        <filter string="Bedrooms" name="bedrooms" context="{'group_by':'bedrooms'}"/>
                    </group>
                </search>
            </field>
        </record>
</odoo>