<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="context">{'search_default_available': True, 'search_default_current': True}</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Enter Your First Record!!
            </p>

        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Prpperties" decoration-success="state in ('off_re','off_ac')"  decoration-bf="state =='off_acc'" decoration-muted="state =='sold'">
                <field name="name" />
                <field name="postcode" />
                <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="state"/>
                <field name="date_availability" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
    
                    <button name="action_sold"  type="object" string="Sold" class="oe_highlight" attrs="{'invisible':[('state','in',('new','sold','off_re'))]}"/>
                    <button name="action_sold"  type="object" string="Sold" attrs="{'invisible':[('state','not in',('new','off_re'))]}"/>
                    <button name="action_cancle" type="object" string="Cancle" attrs="{'invisible':[('state','=','sold')]}"/>
                    <field name="state" widget="statusbar" options="{'clickable':'1'}" statusbar_visible="new,off_re,off_ac,sold"/>

                </header>
                <sheet>
                    <widget name="web_ribbon" title="Cancle" bg_color="bg-danger" states="cancle"/>
                    <widget name="web_ribbon" title="sold" bg_color="bg-success" states="sold"/>

                    <h1>
                        <field name="name" />
                    </h1>

                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create':True}"/>
                            <field name="postcode" />
                            <field name="date_availability" />
                            <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="selling_price" />
                            <field name="expected_price" />
                            <field name="best_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden"/>
                                <field name="garden_area" attrs="{'invisible':[('garden','=',False)]}"/>
                                <field name="garden_orientation" attrs="{'invisible':[('garden','=',False)]}" />
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" attrs="{'readonly':['|','|',('state','=','off_ac'),('state','=','sold'),('state','=','canceled')]}" />
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyers_id" />
                                <field name="salesmen_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_properties_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" string="Living Area" filter_domain="[('living_area','>=',self)]"/>
                <field name="expected_price" />
                <field name="facades" />    
                <filter string="Available" name="available" domain="['|',('state','=', 'new'),('state','=', 'off_re')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>