<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="real_estate_list_view" model="ir.ui.view">
        <field name="name">Real Estate List View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Real Estate" decoration-success="state in ('offer_received', 'offer_accepted')" decoration-bf="state == 'offer_accepted'" decoration-danger="state=='canceled'">
                <field name="state" invisible="1"/>
                <field name="name"/>
                <field name="property_type_id" />
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field':'Color', 'no_create':True}"/>
                <field name="bedrooms" />
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="expected_price"/>
                <field name="date_availability" optional="hide" string="Available From"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="real_estate_form_view" model="ir.ui.view">
        <field name="name">Real Estate Form View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" />
                    <span states="new,offer_received,offer_accepted">
                    <!-- <span attrs="{'invisible':['|',('state', '=', 'sold'), ('state', '=', 'canceled')]}"> -->
                        <!-- <button name="action_property_sold" string="Sold" type="object" attrs="{'invisible': [('state', '=', 'offer_accepted')]}" /> -->
                        <!-- <button name="action_property_sold" string="Sold" type="object" class="oe_highlight"  attrs="{'invisible': [('state', '!=', 'offer_accepted')]}" /> -->
                        <button name="action_property_sold" string="Sold" type="object" states="new,offer_received,sold,canceled" />
                        <button name="action_property_sold" string="Sold" type="object" class="oe_highlight" states="offer_accepted" />
                        <button name="action_property_cancel" string="Cancel" type="object" />
                    </span>
                    <!-- <button type="action" name="%(property_type_action)d" string="Property Types"/> -->
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible':[('active', '=', True)]}" />
                    <widget name="web_ribbon" title="Sold" bg_color="bg-success" attrs="{'invisible':[('state', '!=', 'sold')]}" />
                    <widget name="web_ribbon" title="Canceled" bg_color="bg-danger" attrs="{'invisible':[('state', '!=', 'canceled')]}" />
                    <field name="active" invisible="1" />
                    <field name="image" widget='image' class="oe_avatar" nolabel="1" options="{'size': [200, 200]}"/>
                    <label for="name" string="Name"/>
                    <h1><field name="name"/></h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field':'Color', 'no_create':True}" />
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create':True, 'no_open':True}" />
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer" />
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                            <label for="description" string="Description"/>
                                <field name="description"/>
                                <group>
                                    <field name="bedrooms"/>
                                    <field name="living_area" string="Living Area (sqm)"/>
                                    <field name="garage"/>
                                    <field name="facades"/>
                                    <field name="total_area"/>
                                </group>
                            </group>
                        </page>
                        <page string="Garden">
                            <group>
                                <field name="garden" />
                                <field name="garden_area" string="Garden Area (sqm)" attrs="{'invisible':[('garden', '=', False)]}" />
                                <field name="garden_orientation" attrs="{'invisible':[('garden', '=', False)]}" />
                            </group>
                        </page>
                        <page string="Offer">
                            <field name="offer_ids" string="offers" attrs="{'readonly':['|', ('state', '=', 'offer_accepted'), '|', ('state', '=', 'sold'), ('state', '=', 'canceled')]}"/>                                
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="salesperson_id" widget="many2one_avatar"/>
                                <field name="company_id" />
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="real_estate_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Available">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode" />
                <field name="expected_price" string="Expected Price" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area (sqm)" filter_domain="[('living_area', '>', self) ]" />
                <field name="facades" string="Facades" />
                <field name="tag_ids" string="tags"/>
                <field name="property_type_id" string="Property Type" />
                <separator />
                <filter string="Available" name="available" domain="[('state', 'in', ['offer_received', 'new'])]" />
                <group expand="1" string="Postcode">
                    <filter string="Postcode" name="name" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="real_estate_kanban_view" model="ir.ui.view">
        <field name="name">real.estate.kanban.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="False">                        
                <field name="name"/>
                <field name="expected_price"/>
                <field name="best_offer"/>
                <field name="selling_price"/>
                <field name="tag_ids"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box"> <!-- Kanban-box defines template -->
                        <!-- oe_kanban_global_click allows us to open form view on click -->
                        <div class="oe_kanban_global_click">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <div>
                                Expected Price: <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_received'">
                                Best Offer: <field name="best_offer"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_accepted'">
                                Selling Price: <field name="selling_price"/>
                            </div>
                            <field name="tag_ids" options="{'color_field':'Color'}"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
