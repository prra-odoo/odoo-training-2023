    <template id="index">
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand">Navbar</a>
                <form class="d-flex" method="get">
                    <input class="form-control me-2" type="date" name="available_date"/>
                    <button class="btn btn-outline-success" type="submit">submit</button>
                </form>
            </div>
        </nav>
        <t t-call="website.layout">
            <t t-set="title">Real Estate</t>
            <div class="oe_structure">
                <style>

            .container:hover .card {
                filter: blur(5px);
                transform: scale(0.9);
                opacity: 0.5;
            }

            .container .card:hover {
                filter: blur(0px);
                transform: scale(1.1);
                opacity: 1;
                transition: 0.2s;

            }
        </style>
                <div class="container">
                    <div class="row">
                        <t t-foreach="properties" t-as="property">
                            <div class="col-4 mb-2 mt-3" >
                                <!-- <t t-if="property.state in ['new','offer_recieved']"> -->
                                <div class="card rounded" style= "widhth:25rem">
                                    <t t-esc="property.image" class="card-img-top" t-options="{'widget' : 'image'}"/>
                                    <!-- <img src="..." class="card-img-top" alt="..."> -->
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <a t-attf-href="/estate/{{ slug(property) }}">
                                                <t t-esc="property.name"/>
                                            </a>
                                        </h5>
                                        <p class="card-text">Postcode:
                                            <t t-esc="property.postcode"/>
                                        </p>
                                        <p class="card-text">Bedrooms:
                                            <t t-esc="property.bedrooms"/>
                                        </p>
                                        <p class="card-text">Salesperson:
                                            <t t-foreach="property.salesperson_id" t-as="salesperson">
                                                <strong>
                                                    <t t-esc="salesperson.name"/>
                                                </strong>
                                            </t>
                                        </p>
                                        <p class="card-text">tags:
                                            <t t-foreach="property.tag_ids" t-as="tag">
                                                <span t-attf-class="badge o_tag_badge_text #{'o_tag_color_%s' % tag.color}">
                                                    <t t-out="tag.name"/>
                                                </span>
                                            </t>
                                        </p>
                                        <p class="card-text">Selling Price:
                                            <t t-esc="property.selling_price"/>
                                            <small class="text-muted">
                                                <p>
                                                    <t t-esc="property.state"/>
                                                </p>
                                            </small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </t>
                        <!-- </t> -->
                    </div>
                </div>
                <div class="d-flex justify-content-center my-3">
                    <t t-call="website.pager"/>
                </div>
            </div>
        </t>
    </template>
    <template id="details">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <t t-foreach="properties" t-as="property">
                        <div class="d-flex justify-content-center my-3">
                            <t t-esc="property.name"/>
                        </div>
                        <t t-call="real_estate.report_property_offers"/>
                        <t t-call="real_estate.report_property_offers_table"/>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>