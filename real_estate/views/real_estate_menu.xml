<?xml version="1.0" encoding="utf-8"?>

<odoo>
        <!-- action for estate property -->
        <record id="estate_property_model_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property.model</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'search_default_state': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define a new lost reason
                </p>
            </field>
        </record>

        <!-- action for estate property type -->

        <record id="estate_property_type_action" model="ir.actions.act_window">
            <field name="name">Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Empty Place 
                </p>
            </field>
        </record>

        <!-- action for estate property offer -->
        <record id="estate_property_offer_action" model="ir.actions.act_window">
            <field name="name">Property Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('property_type_id', '=', active_id)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No offers
                </p>
            </field>
        </record>

        <!-- action for estate property tag -->

        <record id="estate_property_tag_actions" model="ir.actions.act_window">
            <field name="name">Property tags</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                        Empty
                </p>
            </field>
        </record>

        <!-- offer menu action -->
        <record id="estate_property_wizard_action" model="ir.actions.act_window">
            <field name="name">Wizard</field>
            <field name="res_model">property.estate.offers</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    
    
<!-- menu creation -->
        <menuitem id="estate_menu_root" name="Real Estate">
            <menuitem id="estate_first_level_menu" name="Advertisements">
                <menuitem id="estate_model_menu_action1" action="estate_property_model_action" name="Properties"/>
                <menuitem id="estate_model_menu_action2" action="estate_property_wizard_action" name="wizard"/>
            </menuitem>

            <menuitem id="estate_property_level_menu1" name="Settings" groups="estate_group_manager">
                <menuitem id="property_type_menu_action1" action="estate_property_type_action" name="Property types"/>
                <menuitem id="property_tag_menu_menu" action="estate_property_tag_actions" name="Property Tags"/>
            </menuitem>  
        </menuitem>          
</odoo>
