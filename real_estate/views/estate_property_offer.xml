<?xml version="1.0" encoding="utf-8"?>

<odoo>
    
    <record id="estate_property_offer_view" model="ir.ui.view">
        <field name="name">Estate Property Offer List View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml" >
            <tree string="Channel"  decoration-danger="status in ('refused')" decoration-success="status in ('accepted')">
                    <field name="price" string="Price"/>
                    <field name="partner_id" string="Partner"/>
                    <field name="validity" string="Validity (days)"/>
                    <field name="property_type_id" string="Property Type"/>
                    <field name="date_deadline" string="Deadline"/>
                    <button name="action_accept" string=" " type="object" icon="fa-check" attrs="{'invisible': [('status', '!=', False)]}"/>
                    <button name="action_refuse" string=" " type="object" icon="fa-times" attrs="{'invisible': [('status', '!=', False)]}" />
                    <field name="status" string="Status" invisible="1"/>
            </tree>
        </field>
    </record>

     <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">Estate Property Offer Form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="form">
                <sheet>
                    <group>
                         <field name="price"/>
                         <field name="partner_id"/>
                         <field name="validity"/>
                         <field name="date_deadline"/>
                         <field name="status"/>
                         <field name="property_type_id" string="Property Type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>