<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="estate_property_offer_model_action" model="ir.actions.act_window">
        <field name="name">Real Estate Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
    <!--** List view **-->
    <record id="estate_property_offer_tree_view" model="ir.ui.view">
        <field name="name">Real Estate Property Offers List View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <!--  editable="bottom" Create offer within tree view -->
            <tree string="List View" decoration-success = "status == 'accepted'" decoration-danger = "status == 'refused'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept_btn" string="   " type="object" icon="fa-check" attrs="{'invisible': ['|', ('status','=', 'accepted'), ('status', '=', 'refused')]}"/>
                <button name="action_refuse_btn" string="   " type="object" icon="fa-times" attrs="{'invisible': ['|', ('status','=', 'accepted'), ('status', '=', 'refused')]}"/>
                <field name="status" attrs="{'invisible': [('status', '=', 'accepted')]}" invisible="1"/>
            </tree>
        </field>
    </record>
    <!--** Form view **-->
    <record id="estate_property_offer_model_form_view" model="ir.ui.view">
        <field name="name">Real Estate Property Offers Form View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Types Form">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>