<odoo>

<!-- Tree View -->
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">Estate Offers</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree editable="bottom" decoration-success="status=='accepted'" decoration-danger="status=='refuse'">
                <field name="price"/> 
                <field name="partner_id"/>
                <button name="accept_action" string=" " type="object" icon="fa-check" attrs="{'invisible': [('status', '!=', False)]}"/>
                <button name="reject_action" string=" " type="object" icon="fa-times" attrs="{'invisible': [('status', '!=', False)]}" /> 
                <field name="status" invisible='1'/>
            </tree>
        </field>
    </record>

<!-- Form View -->
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">Estate Offers</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form String="Offer">
                <sheet>
                    <group>
                        <field name="price"/> 
                        <field name="status"/>
                    </group>
                    <group>
                        <field name="partner_id"/> 
                        <field name="validity" />
                    </group>
                    <group>
                        <field name="date_deadline" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>