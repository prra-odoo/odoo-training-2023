<?xml version="1.0"?>
 <odoo>
    <record id="estate_offer" model="ir.ui.view">
            <field name="name">estate.offer.form.view</field>
            <field name="model">estate.property.offer</field>           
            <field name="arch" type="xml">
                <form string="type">
                  <sheet>
                    <group>                                
                      <field name="price"/>
                      <field name="partner_id"/>
                      <field name="status"/>
                      <!-- <field name="property_type_id"/> -->
                      <field name="date_deadline"/>
                      <field name="validity"/>
                     </group>
                  </sheet>
                </form>
            </field>             
    </record>
    <record id="estate_offer_tree_view" model="ir.ui.view">
        <field name="name">estate.offer.view.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree editable="bottom" decoration-danger="status == 'Refused'"
                                    decoration-success="status == 'Accepted'">
                <field name="price"/>
                <field name="partner_id"/>
                <!-- <field name="property_id"/> -->
                <field name="status"/>
                <field name="date_deadline"/>
                <field name="validity"/>
                <field name="property_type_id"/>
                <button name="action_accepted" type="object" icon="fa-check" title="check" attrs="{'invisible': [('status','!=',False)]}"/>
                <button name="action_refused" type="object" icon="fa-times" title="uncheck" attrs="{'invisible': [('status','!=',False)]}"/>
                </tree>
        </field>
    </record>
</odoo>

 