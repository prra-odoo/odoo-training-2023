<menuitem id="real_estate_menu_root" web_icon="real_estate,views/estate_icon.png" name="real estate">
        <menuitem id="estate_first_level_menu_adv" name="Advertisement">
            <menuitem id="estate_model_menu_action_property" action="estate_property_action" name="Property"/>
        </menuitem>
        <menuitem id="estate_first_level_menu_setting" name="setting">
            <menuitem id="estate_action_property_type" action="estate_property_type" 
            name="Property Type"/>
            <menuitem id="estate_action_property_tag" action="estate_property_tag" name="Property tag"/>
            <menuitem id="estate_action_property_sales" action="estate_property_sales" name="salesperson"/>
            <menuitem id="estate_action_property_buyer" action="estate_property_buyer" name="buyer"/> 
            <menuitem id="estate_action_property_offer" action="estate_property_offer" name="buyer"/> 
