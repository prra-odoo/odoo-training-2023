<?xml version="1.0" encoding="utf-8"?>
<odoo>
    

    <record id="real_estate_offer_view_tree" model="ir.ui.view">
        <field name="name">Property Offers</field>
        <field name="model">real.estate.property.offer</field>
        <field name="arch" type="xml">
            <tree editable="bottom" decoration-danger="status=='refused'" decoration-success="status=='accepted'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button type= "object" name="action_accepted" string=" " icon="fa-check" 
                    attrs="{'invisible': [('status', '!=', False)]}"/>
                <button type= "object" name="action_refused" string=" " icon="fa-times" 
                    attrs="{'invisible': [('status', '!=', False)]}"/>
                <field name="status" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="real_estate_view_form2" model="ir.ui.view">
        <field name="name">Property Offer</field>
        <field name="model">real.estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="real_estate_form">
                
                <sheet>
                   
                    <group>
                        <group>
                            <field name="price"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="validity"/>
                        </group>
                        <group>
                            <field name="date_deadline"/>
                        </group>   
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>