<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_real_estate_property_type_search" model="ir.ui.view">
        <field name="name">real_estate_property_type</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name" string="Title"/>
            </search>
        </field>
    </record>
    <!-- FOR TREE VIEW -->
    <record id="real_estate_property_type_view_tree" model="ir.ui.view">
        <field name="name">real_estate_property_type</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="real_estate_property_type_view_form" model="ir.ui.view">
        <field name="name">real_estate_property_type</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property">
                    
                <sheet>
                <div class="oe_button_box" name="button_box">
                        <button name="%(real_estate_offer_action)d" icon="fa-bars" type="action" string="Offers" class="oe_stat_button">
                            <field name="offer_count" string="Offer Count" />
                        </button>
                    </div>
                    <h1>
                        <field name="name" />
                    </h1>
                    <!-- <field name="offer_ids" /> -->
                    <!-- <field name="offer_count" /> -->
                    
                    <notebook>
                        <page name="Properties" string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name" string="Title"/>
                                    <field name="expected_price"/>
                                    <field name="state" string="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
</odoo>