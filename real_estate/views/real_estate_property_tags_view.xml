<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_real_estate_property_tags_search" model="ir.ui.view">
        <field name="name">real_estate_property_tags</field>
        <field name="model">real.estate.property.tags</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name"  string="Title"/>
            </search>
        </field>
    </record>
    <!-- FOR TREE VIEW -->
    <record id="real_estate_property_tags_view_tree" model="ir.ui.view">
        <field name="name">real_estate_property_tags</field>
        <field name="model">real.estate.property.tags</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="real_estate_property_tags_view_form" model="ir.ui.view">
        <field name="name">real_estate_property_tags</field>
        <field name="model">real.estate.property.tags</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="color" widget="color_picker" options="{'color_field': 'color'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>