<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="estate_model_action_small" model="ir.actions.act_window">
            <field name="name">Property list</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="context">{'search_default_available': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">No Property found. Let's create one!</p>
            </field>
        </record>
        
        <record id="estate_model_action_property_tags" model="ir.actions.act_window">
            <field name="name">Property Tags</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">list,form</field>
        </record>
        <record id="estate_model_action_property_types" model="ir.actions.act_window">
            <field name="name">Property types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a property type
                </p>
            </field>
        </record>

        <record id="estate_property_offer_action" model="ir.actions.act_window">
            <field name="name">Property offer</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="estate_tree_view" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree string="Real Estate" decoration-success="state in ('offer_recieved', 'offer_accepted')" decoration-muted="state == 'sold'" decoration-bf="state == 'offer_accepted'">
                    <field name="name" />
                    <field name="description" />
                    <field name="postcode"/>
                    <field name="bedrooms" />
                    <field name = "living_area"></field>
                    <field name = "tag_ids" widget="many2many_tags" options="{'color_field':'color'}"></field>
                    <field name = "expected_price"></field>
                    <field name = "selling_price"></field>
                    <field name = "date_availability"></field>
                    <field name = "garden_area" optional = 'hide'></field>
                    <field name="state" invisible='1'/>
                </tree>
            </field>
        </record>

        <record id="estate_search_view" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Real Estate">
                    <field name="name" />
                    <field name="description" />
                    <field name="postcode"/>
                    <field name="bedrooms" />
                    <field name = "living_area" filter_domain="[('living_area', '>=', self)]"/>
                    <field name = "expected_price"/>
                    <field name = "selling_price"/>
                    <filter string="Available" name="available" domain="[('state', 'in', ('new', 'offer_received'))]"/>

                    <filter string="Postcode" name="postcode" domain="[('postcode', '>' , '0')]">
                    </filter>
                    <group string= "Group By">
                        <filter name='name' string='Name' context="{'group_by':'name'}"/>
                        <filter name='garden' string='Garden' context="{'group_by':'garden'}"/>
                        <filter name='garage' string='Garage' context="{'group_by':'garage'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="estate_kanban_view" model="ir.ui.view">
            <field name="name">estate.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <kanban default_group_by="property_type_id" records_draggable="0">
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <field name="name" />
                                <div>
                                   expected price :<field name="expected_price"/>
                                </div>
                                <div t-if="record.state.raw_value == 'offer_accepted'">
                                    selling price :<field name="selling_price" />
                                </div>
                                <div t-if="record.state.raw_value == 'offer_recieved'">
                                    Best price: <field name="best_price"/>
                                </div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="estate_form_view" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="sold_action" type="object" string="Sold"/>
                        <button name="cancel_action" type="object" string="Cancel"/>
                        <field name="state" widget="statusbar" options="{'clickable':'1'}"></field>
                    </header>
                    <sheet>
                        <field name="image" widget='image' class="oe_avatar bg-white" nolabel="1"/>
                        <widget name="web_ribbon" title="Sold" bg_color="bg-success" attrs="{'invisible': [('state', 'not in', ('sold'))]}"/>
                        <widget name="web_ribbon" title="Cancel" bg_color="bg-danger" attrs="{'invisible': [('state', 'not in', ('cancel'))]}"/>
                        <label for="name" string="Name:"></label>
                        <h1>
                            <field name="name"></field>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"></field>

                        <group>
                            <group>
                                <field name="status"></field>
                                <field name="date_availability"></field>
                                <field name="selling_price"></field>
                                <field name="property_type_id"></field>
                            </group>
                            <group>
                                <field name="postcode"></field>
                                <field name="expected_price"></field>
                                <field name="best_price"></field>
                                <field name="company_id"></field>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"></field>
                                    <field name="living_area"></field>
                                    <field name="facades"></field>
                                    <field name="bedrooms"></field>
                                    <field name="garage"></field>
                                    <field name="total_area"></field>
                                </group>
                            </page>

                            <page string="Other Info">
                                <group>
                                    <field name="salesman_id" widget="many2one_avatar"></field>
                                    <field name="buyer_id"></field>
                                </group>
                            </page>

                            <page string="Offers">

                                <field name ="offer_ids" type="xml" nolabel="1" attrs="{'readonly': [('state','in', ('offer accepted', 'sold', 'cancel'))]}">
                                    <tree expand="1" editable="top" decoration-success="status == 'accepted'" decoration-danger="status == 'refused'">
                                        <field name="price"></field>
                                        <field name="partner_id" widget="many2one_avatar"></field>
                                        <field name="status"></field>
                                        <field name="validity"></field>
                                        <button name="accept_action" type="object" icon="fa-check" title="Accept" attrs="{'invisible': [('status', '!=', False)]}"/>
                                        <button name="refused_action" type="object" icon="fa-times" title="Refused" attrs="{'invisible': [('status', '!=', False)]}"/>
                                        <field name="date_deadline"></field>
                                        <!-- <field name="create_date"></field> -->
                                    </tree>
                                </field>
                            </page>

                            <page string="Garden Details">
                                <group>
                                    <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"></field>
                                </group>
                                <group>
                                    <field name="garden"></field>
                                </group>
                                <group>
                                    <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"></field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>