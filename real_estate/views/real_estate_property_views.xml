<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="real_estate_property_search" model="ir.ui.view">
        <field name="name">real.estate.property.search</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <search string="Property" >
                <field name="name" string="Property Name"/>
                <field name="expected_price"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="facades"/>
                <field name="state"/>
                <field name="living_area" filter_domain="[('living_area','&gt;=',self)]"/>
                <field name="type_id"/>
               <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <separator/>
                <group string="Group By">
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="real_estate_property_view_tree" model="ir.ui.view">
        <field name="name">real.estate.property.tree</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel" decoration-success="state in ('offer_received','offer_accepted')" decoration-muted="state=='sold'" decoration-bf="state=='offer_accepted'" >
                <field name="name"/>
                <field name="date_availability" optional="hidden"/>
                <field name="best_offer"/>
                <field name="state"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="total_area"/>
                <field name="garden_orientation"/>
            </tree>
        </field>
    </record>
    <record id="real_estate_property_view_form" model="ir.ui.view">
        
        <field name="name">real.estate.property.form</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_state_sold" states="new,offer_received,offer_accepted" type="object" string="Sold"/>

                    <button name="action_state_canceled" states="new,offer_received,offer_accepted" type="object" string="Cancel"/>

                </header>
                <sheet>
                   
                    <h1>
                        <field name="name" placeholder="Property Name"/>
                    </h1>
                    <group>
                        <field name="tags_ids" options="{'color_field':'color'}" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="best_offer"/>
                    </group>
                    <group>
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="date_availability" />
                        </group>
                        <group>
                            <!-- <field name="state"/> -->
                        </group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="type_id" options="{'no_create':True}"/>
                        </group>
                    <notebook>
                        <page name="Description">
                            <group>                      
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="bedrooms"/>
                            </group>
                            <group>
                                <field name="living_area"/>
                            </group>
                            <group>
                                <field name="facades"/>
                            </group>
                            <group>
                                <field name="garage"/>
                            </group>
                            <group>
                                <field name="garden"/>
                            </group>
                            <group>
                                <field name="garden_area" attrs="{'invisible':[('garden','=',False)]}"/>
                            </group>
                            <group>
                                <field name="total_area"/>
                            </group>
                            <group>
                                <field name="garden_orientation" attrs="{'invisible':[('garden','=',False)]}"/>
                            </group> 
                        </page>
                        <page name="Other Info">
                            <group>
                                <field name="salesman_id"/>
                            </group>
                            <group>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                        <page name="Offer">
                           
                                <field name="offers_ids" attrs="{'readonly':[('state','in',('offer_accepted','sold','canceled'))]}" editable="bottom"/>
                           
                        </page>
                    </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
   
    <record id="real_estate_property_view" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">real.estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active':'True','search_default_bar':2}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define a new property
          </p>
          <p>
            Enter property area,garden orientation,etc.
          </p>
        </field>
    </record>
   
</odoo>