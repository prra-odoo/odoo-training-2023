<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FOR SEARCHING -->
    <record id="view_real_estate_property_search" model="ir.ui.view">
        <field name="name">real_estate_search_module</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="property_type_id"/>
                <!-- <field name="description"/> -->
                <!-- <field name="date_availability"/> -->
                <field name="expected_price"/>
                <!-- <field name="selling_price"/> -->
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <!-- <field name="garage"/>
                <field name="garden_orientation"/>
                <field name="state"/> -->
                <filter string="Archived" name="active" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="bedrooms" name="bedrooms" domain="[('bedrooms', '&gt;', 0 )]" invisible="1"/>
                <filter string="Garage" name="garage" domain="[('garage', '=', True)]" invisible="1"/>
                <!-- <filter name="state" string="State" domain="['|',('state', '=', 'new') ,('state' ,'=', 'offer_accepted')]" /> -->
                <filter name="state" string="Available" domain="[('state', 'in', ['new' , 'offer_accepted'])]" />
                <filter string="Garden" name="garden" domain="[('garden', '=', True)]" invisible="1"/>
                <group string="Group By">
                    <filter string="postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- FOR TREE VIEW -->
    <record id="real_estate_property_view_tree" model="ir.ui.view">
        <field name="name">real.estate.tree</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel" default_order="name,id desc" decoration-success="state in ['offer_received','offer_accepted']" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'">
                <field name="name" string="Title"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="state"  invisible="1"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="description" invisible="1"/>
                <field name="date_availability" string="Available From" optional="hidden"/>
                <field name="facades"  invisible="1"/>
                <!-- <field name="garage"/> -->
                <field name="garden_orientation"  invisible="1"/>
            </tree>
        </field>
    </record>
    <!-- FOR FORM VIEW -->
    <record id="real_estate_property_view_form" model="ir.ui.view">
        <field name="name">real.estate.form</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="action_sold_porperty" states="new,offer_received,offer_accepted" class="oe_highlight" type="object" string="SOLD"/>
                    <button name="action_cancel_porperty" states="new,offer_received,offer_accepted" type="object" string="CANCEL"/>
                    <field name="state" widget="statusbar" options="{'clickable' : '1'}"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="sold" attrs="{'invisible': ['!',('state', '=', 'sold')]}" />
                    <widget name="web_ribbon" bg_color="bg-danger" title="canceled" attrs="{'invisible': ['!',('state', '=', 'canceled')]}" />
                    <h1>
                        <field name="name" />
                    </h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="property_type_id" options="{'no_create':True , 'no_quick_create':True , 'no_create_edit':True}"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price" string="Best Offer"/>
                            <field name="selling_price"/>
                            <!-- <field name="state" decoration-danger="expected_price &lt; 10"/> -->
                        </group>
                        <notebook>
                            <page name="Description" string="Description">
                                <group>
                                    <group>
                                        <field name="description" string="Description"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area" string="Living Area(sqm)"/>
                                        <field name="facades"/>
                                        <field name="tatal_area" string="Total Area(sqm)" />
                                        <field name="garage"/>
                                    </group>
                                    <group>
                                        <field name="garden"/>
                                        <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                        <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                        <field name="active" invisible="1"/>
                                    </group>
                                </group>
                            </page>
                            <page name="Offers">
                                <field name="offer_ids" nolabel="1" attrs="{'readonly' : [('state','in',['offer_accepted','sold','canceled'])]}"/>
                            </page>
                            <page name="other info" string="Other info">
                                <group>
                                    <group>
                                        <field name="salesperson_id"/>
                                        <field name="buyer_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>