<odoo>
    <data>
        <record id="property_type_view" model="ir.ui.view">
            <field name="name">Tree.View</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <tree string="Property Types">
                    <field name="sequence" widget="handle"/>
                    <field name = "name" />
                    <field name="offer_count"/>
                </tree>
            </field>
        </record>
        <record id="model_property_type_view_tree" model="ir.ui.view">
            <field name="name">Tree.View</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(property_offer_action)d" type="action" class="oe_stat_button" icon="fa-money">
                                <span widget="statinfo">
                                    <h3>offers</h3>
                                </span>
                                <field name="offer_count"></field>
                            </button>
                        </div>
                        <label for="name" string="Name"/>
                        <h1>
                            <field name="name" placeholder="Name" />

                        </h1>
                        <notebook>
                            <page string="Details">
                                <field name="details" type="xml">
                                    <tree expand='1'>
                                        <field name="name"/>
                                        <field name="postcode"/>
                                        <field name="salesperson_id" widget="many2one_avatar"/>
                                        <field name="buyer_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                </form>
            </field>
        </record>
    </data>
</odoo>
