<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="property_offer_tree_view" model="ir.ui.view">
        <field name="name">Property Offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offer" editable="bottom" decoration-danger="status == 'refused'"
                                                            decoration-success="status == 'accepted'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status" invisible="1"/>
                <button name="action_accept" type="object" string=" " icon="fa-check" attrs="{'invisible': [('status', '!=', False)]}"/>
                <button name="action_refused" type="object" string=" " icon="fa-times" attrs="{'invisible': [ ('status', '!=', False)]}"/>
                <field name="validity"/>
                <field name="date_deadline"/>
            </tree>
        </field>
    </record>
    <record id="property_offer_form_view" model="ir.ui.view">
        <field name="name">New Offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="New Offer">
                <sheet>
                    <group>
                        <field name="price"/>
                    </group>
                    <group>
                        <field name="partner_id"/>
                    </group>
                    <group>
                        <field name="status"/>
                    </group>
                    <group>
                        <field name="validity"/>
                    </group>
                    <group>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>