<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<!--tree view_mode -->

    <record id="property_type_view_tree" model="ir.ui.view">
        <field name="name">property.type.view.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Estate_Property">
                <field name="sequence" widget="handle"/>
               <field name="name"/>
               <field name="offer_ids"/>
               <!-- <field name="offer_count"/> -->
            </tree>
        </field>
    </record>


<!-- form view -->

    <record id="property_type_view_form" model="ir.ui.view">
        <field name="name">property.type.view.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Estate Property"> 
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        
                            <button name="%(estate_property_offer_action)d" type="action" class="oe_stat_button"  icon="fa-dollar">
                                <field string="Offers" name="offer_count" widget="statinfo"/>
                            </button>
                        </div>
                            <h1>
                                <field name="name"/>
                            </h1>                    
                        
                        <notebook>
                            <page string="Properties">

                                <field name="property_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="expected_price"/>
                                        <field name="status"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>