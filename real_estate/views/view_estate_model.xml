<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="test_model_action" model="ir.actions.act_window">
            <field name="name">Real Estate</field>
            <field name="res_model">real.estate</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_available': True}</field>
        </record>

        <record id="property_test_model_action" model="ir.actions.act_window">
            <field name="name">Advertisements</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a New Property !!
                </p>
            </field>
        </record>

        <record id="property_offer_action" model="ir.actions.act_window">
            <field name="name">Offer</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name='domain'>[('property_type_id', '=', active_id)]</field>

        </record>

        <record id="property_test_model_action3" model="ir.actions.act_window">
            <field name="name">Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="property_test_model_action4" model="ir.actions.act_window">
            <field name="name">Property Tags</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record id="model_view_tree" model="ir.ui.view">
            <field name="name">Tree.View</field>
            <field name="model">real.estate</field>
            <field name="arch" type="xml">
                <tree string="Real Estate" decoration-success="state in ('offer_received', 'offer_accepted')" decoration-muted="state == 'sold'" decoration-bf="state == 'offer_accepted'" decoration-danger="state=='cancel'">
                    <field name="name" />
                    <field name="description" />
                    <field name="postcode" optional='hide' />
                    <field name="date_availability" optional='hide' />
                    <field name="expected_price" optional='hide' />
                    <field name="selling_price" optional='hide' />
                    <field name="bedrooms" />
                    <field name="living_area"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="state" invisible='1'/>
                </tree>
            </field>
        </record>


        <record id="model_view_form" model="ir.ui.view">
            <field name="name">Form View</field>
            <field name="model">real.estate</field>
            <field name="arch" type="xml">
                <form string="Real Estate">
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable':'1'}"/>
                        <button name="sold_button" widget="statusbar" options="{'clickable':'1'}"
                            string='Sold' type='object' />
                            
                        <button name="cancel_button" widget="statusbar" options="{'clickable':'1'}"
                            string='Cancel' type='object' />
                        <button type="action" name="%(property_offer_action)d" string="Redirect" />
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="cancel" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                        <widget name="web_ribbon" title="sold" bg_color="bg-success" attrs="{'invisible': [('state', '!=', 'sold')]}"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="active" invisible='1' />
                        <label for="name">Name</label>
                        <h1>
                            <field name="name" />
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"></field>
                        <group>
                            <group>
                                <field name="postcode" />
                                <field name="date_availability" date='create_date' />
                                <field name="expected_price" />
                                <field name="selling_price" />
                            </group>
                            <group>
                                <field name="best_offer" />
                                <field name="name" options="{'no_create': True}" />
                                <field name="property_type_id" options="{'no_create': True}" />
                                <field name="status" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"></field>
                                </group>
                                <group>
                                    <group>
                                        <field name="bedrooms"></field>
                                        <field name="facades" />
                                        <field name="total_area" />

                                    </group>
                                    <group>
                                        <field name="garage" />
                                        <field name="living_area" />
                                    </group>
                                </group>
                            </page>
                            <page string="Offers">

                                <field name="offer_ids" attrs="{'readonly': [('state','in', ('offer_accepted', 'sold', 'cancel'))]}">
                                    <tree editable='bottom' decoration-success="status == 'accepted'" decoration-danger="status == 'refused'">
                                        <field name="price" />
                                        <field name="partner_id" />
                                        <button name="offer_accepted" title = "Accept" type="object" icon="fa-check" attrs="{'invisible': [('status', '!=', False)]}"/>
                                        <button name="offer_refused" title = "Refuse" type="object" icon="fa-times" attrs="{'invisible': [('status', '!=', False)]}"/>
                                        <field name="status" />
                                        <field name="validity" />
                                        <field name="property_type_id" />
                                        <field name="date_deadline" />
                                    </tree>
                                </field>

                            </page>
                            <page string="Garden">
                                <group>
                                    <group>
                                        <field name="garden" />
                                        <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    </group>
                                    <group>
                                        <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Other Information">
                                <group>
                                    <field name="buyer_id" />
                                    <field name="salesperson_id" widget='many2one_avatar' />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />

                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>

        <record id="real_estate_search" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">real.estate</field>
            <field name="arch" type="xml">
                <search string="Real Estate">
                    <field name="name" />
                    <field name="date_availability" />
                    <field name="selling_price" />
                    <field name="bedrooms" />
                    <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>

                    <filter string="Garden" name="garden" domain="[('garden', '=', True)]" />
                    <separator />
                    <filter string="Bedrooms" name="bedrooms" domain="[('bedrooms', '&lt;', 3)]" />
                    <separator />
                    <filter string="Archived" name="active" domain="[('active', '=', False)]" />
                    <separator />
    
                    <filter string="selling price" name="selling_price"
                        domain="[('selling_price', '>', '50')]" />
                    <filter string="Available" name="available" domain="[('state', 'in', ('new', 'offer_received'))]"/>

                    <group expand="1" string="Group By">
                        <filter string="Post Code" name="postcode" context="{'group_by':'postcode'}" />
                        <separator />
                        <filter name="date_availability" string="Creation Date"
                            context="{'group_by': 'create_date'}" />
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>
