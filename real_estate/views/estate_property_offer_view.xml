<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<!--tree view_mode -->

    <record id="property_offer_view_tree" model="ir.ui.view">
        <field name="name">property.offer.view.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Estate_Property" editable="top" decoration-danger="states == 'refused'" decoration-success="states == 'accepted'">
                <field name="price"/>
                <field name="partner_id" string="partner"/>
                <button name="action_accepted" type="object" title="ac" icon="fa-check" attrs="{'invisible': [('states', 'in', ['accepted','refused'])]}"/>
                <button name="action_refuse" type="object" title="ar" icon="fa-times" attrs="{'invisible': [('states', 'in', ['accepted','refused'])]}"/>
                <field name="states" invisible="1"/>
                <field name="validity"/>  
                <field name="property_type_id"/>  
                <field name="date_deadline"/>
            </tree>
        </field>
    </record>


<!-- form view -->

    <record id="property_offer_view_form" model="ir.ui.view">
        <field name="name">property.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property"> 
                        <group>
                            <group>
                                <field name="price"/>
                                <field name="partner_id"/>
                                
                            </group>
                            <group>
                                <field name="states"/>
                                <field name="validity"/>
                            </group>
                            <group>
                                <field name="date_deadline"/>
                            </group>
                        </group>
            </form>
        </field>
    </record>


</odoo>