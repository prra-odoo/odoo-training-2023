<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="real_estate_model_action" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Property, the first step of a new property!
            </p>
        </field>
    </record>
    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Task 1</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Property, the first step of a new property!
            </p>
        </field>
    </record>
    <record id="estate_model_action_property_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Property, the first step of a new property!
            </p>
        </field>
    </record>
    <record id="estate_model_action_property_tags" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Property, the first step of a new property!
            </p>
        </field>
    </record>
    <record id="estate_model_action_offer" model="ir.actions.act_window">
        <field name="name">Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id','=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Property, the first step of a new property!
            </p>
        </field>
    </record>

    <menuitem id="estate_menu_root" name="Real Estate" sequence= "10" action="real_estate_model_action" web_icon="real_estate,static/description/odoo.png">

        <menuitem id="estate_first_level_menu" name="Property">
        <menuitem id="estate_model_menu_action" action="estate_model_action"/>
        
    </menuitem>

    <menuitem id="estate_menu_child" name="Settings">
        <menuitem id="estate_model_menu_property_type" action="estate_model_action_property_type"/>
        <menuitem id="estate_model_menu_sub_action" action="estate_model_action_property_tags"/>
    </menuitem>

     <!-- <menuitem id="estate_menu_child_task" name= "Offer" action="estate_model_action_offer"/> -->
       
</menuitem>
</odoo>