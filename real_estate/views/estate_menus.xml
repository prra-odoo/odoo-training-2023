<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Estate Properties Action -->
    <record id="properties_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">
            {'search_default_available':True}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Create a new Property
            </p>
        </field>
    </record>

    <!-- Property Type Action -->
    <record id="property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Property Tags Action -->
    <record id="property_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Property Offers Action -->
    <record id="property_offers_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain" >
            [('property_type_id', '=', active_id)]
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="real_estate_root" name="Real Estate" web_icon="real_estate,static/description/icon.svg">
        <menuitem id="test_first_level_menu" name="Advertisement">
            <menuitem id="properties_menu_action" action="properties_action" name="Properties"/>
        </menuitem>
        <menuitem id="setting_menu" name="Setting" groups="real_estate.estate_group_manager">
            <menuitem id="property_types_menu_action" action="property_type_action" name="Property Types" />
            <menuitem id="property_tags_menu_action" action="property_tag_action" name="Property Tags" />
        </menuitem>
    </menuitem>
</odoo>
