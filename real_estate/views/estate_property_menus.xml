<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="property_list_action" model="ir.actions.act_window">
        <field name="name">Property List</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Property !!!!
            </p>
        </field>
    </record>
    <record id="property_types_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Property Type !!!!
            </p>
        </field>
    </record>
    <record id="property_tags_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Property Tag !!!!
            </p>
        </field>
    </record>
    <record id="offers_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Property Offer !!!!
            </p>
        </field>
    </record>

    <menuitem id="real_estate_root" name="Real Estate" web_icon="real_estate,./static/description/icon.png">
        <menuitem id="property_menu" name="Property">
            <menuitem id="property_list_menu_action" action="property_list_action"/>
        </menuitem>
        <menuitem id="setting_menu" name="Setting">
            <menuitem id="property_types_menu_action" action="property_types_action" groups="estate_group_manager"/>
            <menuitem id="property_tags_menu_action" action="property_tags_action" groups="estate_group_manager"/>
        </menuitem>
        <!-- <menuitem id="offers_menu" name="Offers" action="offers_action"/> -->
    </menuitem>
</odoo>
