<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
      

        <record id="estate_property_view_tree" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree string="Properties" decoration-danger="state == 'cancel'"
                    decoration-success="state in ('received', 'accepted')"
                    decoration-muted="state == 'sold'" decoration-bf="state == 'accepted'">
                    <field name="name" />
                    <field name="property_type_id" />
                    <field name="postcode" />
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                    <field name="bedrooms" />
                    <field name="living_area" />
                    <field name="expected_price" />
                    <field name="selling_price" />
                    <field name="date_availability" optional="hide" />
                    <field name="state" invisible="1" />

                </tree>
            </field>
        </record>

        <record id="estate_view_form" model="ir.ui.view">
            <field name="name">estate.view.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Real Estate">
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable' : '1'}"></field>
                        <button name="action_sold" type="object" string="Sold" />
                        <button name="action_cancel" type="object" string="Cancel" />
                        <button type="action" name="%(estate_model_action_property_type)d"
                            string="Go" />

                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Sold" bg_color="bg-success"
                            attrs="{'invisible': [('state', 'not in', ('sold'))]}" />
                        <widget name="web_ribbon" title="Cancel" bg_color="bg-danger"
                            attrs="{'invisible': [('state', 'not in', ('cancel'))]}" />
                        <widget name="web_ribbon" title="Available" bg_color="bg-info"
                            attrs="{'invisible': [('state', 'not in', ('received'))]}" />

                        <label for="name" string="Name" />
                        <h1>
                            <field name="name" placeholder="Name"></field>
                        </h1>

                        <field name="tag_ids" widget="many2many_tags"
                            options="{'color_field': 'color'}"></field>

                        <group>
                            <group>
                                <field name="status"></field>
                                <field name="property_type_id"
                                    options="{'no_create_edit': True, 'no_create': True}"></field>
                                <field name="postcode"></field>
                                <field name="date_availability"></field>
                            </group>
                            <group>
                                <field name="expected_price"></field>
                                <field name="best_price"></field>
                                <field name="selling_price"></field>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <group>
                                        <field name="garage"></field>
                                        <field name="bedrooms"></field>
                                        <field name="description"
                                            placeholder="Description"></field>
                                    </group>
                                    <group>
                                        <field name="facades"></field>
                                        <field name="living_area"></field>
                                    </group>
                                </group>
                            </page>
                            <page string="Garden">

                                <group>
                                    <group>
                                        <field name="garden"></field>
                                        <field name="garden_area"
                                            attrs="{'invisible': [('garden', '=', False)]}"></field>
                                    </group>
                                    <group>
                                        <field name="garden_orientation"
                                            attrs="{'invisible': [('garden', '=', False)]}"></field>
                                        <field name="total_area"></field>
                                    </group>
                                </group>
                            </page>
                            <page string="Offer">

                                <field name="offer_ids" type="xml"
                                    attrs="{'readonly': [('state', 'in', ('accepted', 'sold', 'cancel'))]}">
                                    <tree expand="1" editable='bottom'
                                        decoration-success="status == 'accepted'"
                                        decoration-danger="status == 'refused'">
                                        <field name="price"></field>
                                        <field name="partner_id" />
                                        <field name="property_id"></field>
                                        <field name="property_type_id"></field>
                                        <field name="validity"></field>
                                        <field name="date_deadline"></field>
                                        <button name="action_accept" type="object" icon='fa-check' title="Accept"
                                            attrs="{'invisible': [('status', '!=', False)]}" />

                                        <button name="action_refused" type="object" icon='fa-times' title="cancel"
                                            attrs="{'invisible': [('status', '!=', False)]}" />

                                        <field name="status" />

                                    </tree>
                                </field>

                            </page>
                            <page string="Other Info">
                                <group>
                                    <group>
                                        <field name="salesman_id" widget="many2one_avatar"></field>
                                        <field name="buyer_id" widget="many2one_avatar"></field>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="estate_view_search" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Real_Estate">
                    <field name="name"></field>
                    <field name="postcode"></field>
                    <field name="expected_price"></field>
                    <field name="bedrooms"></field>
                    <field name="living_area" filter_domain="[('living_area', '>=', self)]"></field>
                    <field name="description"></field>
                    <field name="facades"></field>

                    <separator />
                    <filter string="Active" name="active" domain="[('garage', '=', True)]" />
                    <filter string="Available" name="available"
                        domain="['|',('state', '=', 'new'),('state', '=', 'received')]" />
                    <group string="Group By">
                        <filter string="Bed Rooms" name="bedrooms" context="{'group_by':'bedrooms'}" />
                        <filter string="Name" name="name" context="{'group_by':'name'}" />
                        <filter name="selling_price" string="Selling Price"
                            context="{'group_by':'selling_price'}" />
                        <filter name="expected_price" string="Expected Price"
                            context="{'group_by':'expected_price'}" />
                    </group>
                    <!-- <searchpanel>
                        <field name="state" icon="fa-users"
                    />

                    </searchpanel> -->
                </search>
            </field>
        </record>

    </data>
</odoo>