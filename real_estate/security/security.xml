        <record model="ir.rule" id="saleperson_id_only">
            <field name="name">Saleperson</field>
            <field name="model_id" ref="model_estate_property" />
            <field name="groups" eval="[(4,ref('real_estate.estate_group_manager'))]" />
            <field name="domain_force">[('salesperson_id','=',user.id)]</field>
            <field name="perm_read" eval="True" />
            <field name="perm_write" eval="False" />
            <field name="perm_create" eval="False" />
            <field name="perm_unlink" eval="False" />

        </record>

        <record model="ir.rule" id="company_id_model_data">
            <field name="name">Company</field>
            <field name="model_id" ref="model_estate_property" />
            <field name="domain_force">[('company_id','in',company_ids)]</field>
