<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4,ref('estate_group_user'))]"/>
    </record>

    <record id="record_rule_agent" model="ir.rule">
        <field name="name">Record rules for agents to be applied on estate module</field>
        <field name="model_id" ref="model_estate_properties"/>
        <field name="groups" eval="[(4, ref('estate_group_user'))]"/>
        <field name="domain_force">['|', ('salesperson_id', '=', user.id),('salesperson_id', '=', False)]</field>
    </record>

    <record id="record_rule_manager" model="ir.rule">
        <field name="name">Record rules for managers to be applied on estate module</field>
        <field name="model_id" ref="model_estate_properties"/>
        <field name="groups" eval="[(4, ref('estate_group_manager'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>

    <record id="record_rule_multi_company" model="ir.rule">
        <field name="name">Record rules for multi-company</field>
        <field name="model_id" ref="model_estate_properties"/>
        <field name="domain_force">[
        '|', ('company_id', '=', False),
             ('company_id', 'in', company_ids)
    ]</field>
    </record>

</odoo> 
