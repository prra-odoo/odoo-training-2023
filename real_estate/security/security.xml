<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(6,0, [ref('estate_group_user')])]"/>
    </record>

    <record id="property_salesperson_access_rule" model="ir.rule">
        <field name="name">Property Salesperson Access</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">['|',('salesman_id', '=', user.id) , ('salesman_id', '=', False)]</field>
    </record>

    <record id="new_property_access_rule" model="ir.rule">
        <field name="name">Property restricted rule</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>