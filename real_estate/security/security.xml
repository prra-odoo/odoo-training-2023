<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.module.category" id="base.module_category_real_estate_brokerage">
        <field name="description">Enable the user to see and manage the Properties.</field>
    </record>
    <record id="real_estate.estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
    </record>
    <record id="real_estate.estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[(4, ref('real_estate.estate_group_user'))]"/>
    </record>
    <record id="ir_rule_real_estate_user" model="ir.rule">
        <field name="name">Real Estate: Agent</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="domain_force">[('salesperson_id', 'in', [user.id, False])]</field>
        <field name="groups" eval="[(4, ref('real_estate.estate_group_user'))]" />
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="ir_rule_real_estate_manager" model="ir.rule">
        <field name="name">Real Estate: Manager</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="groups" eval="[(4, ref('real_estate.estate_group_manager'))]" />
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
