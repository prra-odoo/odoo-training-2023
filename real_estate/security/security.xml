<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4,ref('estate_group_user'))]"/>
    </record>

    <record id="real_estate_id_manager" model="ir.rule"> 
        <field name="name">Manager can see and modify all the properties</field> 
        <field name="model_id" ref="model_estate_property"/> 
        <field name="groups" eval="[(4, ref ('real_estate.estate_group_manager'))]"/> 
        <field name="perm_read" eval="True"/> 
        <field name="perm_write" eval="True"/> 
        <field name="perm_create" eval="True"/> 
        <field name="perm_unlink" eval="True"/> 
        <field name="domain_force">[(1, '=', 1)]</field> 
    </record>

    <record id="real_etate_id_user" model="ir.rule">
        <field name="name">A description of the rule's role</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('real_estate.estate_group_user'))]"/>
        <field name="domain_force">[
            '|', ('salesmen_id', '=', user.id),
                 ('salesmen_id', '=', False)
        ]</field>
    </record>
</odoo>