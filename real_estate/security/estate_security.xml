<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[Command.set([ref('estate_group_user')])]"/>
    </record>

    <record id="rule_id" model="ir.rule">
        <field name="name">A rule for agent</field>
        <field name="model_id" ref="model_real_estate_properties"/>
        <field name="groups" eval="[(4, ref('estate_group_user'))]"/>
        <field name="domain_force">['|', ('user_id', '=', user.id),('user_id', '=', False)]
        </field>
    </record>


    <record id="rule_id_manager" model="ir.rule">
        <field name="name">A rule for Manager</field>
        <field name="model_id" ref="model_real_estate_properties"/>
        <field name="groups" eval="[(4, ref('estate_group_manager'))]"/>
        <field name="domain_force">[(1,'=',1)]
        </field>
    </record>

    <record id="rule_multi_company" model="ir.rule">
        <field name="name">A rule for multi-company</field>
        <field name="model_id" ref="model_real_estate_properties"/>
        <field name="domain_force">[
            '|', ('company_id', '=', False),
                 ('company_id', 'in', company_ids)
        ]
        </field>
    </record>
</odoo>