<?xml version="1.0"?>
<odoo>
<record id="wizard_view_form" model="ir.ui.view">
    <field name="name">wizard.view.form</field>
    <field name="model">estate.wizard</field>
    <field name="arch" type="xml">          
        <form >
         <group class="oe_title">
           <field name="price"/>
           <field name="partner_id"/>

         </group>
         <footer>
            <button name="offers" class= "btn btn-primary" type="object" string="Propose Change"/>
            <button string="Discard" class="btn-default btn-secondary" special="cancel" data-hotkey="z"/>
         </footer>
       </form>
   </field>
</record>
  <record id="estate_wizard_action" model="ir.actions.act_window">
      <field name="name">estate wizard action</field>
      <field name="res_model">estate.wizard</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="wizard_view_form"/>
      <field name="target">new</field>
 </record>
 
</odoo>
