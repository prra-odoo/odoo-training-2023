<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <record id="wizard_form_view_id" model="ir.ui.view">
        <field name="name">Wizard form</field>
        <field name="model">property.estate.offers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price" string="Price"/>
                        <field name="validity" string="Validity(Days)"/>
                        <field name="date_deadline" string="Deadline"/>
                        <field name="partner_id" string="Partner"/>
                    </group>
                </sheet>
                <footer>
                    <button name="add_offer" type="object" string="Make an offer" class="btn btn-primary"/>
                    <button special="cancel" string="Cancel"  class="btn btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>