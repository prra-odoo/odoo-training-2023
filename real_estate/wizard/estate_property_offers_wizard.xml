<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="estate_property_offers_wizard" model="ir.actions.act_window">
        <field name="name">Add Offers</field>
        <field name="res_model">estate.property.offers.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="estate_property_offers_wizard_form" model="ir.ui.view">
        <field name="name">estate property offers wizard form</field>
        <field name="model">estate.property.offers.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </group>
                <footer>
                    <button string="Make an Offer" type="object" name="estate_property_add_offer_btn" class="btn btn-primary" />
                </footer>
            </form>
        </field>
    </record>
</odoo>