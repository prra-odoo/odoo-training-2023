<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_wizard_view_form" model="ir.ui.view">
        <field name="name">estate.property.wizard.form</field>
        <field name="model">estate.property.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group class="oe_title">
                    <field name="price"/>
                    <field name="status"/>
                    <field name="partner_id"/>
                </group>
                <footer>
                    <button string="Make an offer" name="make_an_offer" type="object" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>