<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="estate_user_report">
        <t t-foreach="docs" t-as="record">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="border: 5px solid ;">
                        <span t-field="record.name"/>
                    </div>
                    <t t-set="properties" t-value="user.mapped('property_ids')"/>
                    <tr t-foreach="properties" t-as="property">
                        <div style="border: 2px solid gray; margin-top: 100px">
                            <div>
                                <span t-field="property.name" style="font-size: 40px; font-weight: 600; padding: 10px"></span>
                            </div>
                            <div style="font-size: 20px; font-weight: 500; padding: 10px">
                            Salesperson :
                                <span t-field="property.user_id"></span>
                            </div>
                            <div style="font-size: 20px; font-weight: 500; padding: 10px">
                            Expected Price :
                                <span t-field="property.expected_price"></span>
                            </div>
                            <div style="font-size: 20px; font-weight: 500; padding: 10px">
                            Status :
                                <span t-field="property.state"></span>
                            </div>
                            <t t-call="real_estate.sub_report_property_offers"/>
                        </div>
                    </tr>
                </t>
            </t>
        </t>
    </template>
</odoo>
