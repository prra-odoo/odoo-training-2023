    <template id="report_properties_offers1"> 
       <table class="table">
           <thead>
               <tr>
                   <th>Price</th>
                   <th>Partner</th>
                   <th>Validity</th>
                   <th>Deadline</th>
                   <th>Status</th>
               </tr>
           </thead>
           <tbody>
               <t t-set="offers" t-value="property.mapped('offer_ids')"/>
               <tr t-foreach="offers" t-as="offer">
                   <td>
                       <span t-field="offer.price"/>                                        
                   </td>
                   <td>
                       <span t-field="offer.partner_id"/>
                   </td>
                   <td>
                       <span t-field="offer.validity"/>
                   </td>
                   <td>
                       <span t-field="offer.date_deadline"/>
                   </td>
                   <td>
                       <span t-field="offer.status"/>
                   </td>
               </tr>
           </tbody>
       </table>      
    </template>

    <template id="report_property_resusers">       
        <t t-foreach="docs" t-as="properties">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <strong>Salesmen : </strong>
                            <span t-field="properties.name"/>
                        </div>
                        <t t-foreach="properties.property_ids" t-as="pid">
                        <h2>
                            <span t-field="pid.name"/>
                        </h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="pid.expected_price"/>
                        </div>
                       
                        
                        <t t-if="pid.state !='new'">
                            <t t-set ="property" t-value="pid"/> 
